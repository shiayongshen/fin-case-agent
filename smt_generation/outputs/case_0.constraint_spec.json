[
  {
    "id": "insurance:capital_level",
    "desc": "保險業資本等級分類（1=資本適足, 2=資本不足, 3=資本顯著不足, 4=資本嚴重不足）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            [
              "DIV",
              "own_capital",
              "risk_capital"
            ],
            0.5
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            [
              "DIV",
              "own_capital",
              "risk_capital"
            ],
            0.5
          ],
          [
            "LT",
            [
              "DIV",
              "own_capital",
              "risk_capital"
            ],
            1.5
          ],
          [
            "OR",
            [
              "AND",
              [
                "LT",
                "net_worth_ratio_prev1",
                0.02
              ],
              [
                "LT",
                "net_worth_ratio_prev2",
                0.02
              ]
            ],
            [
              "AND",
              [
                "GE",
                "net_worth_ratio_prev1",
                0.0
              ],
              [
                "LT",
                "net_worth_ratio_prev1",
                0.02
              ],
              [
                "LT",
                "net_worth_ratio_prev2",
                0.03
              ]
            ]
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            [
              "DIV",
              "own_capital",
              "risk_capital"
            ],
            0.5
          ],
          [
            "LT",
            [
              "DIV",
              "own_capital",
              "risk_capital"
            ],
            2.0
          ],
          [
            "OR",
            [
              "AND",
              [
                "GE",
                "net_worth_ratio_prev1",
                0.02
              ],
              [
                "LT",
                "net_worth_ratio_prev1",
                0.03
              ],
              [
                "GE",
                "net_worth_ratio_prev2",
                0.03
              ]
            ],
            [
              "AND",
              [
                "GE",
                "net_worth_ratio_prev1",
                0.03
              ],
              [
                "GE",
                "net_worth_ratio_prev2",
                0.03
              ]
            ]
          ]
        ],
        2,
        [
          "AND",
          [
            "GE",
            [
              "DIV",
              "own_capital",
              "risk_capital"
            ],
            1.5
          ],
          [
            "LT",
            [
              "DIV",
              "own_capital",
              "risk_capital"
            ],
            2.0
          ]
        ],
        [
          "AND",
          [
            "GE",
            [
              "DIV",
              "own_capital",
              "risk_capital"
            ],
            2.0
          ],
          [
            "OR",
            [
              "GE",
              "net_worth_ratio_prev1",
              0.03
            ],
            [
              "GE",
              "net_worth_ratio_prev2",
              0.03
            ]
          ]
        ],
        1,
        0,
        0.0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_adequate",
    "desc": "資本適足：資本適足率≥200%且最近二期淨值比率至少一期≥3%",
    "expr": [
      "EQ",
      "capital_adequate",
      [
        "AND",
        [
          "GE",
          [
            "MUL",
            [
              "DIV",
              "own_capital",
              "risk_capital"
            ],
            100.0
          ],
          200.0
        ],
        [
          "OR",
          [
            "GE",
            "net_worth_ratio_prev1",
            3.0
          ],
          [
            "GE",
            "net_worth_ratio_prev2",
            3.0
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_insufficient",
    "desc": "資本不足：資本適足率在150%以上未達200%或最近二期淨值比率均未達3%且至少一期在2%以上",
    "expr": [
      "EQ",
      "capital_insufficient",
      [
        "OR",
        [
          "AND",
          [
            "GE",
            [
              "MUL",
              [
                "DIV",
                "own_capital",
                "risk_capital"
              ],
              100.0
            ],
            150.0
          ],
          [
            "LT",
            [
              "MUL",
              [
                "DIV",
                "own_capital",
                "risk_capital"
              ],
              100.0
            ],
            200.0
          ]
        ],
        [
          "AND",
          [
            "LT",
            "net_worth_ratio_prev1",
            3.0
          ],
          [
            "LT",
            "net_worth_ratio_prev2",
            3.0
          ],
          [
            "OR",
            [
              "GE",
              "net_worth_ratio_prev1",
              2.0
            ],
            [
              "GE",
              "net_worth_ratio_prev2",
              2.0
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_significantly_insufficient",
    "desc": "資本顯著不足：資本適足率在50%以上未達150%或最近二期淨值比率均未達2%且淨值比率均≥0",
    "expr": [
      "EQ",
      "capital_significantly_insufficient",
      [
        "OR",
        [
          "AND",
          [
            "GE",
            [
              "MUL",
              [
                "DIV",
                "own_capital",
                "risk_capital"
              ],
              100.0
            ],
            50.0
          ],
          [
            "LT",
            [
              "MUL",
              [
                "DIV",
                "own_capital",
                "risk_capital"
              ],
              100.0
            ],
            150.0
          ]
        ],
        [
          "AND",
          [
            "LT",
            "net_worth_ratio_prev1",
            2.0
          ],
          [
            "LT",
            "net_worth_ratio_prev2",
            2.0
          ],
          [
            "GE",
            "net_worth_ratio_prev1",
            0.0
          ],
          [
            "GE",
            "net_worth_ratio_prev2",
            0.0
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_severely_insufficient",
    "desc": "資本嚴重不足：資本適足率低於50%或淨值低於0",
    "expr": [
      "EQ",
      "capital_severely_insufficient",
      [
        "OR",
        [
          "LT",
          [
            "MUL",
            [
              "DIV",
              "own_capital",
              "risk_capital"
            ],
            100.0
          ],
          50.0
        ],
        [
          "LT",
          "net_worth",
          0.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_consistency",
    "desc": "資本等級依低等級原則決定",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "EQ",
          "capital_severely_insufficient",
          true
        ],
        4,
        [
          "EQ",
          "capital_significantly_insufficient",
          true
        ],
        3,
        [
          "EQ",
          "capital_insufficient",
          true
        ],
        2,
        [
          "EQ",
          "capital_adequate",
          true
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:level_4_measures_executed",
    "desc": "資本嚴重不足等級措施已執行",
    "expr": [
      "EQ",
      "level_4_measures_executed",
      [
        "EQ",
        "level_4_measures_done",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:level_3_measures_executed",
    "desc": "資本顯著不足等級措施已執行",
    "expr": [
      "EQ",
      "level_3_measures_executed",
      [
        "EQ",
        "level_3_measures_done",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:level_2_measures_executed",
    "desc": "資本不足等級措施已執行（提出增資或改善計畫且確實執行）",
    "expr": [
      "EQ",
      "level_2_measures_executed",
      [
        "AND",
        [
          "EQ",
          "capital_insufficient_plan_submitted",
          true
        ],
        [
          "EQ",
          "capital_insufficient_plan_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：資本不足等級達一定程度且未執行對應措施時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "capital_level",
            4
          ],
          [
            "NOT",
            [
              "EQ",
              "level_4_measures_executed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            3
          ],
          [
            "NOT",
            [
              "EQ",
              "level_3_measures_executed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            2
          ],
          [
            "NOT",
            [
              "EQ",
              "level_2_measures_executed",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]