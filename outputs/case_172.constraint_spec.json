[
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_severe_and_not_completed_improvement",
    "desc": "資本嚴重不足且未依主管機關規定期限完成增資、財務或業務改善計畫或合併",
    "expr": [
      "EQ",
      "capital_level_severe_and_not_completed_improvement",
      [
        "AND",
        [
          "EQ",
          "capital_level",
          4
        ],
        [
          "NOT",
          [
            "EQ",
            "capital_improvement_completed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_severe_and_not_completed_improvement_within_90_days",
    "desc": "資本嚴重不足且未完成改善計畫，應於期限屆滿次日起90日內為接管、勒令停業清理或命令解散",
    "expr": [
      "EQ",
      "capital_level_severe_and_not_completed_improvement_within_90_days",
      [
        "AND",
        [
          "EQ",
          "capital_level_severe_and_not_completed_improvement",
          true
        ],
        [
          "LE",
          "days_since_improvement_deadline",
          90.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_or_business_deterioration",
