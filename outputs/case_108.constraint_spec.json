    "expr": [
      "EQ",
      "violate_148_2_2",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "report_submitted_on_time",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "report_publicly_explained",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
