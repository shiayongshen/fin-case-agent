    "desc": "處罰條件：違反任一規定或資本不足等級未執行對應措施時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "violate_148_1_1_or_2",
          true
        ],
        [
          "EQ",
          "violate_148_2_1",
          true
        ],
        [
          "EQ",
          "violate_148_2_2",
          true
        ],
        [
          "EQ",
          "violate_148_3_1",
          true
        ],
        [
          "EQ",
          "violate_148_3_2",
          true
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            4
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_severely_insufficient_measures_executed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            3
          ],
          [
