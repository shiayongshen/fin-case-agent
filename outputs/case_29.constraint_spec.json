[
  {
    "id": "insurance:agent_license_and_guarantee_ok",
    "desc": "保險代理人、經紀人、公證人已取得主管機關許可、繳存保證金並投保相關保險，且領有執業證照",
    "expr": [
      "EQ",
      "agent_license_and_guarantee_ok",
      [
        "AND",
        [
          "EQ",
          "license_permitted",
          true
        ],
        [
          "EQ",
          "guarantee_deposited",
          true
        ],
        [
          "EQ",
          "related_insurance_purchased",
          true
        ],
        [
          "EQ",
          "license_issued",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:related_insurance_type_ok",
    "desc": "相關保險類型符合代理人、公證人及經紀人規定",
    "expr": [
      "EQ",
      "related_insurance_type_ok",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "is_agent",
            true
          ],
          [
            "EQ",
            "is_bond_insurance",
            false
          ],
          [
            "EQ",
            "is_liability_insurance",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "is_broker",
            true
          ],
          [
            "EQ",
            "is_bond_insurance",
            true
          ],
          [
            "EQ",
            "is_liability_insurance",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "is_not_agent_broker_or_notary",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_rules_compliance",
    "desc": "符合主管機關定之管理規則，包括資格、申請許可條件、程序、文件、董事監察人經理人資格、解任事由、分支機構條件、財務與業務管理、教育訓練、廢止許可及其他應遵行事項",
    "expr": [
      "EQ",
      "internal_rules_compliance",
      [
        "EQ",
        "management_rules_complied",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:bank_permit_and_separate_compliance",
    "desc": "銀行經主管機關許可擇一兼營保險代理人或保險經紀人業務，並分別準用相關規定",
    "expr": [
      "EQ",
      "bank_permit_and_separate_compliance",
      [
        "AND",
        [
          "EQ",
          "bank_permitted",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "bank_agent_compliance",
            true
          ],
          [
            "EQ",
            "bank_broker_compliance",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_duty_of_care_and_fidelity",
    "desc": "保險經紀人以善良管理人注意義務及忠實義務為被保險人洽訂保險契約或提供服務",
    "expr": [
      "EQ",
      "broker_duty_of_care_and_fidelity",
      [
        "AND",
        [
          "EQ",
          "broker_duty_of_care",
          true
        ],
        [
          "EQ",
          "broker_fidelity_duty",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_written_report_and_fee_disclosure",
    "desc": "保險經紀人於主管機關指定範圍內洽訂保險契約前，主動提供書面分析報告，收取報酬時明確告知報酬標準",
    "expr": [
      "EQ",
      "broker_written_report_and_fee_disclosure",
      [
        "AND",
        [
          "EQ",
          "written_report_provided",
          true
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "fee_charged",
            true
          ],
          [
            "EQ",
            "fee_disclosed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_finance_or_business_management",
    "desc": "違反財務或業務管理規定",
    "expr": [
      "EQ",
      "violation_finance_or_business_management",
      [
        "EQ",
        "violate_finance_or_business_management",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_broker_duty",
    "desc": "違反保險經紀人善良管理人注意義務或忠實義務",
    "expr": [
      "EQ",
      "violation_broker_duty",
      [
        "EQ",
        "violate_broker_duty",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_agent_or_broker_rules",
    "desc": "違反保險代理人或經紀人相關規定",
    "expr": [
      "EQ",
      "violation_agent_or_broker_rules",
      [
        "EQ",
        "violate_agent_or_broker_rules",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_duty_of_care_and_fidelity_management_rules",
    "desc": "經紀人管理規則第33條規定之善良管理人注意義務及忠實義務符合",
    "expr": [
      "EQ",
      "broker_duty_of_care_and_fidelity_management_rules",
      [
        "EQ",
        "broker_duty_management_rules_complied",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:document_retention_compliance",
    "desc": "經紀人及銀行應留存文件備查",
    "expr": [
      "EQ",
      "document_retention_compliance",
      [
        "EQ",
        "documents_retained",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:electronic_policy_contact_info_provided",
    "desc": "保險人以電子保單出單時，經紀人應取得要保人及被保險人聯絡方式並提供保險人",
    "expr": [
      "EQ",
      "electronic_policy_contact_info_provided",
      [
        "IMPLIES",
        [
          "EQ",
          "insurance_policy_electronic",
          true
        ],
        [
          "AND",
          [
            "EQ",
            "contact_phone_provided",
            true
          ],
          [
            "EQ",
            "contact_email_provided",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_operation_rules_compliance",
    "desc": "經紀人公司及銀行依法令及主管機關規定訂定內部作業規範並落實執行",
    "expr": [
      "EQ",
      "internal_operation_rules_compliance",
      [
        "EQ",
        "internal_operation_rules_followed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_operation_rules_include_elderly_protection",
    "desc": "內部作業規範包含保障65歲以上高齡消費者投保權益相關規定",
    "expr": [
      "EQ",
      "internal_operation_rules_include_elderly_protection",
      [
        "EQ",
        "elderly_protection_included",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_understanding_and_report_provided",
    "desc": "經紀人充分瞭解要保人及被保險人基本資料、需求及風險屬性，並依主管機關規定主動提供書面分析報告及報酬收取標準",
    "expr": [
      "EQ",
      "broker_understanding_and_report_provided",
      [
        "AND",
        [
          "EQ",
          "basic_info_understood",
          true
        ],
        [
          "EQ",
          "written_report_provided",
          true
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "fee_charged",
            true
          ],
          [
            "EQ",
            "fee_disclosed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_shareholding_disclosure",
    "desc": "經紀人於洽訂保險契約前揭露與保險公司持股超過10%之資訊",
    "expr": [
      "EQ",
      "broker_shareholding_disclosure",
      [
        "IMPLIES",
        [
          "EQ",
          "shareholding_over_10_percent",
          true
        ],
        [
          "EQ",
          "shareholding_disclosed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:agent_understanding_and_document_signing",
    "desc": "代理人確實瞭解要保人需求及商品適合度，並於文件簽章或其他電子方式完成",
    "expr": [
      "EQ",
      "agent_understanding_and_document_signing",
      [
        "OR",
        [
          "EQ",
          "agent_understanding_done",
          true
        ],
        [
          "EQ",
          "exempted_by_authority",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:agent_required_documents_compliance",
    "desc": "代理人相關文件符合主管機關指定範圍",
    "expr": [
      "EQ",
      "agent_required_documents_compliance",
      [
        "EQ",
        "agent_documents_compliant",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:agent_company_and_bank_document_verification",
    "desc": "代理人公司及銀行代收保費或辦理核保、理賠等業務時，確認執行業務文件正確性",
    "expr": [
      "EQ",
      "agent_company_and_bank_document_verification",
      [
        "EQ",
        "documents_verified",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反許可、保證金、保險投保、執業證照、管理規則、善良管理人義務、書面報告義務、文件留存、內部作業規範、揭露義務、文件簽章或文件確認等任一規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "agent_license_and_guarantee_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "related_insurance_type_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_rules_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "bank_permit_and_separate_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_duty_of_care_and_fidelity",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_written_report_and_fee_disclosure",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_duty_of_care_and_fidelity_management_rules",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "document_retention_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "electronic_policy_contact_info_provided",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_operation_rules_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_operation_rules_include_elderly_protection",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_understanding_and_report_provided",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_shareholding_disclosure",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "agent_understanding_and_document_signing",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "agent_required_documents_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "agent_company_and_bank_document_verification",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]