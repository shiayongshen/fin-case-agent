    "desc": "內部處理制度及程序確實執行",
    "expr": [
      "EQ",
      "internal_handling_executed",
      [
        "EQ",
        "internal_handling_system_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_operation_executed",
    "desc": "內部作業制度及程序確實執行",
    "expr": [
      "EQ",
      "internal_operation_executed",
      [
        "EQ",
        "internal_operation_system_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_control_ok",
    "desc": "建立並確實執行內部控制及稽核制度",
    "expr": [
      "EQ",
      "internal_control_ok",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_handling_ok",
    "desc": "建立並確實執行內部處理制度及程序",
    "expr": [
      "EQ",
      "internal_handling_ok",
      [
        "AND",
        [
          "EQ",
          "internal_handling_established",
          true
        ],
        [
          "EQ",
          "internal_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_operation_ok",
    "desc": "建立並確實執行內部作業制度及程序",
    "expr": [
      "EQ",
      "internal_operation_ok",
      [
        "AND",
        [
          "EQ",
          "internal_operation_established",
          true
        ],
        [
          "EQ",
          "internal_operation_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:violation_internal_systems",
    "desc": "違反內部控制、內部處理或內部作業制度規定",
    "expr": [
      "EQ",
      "violation_internal_systems",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_operation_ok",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:refuse_inspection",
    "desc": "拒絕檢查或拒絕開啟金庫或其他庫房",
    "expr": [
      "EQ",
      "refuse_inspection",
      [
        "EQ",
        "refused_inspection_or_opening",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:conceal_or_destroy_documents",
    "desc": "隱匿或毀損有關業務或財務狀況之帳冊文件",
    "expr": [
      "EQ",
      "conceal_or_destroy_documents",
      [
        "EQ",
        "concealed_or_destroyed_documents",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:uncooperative_response",
    "desc": "對檢查人員詢問無正當理由不為答復或答復不實",
    "expr": [
      "EQ",
      "uncooperative_response",
      [
        "EQ",
        "uncooperative_or_false_response",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:late_or_false_reporting",
    "desc": "逾期提報財務報告、財產目錄或其他有關資料及報告，或提報不實、不全或未於規定期限內繳納查核費用",
    "expr": [
      "EQ",
      "late_or_false_reporting",
      [
        "EQ",
        "late_or_false_or_incomplete_reporting",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:violation_inspection_reporting",
    "desc": "違反檢查、提報財務報告等規定",
    "expr": [
      "EQ",
      "violation_inspection_reporting",
      [
        "OR",
        [
          "EQ",
          "refuse_inspection",
          true
        ],
        [
          "EQ",
          "conceal_or_destroy_documents",
          true
        ],
        [
          "EQ",
          "uncooperative_response",
          true
        ],
        [
          "EQ",
          "late_or_false_reporting",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反內部制度規定或違反檢查提報規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "violation_internal_systems",
          true
        ],
        [
          "EQ",
          "violation_inspection_reporting",
          true
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]