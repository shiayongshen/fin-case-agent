[
  {
    "id": "insurance:internal_control_established_and_executed",
    "desc": "保險業建立並執行內部控制及稽核制度",
    "expr": [
      "EQ",
      "internal_control_ok",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_established_and_executed",
    "desc": "保險業建立並執行內部處理制度及程序",
    "expr": [
      "EQ",
      "internal_handling_ok",
      [
        "AND",
        [
          "EQ",
          "internal_handling_established",
          true
        ],
        [
          "EQ",
          "internal_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level",
    "desc": "保險業資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足, 0=未分類）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "OR",
          [
            "AND",
            [
              "GE",
              "capital_adequacy_ratio",
              150.0
            ],
            [
              "LT",
              "capital_adequacy_ratio",
              200.0
            ]
          ],
          [
            "AND",
            [
              "LT",
              "net_worth_ratio",
              3.0
            ],
            [
              "GE",
              "net_worth_ratio",
              2.0
            ]
          ]
        ],
        2,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            200.0
          ],
          [
            "GE",
            "net_worth_ratio",
            3.0
          ]
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_insufficient_measures_executed",
    "desc": "資本不足等級措施執行完成",
    "expr": [
      "EQ",
      "capital_insufficient_measures_executed",
      [
        "AND",
        [
          "EQ",
          "improvement_plan_submitted",
          true
        ],
        [
          "EQ",
          "improvement_plan_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_significantly_insufficient_measures_executed",
    "desc": "資本顯著不足等級措施執行完成",
    "expr": [
      "EQ",
      "capital_significantly_insufficient_measures_executed",
      [
        "EQ",
        "significantly_insufficient_measures_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_severely_insufficient_measures_executed",
    "desc": "資本嚴重不足等級措施執行完成",
    "expr": [
      "EQ",
      "capital_severely_insufficient_measures_executed",
      [
        "EQ",
        "severely_insufficient_measures_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：未建立或未執行內部控制或內部處理制度，或資本不足等級未執行對應措施時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_ok",
            true
          ]
        ],
        [
          "OR",
          [
            "AND",
            [
              "EQ",
              "capital_level",
              4
            ],
            [
              "NOT",
              [
                "EQ",
                "capital_severely_insufficient_measures_executed",
                true
              ]
            ]
          ],
          [
            "AND",
            [
              "EQ",
              "capital_level",
              3
            ],
            [
              "NOT",
              [
                "EQ",
                "capital_significantly_insufficient_measures_executed",
                true
              ]
            ]
          ],
          [
            "AND",
            [
              "EQ",
              "capital_level",
              2
            ],
            [
              "NOT",
              [
                "EQ",
                "capital_insufficient_measures_executed",
                true
              ]
            ]
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]