    "expr": [
      "EQ",
      "derivative_trading_approval_submitted",
      [
        "AND",
        [
          "EQ",
          "compliance_statement_submitted",
          true
        ],
        [
          "EQ",
          "board_authorization_submitted",
          true
        ],
        [
          "EQ",
          "personnel_experience_proof_submitted",
          true
        ],
        [
          "EQ",
          "trading_procedure_submitted",
          true
        ],
        [
          "EQ",
          "risk_management_policy_submitted",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:derivative_trading_procedure_approved",
    "desc": "衍生性金融商品交易處理程序經董（理）事會通過",
    "expr": [
      "EQ",
      "derivative_trading_procedure_approved",
      [
        "EQ",
        "board_approval",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:loan_and_other_transaction_limits_ok",
    "desc": "同一人、同一關係人或同一關係企業之放款及其他交易限額符合規定",
    "expr": [
      "EQ",
      "loan_and_other_transaction_limits_ok",
      [
        "AND",
        [
          "OR",
          [
            "LE",
            "single_transaction_amount",
            [
              "MUL",
              "owner_equity",
              0.35
            ]
          ],
          [
            "EQ",
            "transaction_object_is_government_or_public",
            true
          ]
        ],
        [
          "OR",
          [
            "LE",
            "total_transaction_amount",
            [
              "MUL",
              "owner_equity",
              0.7
            ]
          ],
          [
            "EQ",
            "transaction_object_is_government_or_public",
            true
          ]
        ],
        [
          "OR",
          [
            "GE",
            "single_transaction_amount",
            100000000
          ],
          [
            "LE",
            "single_transaction_amount",
            100000000
          ]
        ],
        [
          "OR",
          [
            "GE",
            "total_transaction_amount",
            200000000
          ],
          [
            "LE",
            "total_transaction_amount",
            200000000
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:real_estate_investment_limits_ok",
    "desc": "不動產投資限額符合規定",
    "expr": [
      "EQ",
      "real_estate_investment_limits_ok",
      [
        "AND",
        [
          "LE",
          "real_estate_investment_total",
          [
            "MUL",
            "capital_funds",
            0.3
          ]
        ],
        [
          "LE",
          "self_use_real_estate_total",
          "owner_equity"
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:real_estate_investment_special_cases_ok",
    "desc": "不動產投資特殊情形符合規定",
    "expr": [
      "EQ",
      "real_estate_investment_special_cases_ok",
      [
        "OR",
        [
          "EQ",
          "social_housing_rental_only",
          true
        ],
        [
          "EQ",
          "real_estate_investment_meets_internal_procedures",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
