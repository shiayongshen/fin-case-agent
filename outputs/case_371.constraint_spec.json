    "expr": [
      "EQ",
      "internal_audit_system_established",
      [
        "AND",
        [
          "EQ",
          "internal_audit_system_created",
          true
        ],
        [
          "EQ",
          "annual_regular_audit_done",
          true
        ],
        [
          "EQ",
          "project_audit_done_as_needed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_audit_report_retained",
    "desc": "自行查核報告及工作底稿至少保存五年",
    "expr": [
      "EQ",
      "internal_audit_report_retained",
      [
        "GE",
        "audit_report_retention_years",
        5
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_audit_training_plan_established",
    "desc": "訂定自行查核訓練計畫並持續施訓",
    "expr": [
      "EQ",
      "internal_audit_training_plan_established",
      [
        "EQ",
        "audit_training_plan_implemented",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:compliance_with_internal_control_and_handling",
    "desc": "符合內部控制及稽核制度與內部處理制度規定",
    "expr": [
      "EQ",
      "compliance_with_internal_control_and_handling",
      [
        "AND",
        [
          "EQ",
          "internal_control_and_audit_ok",
          true
        ],
        [
          "EQ",
          "internal_handling_ok",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:legal_violations_fines",
    "desc": "違反相關法令規定之罰鍰處分",
    "expr": [
      "EQ",
      "legal_violations_fines",
      [
        "OR",
        [
          "EQ",
          "violate_business_scope_regulations",
          true
        ],
        [
          "EQ",
          "violate_reserve_fund_regulations",
          true
        ],
        [
          "EQ",
          "violate_article_143",
          true
        ],
        [
          "EQ",
          "violate_article_143_5_or_143_6_measures",
          true
        ],
        [
          "EQ",
          "violate_fund_usage_regulations",
          true
        ],
        [
          "EQ",
          "violate_loan_guarantee_regulations",
          true
        ],
        [
          "EQ",
          "violate_loan_limit_regulations",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violate_internal_control_penalty",
    "desc": "違反內部控制及稽核制度規定罰鍰",
    "expr": [
      "EQ",
      "violate_internal_control_penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_and_audit_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_ok",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：資本嚴重不足且未完成增資或改善計畫，或資本顯著惡化且未完成改善計畫，或資本不足且未完成改善計畫，或違反內部控制及稽核制度規定，或違反相關法令規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "capital_level",
            4
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_level_4_measures_executed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            3
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_level_3_measures_executed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            2
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_level_2_measures_executed",
              true
            ]
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_and_audit_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "legal_violations_fines",
            false
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
