[
  {
    "id": "insurance:capital_level_severe_insufficiency",
    "desc": "資本等級嚴重不足判定",
    "expr": [
      "EQ",
      "capital_level_severe_insufficiency",
      [
        "OR",
        [
          "LT",
          "capital_adequacy_ratio",
          50.0
        ],
        [
          "LT",
          "net_worth",
          0.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_significant_deterioration",
    "desc": "資本等級顯著惡化判定",
    "expr": [
      "EQ",
      "capital_level_significant_deterioration",
      [
        "AND",
        [
          "GE",
          "capital_adequacy_ratio",
          50.0
        ],
        [
          "LT",
          "capital_adequacy_ratio",
          150.0
        ],
        [
          "GE",
          "net_worth_ratio",
          0.0
        ],
        [
          "LT",
          "net_worth_ratio",
          2.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_insufficient",
    "desc": "資本等級不足判定",
    "expr": [
      "EQ",
      "capital_level_insufficient",
      [
        "AND",
        [
          "GE",
          "capital_adequacy_ratio",
          150.0
        ],
        [
          "LT",
          "capital_adequacy_ratio",
          200.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_adequate",
    "desc": "資本等級適足判定",
    "expr": [
      "EQ",
      "capital_level_adequate",
      [
        "GE",
        "capital_adequacy_ratio",
        200.0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著惡化, 4=嚴重不足, 0=未分類）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_4_measures_executed",
    "desc": "資本嚴重不足等級措施已執行",
    "expr": [
      "EQ",
      "capital_level_4_measures_executed",
      [
        "EQ",
        "capital_level_4_measures_completed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_3_measures_executed",
    "desc": "資本顯著惡化等級措施已執行",
    "expr": [
      "EQ",
      "capital_level_3_measures_executed",
      [
        "EQ",
        "capital_level_3_measures_completed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_2_measures_executed",
    "desc": "資本不足等級措施已執行",
    "expr": [
      "EQ",
      "capital_level_2_measures_executed",
      [
        "AND",
        [
          "EQ",
          "improvement_plan_submitted",
          true
        ],
        [
          "EQ",
          "improvement_plan_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_1_adequate",
    "desc": "資本適足等級",
    "expr": [
      "EQ",
      "capital_level_1_adequate",
      [
        "EQ",
        "capital_level_adequate",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:severe_insufficiency_and_no_measures",
    "desc": "資本嚴重不足且未完成增資、改善計畫或合併",
    "expr": [
      "EQ",
      "severe_insufficiency_and_no_measures",
      [
        "AND",
        [
          "EQ",
          "capital_level",
          4
        ],
        [
          "NOT",
          [
            "EQ",
            "capital_level_4_measures_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:significant_deterioration_and_no_measures",
    "desc": "資本顯著惡化且未完成改善計畫",
    "expr": [
      "EQ",
      "significant_deterioration_and_no_measures",
      [
        "AND",
        [
          "EQ",
          "capital_level",
          3
        ],
        [
          "NOT",
          [
            "EQ",
            "capital_level_3_measures_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:insufficient_and_no_measures",
    "desc": "資本不足且未完成改善計畫",
    "expr": [
      "EQ",
      "insufficient_and_no_measures",
      [
        "AND",
        [
          "EQ",
          "capital_level",
          2
        ],
        [
          "NOT",
          [
            "EQ",
            "capital_level_2_measures_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_or_business_deterioration",
    "desc": "財務或業務狀況顯著惡化，不能支付債務或有損及被保險人權益之虞",
    "expr": [
      "EQ",
      "financial_or_business_deterioration",
      [
        "OR",
        [
          "EQ",
          "unable_to_pay_debt",
          true
        ],
        [
          "EQ",
          "unable_to_fulfill_contract",
          true
        ],
        [
          "EQ",
          "risk_to_insured_rights",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_submitted_and_approved",
    "desc": "已提出並經主管機關核定財務或業務改善計畫",
    "expr": [
      "EQ",
      "improvement_plan_submitted_and_approved",
      [
        "AND",
        [
          "EQ",
          "improvement_plan_submitted",
          true
        ],
        [
          "EQ",
          "improvement_plan_approved",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:accelerated_deterioration_and_no_improvement",
    "desc": "損益、淨值加速惡化且經輔導仍未改善",
    "expr": [
      "EQ",
      "accelerated_deterioration_and_no_improvement",
      [
        "AND",
        [
          "EQ",
          "accelerated_deterioration",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "improvement_plan_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:regulatory_action_required",
    "desc": "應為監管、接管、勒令停業清理或命令解散之處分",
    "expr": [
      "EQ",
      "regulatory_action_required",
      [
        "OR",
        "severe_insufficiency_and_no_measures",
        [
          "AND",
          [
            "NOT",
            "severe_insufficiency_and_no_measures"
          ],
          "financial_or_business_deterioration",
          "improvement_plan_submitted_and_approved",
          "accelerated_deterioration_and_no_improvement"
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
