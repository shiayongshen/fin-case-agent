[
  {
    "id": "insurance:loan_type_valid",
    "desc": "放款類型符合規定（銀行或主管機關認可信用保證、動產不動產擔保、有價證券質押、人壽保險單質押）",
    "expr": [
      "EQ",
      "loan_type_valid",
      [
        "OR",
        [
          "EQ",
          "loan_guaranteed_by_bank_or_authority",
          true
        ],
        [
          "EQ",
          "loan_secured_by_movable_or_immovable",
          true
        ],
        [
          "EQ",
          "loan_secured_by_qualified_securities",
          true
        ],
        [
          "EQ",
          "loan_secured_by_life_insurance_policy",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:loan_single_limit_ok",
    "desc": "第一款至第三款放款每一單位放款金額不超過資金5%",
    "expr": [
      "EQ",
      "loan_single_limit_ok",
      [
        "LE",
        "loan_amount_per_unit_first_to_third",
        [
          "MUL",
          "insurance_fund",
          5.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:loan_total_limit_ok",
    "desc": "第一款至第三款放款總額不超過資金35%",
    "expr": [
      "EQ",
      "loan_total_limit_ok",
      [
        "LE",
        "loan_total_amount_first_to_third",
        [
          "MUL",
          "insurance_fund",
          35.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:loan_related_party_guarantee_ok",
    "desc": "利害關係人擔保放款有十足擔保且條件不優於其他同類放款",
    "expr": [
      "EQ",
      "loan_related_party_guarantee_ok",
      [
        "AND",
        [
          "EQ",
          "related_party_loan_has_full_guarantee",
          true
        ],
        [
          "EQ",
          "related_party_loan_conditions_not_better",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:loan_related_party_board_approval_ok",
    "desc": "利害關係人擔保放款達主管機關規定金額以上，經三分之二以上董事出席及四分之三以上同意",
    "expr": [
      "EQ",
      "loan_related_party_board_approval_ok",
      [
        "IMPLIES",
        [
          "GE",
          "related_party_loan_amount",
          "authority_specified_amount"
        ],
        [
          "AND",
          [
            "GE",
            "board_attendance_ratio",
            66.6667
          ],
          [
            "GE",
            "board_approval_ratio",
            75.0
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:loan_related_party_compliance",
    "desc": "利害關係人擔保放款符合擔保及董事會決議規定",
    "expr": [
      "EQ",
      "loan_related_party_compliance",
      [
        "AND",
        "loan_related_party_guarantee_ok",
        "loan_related_party_board_approval_ok"
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:loan_investment_combined_limit_ok",
    "desc": "依146-3第四款及第一項第三款放款合併計算不超過資金10%及該公司業主權益10%",
    "expr": [
      "EQ",
      "loan_investment_combined_limit_ok",
      [
        "AND",
        [
          "LE",
          "combined_loan_and_investment_amount",
          [
            "MUL",
            "insurance_fund",
            10.0
          ]
        ],
        [
          "LE",
          "combined_loan_and_investment_amount",
          [
            "MUL",
            "issuer_equity",
            10.0
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_adequacy_ratio",
    "desc": "資本適足率計算（自有資本/風險資本*100）",
    "expr": [
      "EQ",
      "capital_adequacy_ratio",
      [
        "MUL",
        [
          "DIV",
          "own_capital",
          "risk_capital"
        ],
        100.0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:net_worth_ratio",
    "desc": "淨值比率計算（業主權益/非投資型保險專設帳簿資產總額*100）",
    "expr": [
      "EQ",
      "net_worth_ratio",
      [
        "MUL",
        [
          "DIV",
          "owner_equity",
          "non_investment_assets"
        ],
        100.0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足, 0=未分類）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth_ratio",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:loan_limit_compliance",
    "desc": "放款限額符合規定",
    "expr": [
      "EQ",
      "loan_limit_compliance",
      [
        "AND",
        "loan_single_limit_ok",
        "loan_total_limit_ok",
        "loan_investment_combined_limit_ok"
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:loan_compliance",
    "desc": "放款符合類型及限額規定",
    "expr": [
      "EQ",
      "loan_compliance",
      [
        "AND",
        "loan_type_valid",
        "loan_limit_compliance",
        "loan_related_party_compliance"
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_ok",
    "desc": "建立內部控制及稽核制度且確實執行",
    "expr": [
      "EQ",
      "internal_control_ok",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_ok",
    "desc": "建立內部處理制度及程序且確實執行",
    "expr": [
      "EQ",
      "internal_handling_ok",
      [
        "AND",
        [
          "EQ",
          "internal_handling_established",
          true
        ],
        [
          "EQ",
          "internal_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:derivative_trading_compliance",
    "desc": "衍生性商品交易符合主管機關規定",
    "expr": [
      "EQ",
      "derivative_trading_compliance",
      [
        "EQ",
        "derivative_trading_meets_regulations",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反放款類型、限額、利害關係人擔保規定、內部控制、內部處理制度或衍生性商品交易規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "loan_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "derivative_trading_compliance",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
]