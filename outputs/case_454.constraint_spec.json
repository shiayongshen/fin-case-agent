[
  {
    "id": "insurance:license_and_bond_insurance_required",
    "desc": "保險代理人、經紀人、公證人須經主管機關許可，繳存保證金並投保相關保險，且領有執業證照後始得經營或執行業務",
    "expr": [
      "EQ",
      "license_and_bond_insurance_required",
      [
        "AND",
        [
          "EQ",
          "approved_by_authority",
          true
        ],
        [
          "EQ",
          "bond_deposited",
          true
        ],
        [
          "EQ",
          "related_insurance_purchased",
          true
        ],
        [
          "EQ",
          "license_held",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:related_insurance_type_correct",
    "desc": "相關保險類型依身份區分：代理人、公證人為責任保險；經紀人為責任保險及保證保險",
    "expr": [
      "EQ",
      "related_insurance_type_correct",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "agent",
            true
          ],
          [
            "EQ",
            "insurance_type_responsibility",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "broker",
            true
          ],
          [
            "AND",
            [
              "EQ",
              "insurance_type_responsibility",
              true
            ],
            [
              "EQ",
              "insurance_type_guarantee",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "notary",
            true
          ],
          [
            "EQ",
            "insurance_type_responsibility",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:minimum_amount_and_implementation_set_by_authority",
    "desc": "保證金及相關保險最低金額及實施方式由主管機關依經營業務範圍及規模定之",
    "expr": [
      "EQ",
      "minimum_amount_and_implementation_set_by_authority",
      [
        "EQ",
        "authority_set_minimum_and_implementation",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:management_rules_set_by_authority",
    "desc": "資格取得、申請許可條件、程序、文件、董事監察人經理人資格、解任事由、分支機構條件、財務業務管理、教育訓練、廢止許可及其他應遵行事項由主管機關定之",
    "expr": [
      "EQ",
      "management_rules_set_by_authority",
      [
        "EQ",
        "authority_set_management_rules",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:bank_permission_and_apply_agent_broker_rules",
    "desc": "銀行經主管機關許可擇一兼營保險代理人或經紀人業務，並分別準用相關規定",
    "expr": [
      "EQ",
      "bank_permission_and_apply_agent_broker_rules",
      [
        "IMPLIES",
        [
          "EQ",
          "bank_permitted_to_operate",
          true
        ],
        [
          "EQ",
          "apply_agent_broker_rules",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_duty_of_care_and_fidelity",
    "desc": "保險經紀人應以善良管理人注意義務洽訂保險契約並負忠實義務",
    "expr": [
      "EQ",
      "broker_duty_of_care_and_fidelity",
      [
        "AND",
        [
          "EQ",
          "broker_exercise_duty_of_care",
          true
        ],
        [
          "EQ",
          "broker_fulfill_fidelity",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_provide_written_report_and_disclose_fee",
    "desc": "保險經紀人洽訂契約前應主動提供書面分析報告，收取報酬者應明確告知報酬標準",
    "expr": [
      "EQ",
      "broker_provide_written_report_and_disclose_fee",
      [
        "AND",
        [
          "EQ",
          "broker_provide_written_report",
          true
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "broker_charge_fee",
            true
          ],
          [
            "EQ",
            "broker_disclose_fee_standard",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:agent_qualification_and_employment_conditions",
    "desc": "代理人具資格且無禁止情事，得以個人名義或受代理人公司或銀行任用取得執業證照後執行業務",
    "expr": [
      "EQ",
      "agent_qualification_and_employment_conditions",
      [
        "AND",
        [
          "EQ",
          "agent_qualification_met",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "agent_prohibited_condition",
            true
          ]
        ],
        [
          "EQ",
          "license_held",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:agent_company_and_bank_must_employ_minimum_agents",
    "desc": "代理人公司及銀行應任用代理人至少一人，並視業務規模及品質適當調整，主管機關得要求增加",
    "expr": [
      "EQ",
      "agent_company_and_bank_employ_minimum_agents",
      [
        "AND",
        [
          "GE",
          "agent_employed_count",
          1
        ],
        [
          "EQ",
          "agent_employment_adjusted_appropriately",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:agent_company_and_bank_must_register_permit",
    "desc": "代理人公司及銀行依規定辦理許可登記並依法向公司登記主管機關辦理登記",
    "expr": [
      "EQ",
      "agent_company_and_bank_must_register_permit",
      [
        "AND",
        [
          "EQ",
          "permit_registered_with_authority",
          true
        ],
        [
          "EQ",
          "company_registration_completed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:agent_cannot_be_employed_by_multiple_companies",
    "desc": "個人執業代理人及受代理人公司或銀行任用之代理人，不得同時受任於其他代理人公司、保險經紀人公司、公證人公司或銀行",
    "expr": [
      "EQ",
      "agent_cannot_be_employed_by_multiple_companies",
      [
        "NOT",
        [
          "EQ",
          "agent_employed_by_multiple_companies",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:agent_contract_must_include_required_items",
    "desc": "保險代理合約內容至少應包括主管機關規定之十二項目",
    "expr": [
      "EQ",
      "agent_contract_must_include_required_items",
      [
        "AND",
        [
          "EQ",
          "contract_include_parties_names",
          true
        ],
        [
          "EQ",
          "contract_include_agent_period",
          true
        ],
        [
          "EQ",
          "contract_include_agent_scope",
          true
        ],
        [
          "EQ",
          "contract_include_commission_standard",
          true
        ],
        [
          "EQ",
          "contract_include_commission_method",
          true
        ],
        [
          "EQ",
          "contract_include_law_compliance",
          true
        ],
        [
          "EQ",
          "contract_include_prohibited_behaviors",
          true
        ],
        [
          "EQ",
          "contract_include_conflict_of_interest_prevention",
          true
        ],
        [
          "EQ",
          "contract_include_breach_liability",
          true
        ],
        [
          "EQ",
          "contract_include_dispute_resolution",
          true
        ],
        [
          "EQ",
          "contract_include_contract_termination",
          true
        ],
        [
          "EQ",
          "contract_include_financial_institution_account",
          true
        ],
        [
          "EQ",
          "contract_include_other_authority_requirements",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：未經主管機關許可、未繳存保證金、未投保相關保險、未領執業證照、保險類型不符、銀行未依規定申請許可、經紀人未履行義務、代理人資格不符、代理人公司或銀行未任用足夠代理人、未辦理登記、代理人同時受多公司任用、代理合約未包含必要項目時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "license_and_bond_insurance_required",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "related_insurance_type_correct",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "bank_permission_and_apply_agent_broker_rules",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_duty_of_care_and_fidelity",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_provide_written_report_and_disclose_fee",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "agent_qualification_and_employment_conditions",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "agent_company_and_bank_employ_minimum_agents",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "agent_company_and_bank_must_register_permit",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "agent_cannot_be_employed_by_multiple_companies",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "agent_contract_must_include_required_items",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
]