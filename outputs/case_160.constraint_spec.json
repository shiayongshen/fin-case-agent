[
  {
    "id": "securities:violation_found",
    "desc": "證券商董事、監察人及受僱人有違法行為影響業務正常執行",
    "expr": [
      "EQ",
      "violation_found",
      [
        "EQ",
        "violation_of_law_or_regulation",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:stop_business_ordered",
    "desc": "主管機關命令停止一年以下業務執行或解除職務",
    "expr": [
      "EQ",
      "stop_business_ordered",
      [
        "OR",
        [
          "EQ",
          "stop_business_within_one_year",
          true
        ],
        [
          "EQ",
          "dismissal_ordered",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:penalty_66_disposition",
    "desc": "主管機關依第66條視情節輕重對證券商處分",
    "expr": [
      "EQ",
      "penalty_66_disposition",
      [
        "OR",
        [
          "EQ",
          "warning_issued",
          true
        ],
        [
          "EQ",
          "dismiss_board_supervisor_manager",
          true
        ],
        [
          "EQ",
          "suspend_business_within_6_months",
          true
        ],
        [
          "EQ",
          "revoke_business_license",
          true
        ],
        [
          "EQ",
          "other_necessary_measures",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:violation_178_1",
    "desc": "證券商或相關機構違反證券交易法第178-1條規定",
    "expr": [
      "EQ",
      "violation_178_1",
      [
        "OR",
        [
          "EQ",
          "violate_specified_articles",
          true
        ],
        [
          "EQ",
          "fail_submit_documents",
          true
        ],
        [
          "EQ",
          "obstruct_inspection",
          true
        ],
        [
          "EQ",
          "fail_produce_report_or_documents",
          true
        ],
        [
          "EQ",
          "fail_execute_internal_control",
          true
        ],
        [
          "EQ",
          "violate_finance_business_management_rules",
          true
        ],
        [
          "EQ",
          "violate_other_finance_business_management_rules",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:violation_178_1_minor_exempt",
    "desc": "違反第178-1條情節輕微且已改善免處罰",
    "expr": [
      "EQ",
      "violation_178_1_minor_exempt",
      [
        "AND",
        [
          "EQ",
          "violation_178_1",
          true
        ],
        [
          "EQ",
          "violation_minor",
          true
        ],
        [
          "EQ",
          "improvement_completed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:internal_control_established",
    "desc": "證券商依規定訂定內部控制制度",
    "expr": [
      "EQ",
      "internal_control_established",
      [
        "EQ",
        "internal_control_system_set",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:internal_control_compliant",
    "desc": "證券商業務依內部控制制度及法令章程經營",
    "expr": [
      "EQ",
      "internal_control_compliant",
      [
        "AND",
        [
          "EQ",
          "business_operated_according_to_law",
          true
        ],
        [
          "EQ",
          "business_operated_according_to_articles",
          true
        ],
        [
          "EQ",
          "business_operated_according_to_internal_control",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:internal_control_updated",
    "desc": "內部控制制度變更於限期內完成",
    "expr": [
      "EQ",
      "internal_control_updated",
      [
        "IMPLIES",
        [
          "EQ",
          "internal_control_change_notified",
          true
        ],
        [
          "EQ",
          "internal_control_changed_within_deadline",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:honest_and_credit_principle",
    "desc": "證券商負責人及業務人員執行業務應本誠實及信用原則",
    "expr": [
      "EQ",
      "honest_and_credit_principle",
      [
        "EQ",
        "honest_and_credit_followed",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:prohibited_behaviors",
