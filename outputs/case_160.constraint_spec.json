    "expr": [
      "EQ",
      "prohibited_behaviors",
      [
        "NOT",
        [
          "OR",
          [
            "EQ",
            "speculation_using_insider_info",
            true
          ],
          [
            "EQ",
            "illegal_disclosure_of_client_info",
            true
          ],
          [
            "EQ",
            "full_power_delegation_to_client",
            true
          ],
          [
            "EQ",
            "profit_guarantee_or_sharing",
            true
          ],
          [
            "EQ",
            "joint_loss_profit_agreement",
            true
          ],
          [
            "EQ",
            "self_dealing_as_counterparty",
            true
          ],
          [
            "EQ",
            "use_client_account_for_trading",
            true
          ],
          [
            "EQ",
            "use_others_or_relatives_account",
            true
          ],
          [
            "EQ",
            "loan_or_mediation_with_client",
            true
          ],
          [
            "EQ",
            "fraud_or_misleading_in_underwriting_or_trading",
            true
          ],
          [
            "EQ",
            "misuse_or_custody_of_client_assets",
            true
          ],
          [
            "EQ",
            "accept_trading_without_contract",
            true
          ],
          [
            "EQ",
            "not_follow_client_instructions",
            true
          ],
          [
            "EQ",
            "induce_buy_sell_based_on_price_prediction",
            true
          ],
          [
            "EQ",
            "promote_unapproved_stocks",
            true
          ],
          [
            "EQ",
            "offset_same_stock_buy_sell_in_same_day",
            true
          ],
          [
            "EQ",
            "agent_open_account_or_trade_for_others",
            true
          ],
          [
            "EQ",
            "accept_board_supervisor_employee_open_account_or_trade_for_others",
            true
          ],
          [
            "EQ",
            "accept_non_self_open_account",
            true
          ],
          [
            "EQ",
            "accept_non_self_or_unappointed_agent_trade",
            true
          ],
          [
            "EQ",
            "accept_client_with_insider_info_or_market_manipulation_intent",
            true
          ],
          [
            "EQ",
            "underwriting_personnel_get_improper_benefits",
            true
          ],
          [
            "EQ",
            "solicit_unapproved_securities_or_derivatives",
            true
          ],
          [
            "EQ",
            "violate_securities_management_laws_or_regulations",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:prohibited_behaviors_apply_to_employees",
    "desc": "禁止行為規定適用於證券商其他受僱人",
    "expr": [
      "EQ",
      "prohibited_behaviors_apply_to_employees",
      [
        "EQ",
        "prohibited_behaviors",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:internal_control_violation_conditions",
    "desc": "主管機關得令限期改善及專案審查內部控制制度情形",
    "expr": [
      "EQ",
      "internal_control_violation_conditions",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_written",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_audit_staff_adequate",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "annual_audit_plan_reported",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "annual_audit_plan_executed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_deficiency_reported",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_self_assessed",
            true
          ]
        ],
        [
          "AND",
          [
            "NOT",
            [
              "EQ",
              "internal_control_deficiency_improved",
              true
            ]
          ],
          [
            "EQ",
            "deficiency_severe",
            true
          ]
        ],
        [
          "EQ",
          "external_financial_report_false",
          true
        ],
        [
          "EQ",
          "major_fraud_occurred",
          true
        ],
        [
          "EQ",
          "other_special_review_needed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反證券交易法及相關規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "violation_found",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "stop_business_ordered",
              true
            ]
          ]
        ],
        [
          "EQ",
          "penalty_66_disposition",
          true
        ],
        [
          "AND",
          [
            "EQ",
            "violation_178_1",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "violation_178_1_minor_exempt",
              true
            ]
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_compliant",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_updated",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "honest_and_credit_principle",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "prohibited_behaviors",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_violation_conditions",
            false
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
