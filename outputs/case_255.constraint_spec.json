[
  {
    "id": "bank:no_unsecured_credit_over_3_percent",
    "desc": "銀行不得對持有實收資本總額超過3%之企業及相關人員提供無擔保授信（消費者貸款及政府貸款除外）",
    "expr": [
      "EQ",
      "no_unsecured_credit_over_3_percent",
      [
        "AND",
        [
          "LE",
          [
            "MUL",
            [
              "DIV",
              "unsecured_credit_to_enterprise_over_3_percent",
              "paid_in_capital_total"
            ],
            100.0
          ],
          3.0
        ],
        [
          "EQ",
          "consumer_loan_exempted",
          true
        ],
        [
          "EQ",
          "government_loan_exempted",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:major_shareholder_definition",
    "desc": "主要股東定義：持股超過1%，自然人主要股東含配偶及未成年子女持股",
    "expr": [
      "EQ",
      "major_shareholder_holding_percent",
      [
        "ADD",
        "major_shareholder_own_percent",
        "major_shareholder_spouse_percent",
        "major_shareholder_minor_children_percent"
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:secured_credit_over_5_percent_requirements",
    "desc": "銀行對持有實收資本總額超過5%之企業及相關人員提供擔保授信，須有十足擔保且條件不得優於同類授信，且達一定金額須董事會通過",
    "expr": [
      "EQ",
      "secured_credit_over_5_percent_compliant",
      [
        "AND",
        [
          "GE",
          [
            "MUL",
            [
              "DIV",
              "secured_credit_to_enterprise_over_5_percent",
              "paid_in_capital_total"
            ],
            100.0
          ],
          5.0
        ],
        [
          "EQ",
          "full_collateral_provided",
          true
        ],
        [
          "NOT",
          [
            "GT",
            "credit_conditions_better_than_similar",
            0
          ]
        ],
        [
          "IMPLIES",
          [
            "GE",
            "credit_amount",
            "central_authority_threshold"
          ],
          [
            "AND",
            [
              "GE",
              "board_meeting_attendance_ratio",
              0.6666667
            ],
            [
              "GE",
              "board_meeting_approval_ratio",
              0.75
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "fhc:subsidiary_business_scope",
    "desc": "金融控股公司子公司業務限於投資及被投資事業管理",
    "expr": [
      "EQ",
      "subsidiary_business_within_scope",
      [
        "EQ",
        "subsidiary_business_type",
        "investment_and_management"
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:approved_investment_businesses",
    "desc": "金融控股公司可投資之事業類別",
    "expr": [
      "EQ",
      "investment_business_approved",
      [
        "OR",
        [
          "EQ",
          "investment_business_type",
          1
        ],
        [
          "EQ",
          "investment_business_type",
          2
        ],
        [
          "EQ",
          "investment_business_type",
          3
        ],
        [
          "EQ",
          "investment_business_type",
          4
        ],
        [
          "EQ",
          "investment_business_type",
          5
        ],
        [
          "EQ",
          "investment_business_type",
          6
        ],
        [
          "EQ",
          "investment_business_type",
          7
        ],
        [
          "EQ",
          "investment_business_type",
          8
        ],
        [
          "EQ",
          "investment_business_type",
          9
        ],
        [
          "EQ",
          "investment_business_type",
          10
        ],
        [
          "EQ",
          "investment_business_type",
          11
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:investment_approval_timing",
    "desc": "金融控股公司投資申請未於期限內反對視為核准",
    "expr": [
      "EQ",
      "investment_approved_by_default",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "investment_business_type",
            1
          ],
          [
            "LE",
            "days_since_application",
            15
          ],
          [
            "EQ",
            "authority_opposition",
            false
          ]
        ],
        [
          "AND",
          [
            "OR",
            [
              "GE",
              "investment_business_type",
              2
            ],
            [
              "LE",
              "investment_business_type",
              11
            ]
          ],
          [
            "LE",
            "days_since_application",
            30
          ],
          [
            "EQ",
            "authority_opposition",
            false
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:investment_without_approval_prohibited",
    "desc": "金融控股公司及其關係企業未經核准不得進行投資行為",
    "expr": [
      "EQ",
      "investment_without_approval_prohibited",
      [
        "NOT",
        [
          "EQ",
          "investment_approved",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:excess_business_or_investment_adjustment_required",
    "desc": "金融控股公司因設立或轉換致子公司業務或投資逾越規定，須限期調整",
    "expr": [
      "EQ",
      "excess_business_or_investment_adjustment_required",
      [
        "OR",
        [
          "EQ",
          "subsidiary_business_exceeds_limit",
          true
        ],
        [
          "EQ",
          "subsidiary_investment_exceeds_limit",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:adjustment_deadline_maximum",
    "desc": "調整期限最長三年，得申請延長兩次，每次二年",
    "expr": [
      "EQ",
      "adjustment_deadline_valid",
      [
        "AND",
        [
          "LE",
          "adjustment_deadline_years",
          3
        ],
        [
          "LE",
          "adjustment_extension_times",
          2
        ],
        [
          "LE",
          "adjustment_extension_years_per_time",
          2
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:fhc_officer_not_manager_of_invested_startup",
    "desc": "金融控股公司負責人或職員不得擔任其創業投資事業所投資事業經理人",
    "expr": [
      "EQ",
      "fhc_officer_not_manager_of_invested_startup",
      [
        "NOT",
        [
          "EQ",
          "fhc_officer_is_manager_of_invested_startup",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:subsidiary_capital_reduction_approval_required",
    "desc": "金融控股公司子公司減資須事先申請核准",
    "expr": [
      "EQ",
      "subsidiary_capital_reduction_approved",
      [
        "EQ",
        "capital_reduction_application_submitted",
        true
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:subsidiary_capital_reduction_application_complete",
    "desc": "子公司減資申請應附書件、程序、審查條件及其他應遵行事項",
    "expr": [
      "EQ",
      "capital_reduction_application_complete",
      [
        "AND",
        [
          "EQ",
          "application_documents_submitted",
          true
        ],
        [
          "EQ",
          "application_procedures_followed",
          true
        ],
        [
          "EQ",
          "application_review_conditions_met",
          true
        ],
        [
          "EQ",
          "other_requirements_complied",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:regulatory_action_for_violation",
    "desc": "金融控股公司違反法令或有礙健全經營時主管機關可採取處分",
    "expr": [
      "EQ",
      "regulatory_action_taken",
      [
        "OR",
        [
          "EQ",
          "revoke_statutory_meeting_resolution",
          true
        ],
        [
          "EQ",
          "suspend_subsidiary_business_part_or_all",
          true
        ],
        [
          "EQ",
          "remove_manager_or_officer",
          true
        ],
        [
          "EQ",
          "remove_director_or_supervisor_or_suspend_duties",
          true
        ],
        [
          "EQ",
          "order_dispose_subsidiary_shares",
          true
        ],
        [
          "EQ",
          "revoke_permit",
          true
        ],
        [
          "EQ",
          "other_necessary_measures",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:revoke_director_supervisor_registration",
    "desc": "解除董事監察人職務時通知經濟部廢止登記",
    "expr": [
      "EQ",
      "director_supervisor_registration_revoked",
      [
        "IMPLIES",
        [
          "EQ",
          "remove_director_or_supervisor_or_suspend_duties",
          true
        ],
        [
          "EQ",
          "notify_ministry_economy",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:revoke_permit_requirements",
    "desc": "廢止許可時須令金融控股公司於期限內處分股份及董事人數至符規定，未完成者須解散清算",
    "expr": [
      "EQ",
      "revoke_permit_compliance",
      [
        "AND",
        [
          "EQ",
          "permit_revoked",
          true
        ],
        [
          "LE",
          "disposition_deadline_days",
          "specified_deadline_days"
        ],
        [
          "LE",
          "shares_held_after_disposition",
          "max_allowed_shares"
        ],
        [
          "LE",
          "direct_indirect_directors_after_disposition",
          "max_allowed_directors"
        ],
        [
          "IMPLIES",
          [
            "NOT",
            [
              "AND",
              [
                "LE",
                "shares_held_after_disposition",
                "max_allowed_shares"
              ],
              [
                "LE",
                "direct_indirect_directors_after_disposition",
                "max_allowed_directors"
              ]
            ]
          ],
          [
            "EQ",
            "liquidation_ordered",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反銀行無擔保授信限制、擔保授信條件、金融控股公司投資及經營規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "no_unsecured_credit_over_3_percent",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "secured_credit_over_5_percent_compliant",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "investment_business_approved",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "investment_approved_by_default",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "investment_without_approval_prohibited",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "subsidiary_business_within_scope",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "excess_business_or_investment_adjustment_required",
            false
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "adjustment_deadline_valid",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "fhc_officer_not_manager_of_invested_startup",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "subsidiary_capital_reduction_approved",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "capital_reduction_application_complete",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "regulatory_action_taken",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "director_supervisor_registration_revoked",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "revoke_permit_compliance",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]