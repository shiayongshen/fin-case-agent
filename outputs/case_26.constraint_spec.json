        [
          "EQ",
          "invest_in_commercial_bank",
          true
        ],
        [
          "EQ",
          "invest_in_specialized_bank",
          true
        ],
        [
          "EQ",
          "invest_in_trust_investment_company",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:insurance_investment_subtypes_ok",
