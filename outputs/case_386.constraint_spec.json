[
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_4_noncompliance",
    "desc": "資本嚴重不足且未於期限內完成增資、改善計畫或合併",
    "expr": [
      "EQ",
      "capital_level_4_noncompliance",
      [
        "AND",
        [
          "EQ",
          "capital_level",
          4
        ],
        [
          "NOT",
          [
            "EQ",
            "capital_increase_completed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "financial_or_business_improvement_plan_completed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "merger_completed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_4_penalty_period",
    "desc": "資本嚴重不足且未於期限屆滿次日起九十日內完成改善",
    "expr": [
      "EQ",
      "capital_level_4_penalty_period",
      [
        "AND",
        [
          "EQ",
          "capital_level_4_noncompliance",
          true
        ],
        [
          "LE",
          "days_since_deadline",
          90.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_or_business_deterioration",
    "desc": "財務或業務狀況顯著惡化且不能支付債務或履行契約或損及被保險人權益",
    "expr": [
      "EQ",
      "financial_or_business_deterioration",
      [
        "AND",
        [
          "EQ",
          "financial_or_business_deterioration_flag",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "unable_to_pay_debt",
            true
          ],
          [
            "EQ",
            "unable_to_fulfill_contract",
            true
          ],
          [
            "EQ",
            "risk_to_insured_interest",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_submitted_and_approved",
    "desc": "已提出並經主管機關核定財務或業務改善計畫",
    "expr": [
      "EQ",
      "improvement_plan_submitted_and_approved",
      [
        "AND",
        [
          "EQ",
          "improvement_plan_submitted",
          true
        ],
        [
          "EQ",
          "improvement_plan_approved",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_accelerated_deterioration",
    "desc": "損益、淨值加速惡化且經輔導仍未改善",
    "expr": [
      "EQ",
      "improvement_plan_accelerated_deterioration",
      [
        "AND",
        [
          "EQ",
          "profit_loss_accelerated_deterioration",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "improvement_plan_effective",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:supervisory_measures_applicable",
    "desc": "符合監管、接管、勒令停業清理或命令解散之處分條件",
    "expr": [
      "EQ",
      "supervisory_measures_applicable",
      [
        "OR",
        [
          "EQ",
          "capital_level_4_penalty_period",
          true
        ],
        [
          "AND",
          [
            "EQ",
            "financial_or_business_deterioration",
            true
          ],
          [
            "EQ",
            "improvement_plan_submitted_and_approved",
            true
          ],
          [
            "EQ",
            "improvement_plan_accelerated_deterioration",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:penalty_conditions",
    "desc": "處罰條件：符合監管、接管、勒令停業清理或命令解散之處分條件時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "EQ",
        "supervisory_measures_applicable",
        true
      ]
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  }
]