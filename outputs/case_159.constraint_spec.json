[
  {
    "id": "insurance:capital_level",
    "desc": "保險業資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足, 0=未分類）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio_prev1",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio_prev1",
            2.0
          ],
          [
            "GE",
            "net_worth_ratio_prev2",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio_prev2",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "OR",
            [
              "AND",
              [
                "GE",
                "capital_adequacy_ratio",
                150.0
              ],
              [
                "LT",
                "capital_adequacy_ratio",
                200.0
              ]
            ],
            [
              "AND",
              [
                "LT",
                "net_worth_ratio_prev1",
                3.0
              ],
              [
                "LT",
                "net_worth_ratio_prev2",
                3.0
              ],
              [
                "GE",
                "net_worth_ratio_prev1",
                2.0
              ]
            ]
          ]
        ],
        2,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            200.0
          ],
          [
            "OR",
            [
              "GE",
              "net_worth_ratio_prev1",
              3.0
            ],
            [
              "GE",
              "net_worth_ratio_prev2",
              3.0
            ]
          ]
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_insufficient_measures_ok",
    "desc": "資本不足等級措施執行完成",
    "expr": [
      "EQ",
      "capital_insufficient_measures_ok",
      [
        "AND",
        [
          "EQ",
          "improvement_plan_submitted",
          true
        ],
        [
          "EQ",
          "improvement_plan_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_significantly_insufficient_measures_ok",
    "desc": "資本顯著不足等級措施執行完成",
    "expr": [
      "EQ",
      "capital_significantly_insufficient_measures_ok",
      [
        "AND",
        [
          "EQ",
          "capital_insufficient_measures_ok",
          true
        ],
        [
          "EQ",
          "responsible_person_removed",
          true
        ],
        [
          "EQ",
          "responsible_person_deregistered",
          true
        ],
        [
          "EQ",
          "responsible_person_suspended",
          true
        ],
        [
          "EQ",
          "asset_disposal_approved",
          true
        ],
        [
          "EQ",
          "asset_disposed",
          true
        ],
        [
          "EQ",
          "credit_restriction",
          true
        ],
        [
          "GE",
          [
            "MUL",
            [
              "DIV",
              "responsible_person_reduced_pay",
              "responsible_person_avg_pay_12m"
            ],
            100.0
          ],
          0.0
        ],
        [
          "LE",
          [
            "MUL",
            [
              "DIV",
              "responsible_person_reduced_pay",
              "responsible_person_avg_pay_12m"
            ],
            100.0
          ],
          70.0
        ],
        [
          "EQ",
          "branch_restriction_or_closure",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_severely_insufficient_measures_ok",
    "desc": "資本嚴重不足等級措施執行完成",
    "expr": [
      "EQ",
      "capital_severely_insufficient_measures_ok",
      [
        "AND",
        [
          "EQ",
          "capital_significantly_insufficient_measures_ok",
          true
        ],
        [
          "EQ",
          "disposition_149_3_1_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "insurance:penalty_conditions",
    "desc": "處罰條件：資本不足等級未執行對應措施時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "capital_level",
            4
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_severely_insufficient_measures_ok",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            3
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_significantly_insufficient_measures_ok",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            2
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_insufficient_measures_ok",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]