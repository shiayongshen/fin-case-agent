[
  {
    "id": "fhc:non_credit_transaction_condition_met",
    "desc": "授信以外之交易條件成立",
    "expr": [
      "EQ",
      "non_credit_transaction_condition_met",
      [
        "OR",
        [
          "EQ",
          "transaction_invest_security",
          true
        ],
        [
          "EQ",
          "transaction_purchase_asset",
          true
        ],
        [
          "EQ",
          "transaction_sell_asset",
          true
        ],
        [
          "EQ",
          "transaction_contract_payment_service",
          true
        ],
        [
          "EQ",
          "transaction_agent_commission_service",
          true
        ],
        [
          "EQ",
          "transaction_related_third_party",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:related_party_involved",
    "desc": "交易對象為金融控股公司或其子公司負責人、大股東、關係企業、銀行子公司、保險子公司、證券子公司及其負責人",
    "expr": [
      "EQ",
      "related_party_involved",
      [
        "OR",
        [
          "EQ",
          "is_fhc_and_responsible_or_major_shareholder",
          true
        ],
        [
          "EQ",
          "is_fhc_responsible_or_major_shareholder_business",
          true
        ],
        [
          "EQ",
          "is_fhc_related_enterprise_and_responsible_or_major_shareholder",
          true
        ],
        [
          "EQ",
          "is_fhc_bank_insurance_securities_subsidiary_or_responsible",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:transaction_condition_valid",
    "desc": "授信以外交易條件不得優於其他同類對象且經董事會三分之二以上出席及四分之三以上決議",
    "expr": [
      "EQ",
      "transaction_condition_valid",
      [
        "AND",
        [
          "EQ",
          "non_credit_transaction_condition_met",
          true
        ],
        [
          "EQ",
          "related_party_involved",
          true
        ],
        [
          "LE",
          "transaction_condition_preferential_degree",
          0
        ],
        [
          "GE",
          "board_attendance_ratio",
          0.6666666667
        ],
        [
          "GE",
          "board_approval_ratio",
          0.75
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:bank_subsidiary_single_related_limit_ok",
    "desc": "銀行子公司與單一關係人交易金額不超過淨值10%",
    "expr": [
      "EQ",
      "bank_subsidiary_single_related_limit_ok",
      [
        "LE",
        "bank_subsidiary_single_related_transaction_amount",
        [
          "MUL",
          "bank_subsidiary_net_worth",
          0.1
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:bank_subsidiary_all_related_limit_ok",
    "desc": "銀行子公司與所有利害關係人交易總額不超過淨值20%",
    "expr": [
      "EQ",
      "bank_subsidiary_all_related_limit_ok",
      [
        "LE",
        "bank_subsidiary_all_related_transaction_amount",
        [
          "MUL",
          "bank_subsidiary_net_worth",
          0.2
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:fhc_45_compliance",
    "desc": "金融控股公司法第45條授信以外交易條件及董事會決議符合規定",
    "expr": [
      "EQ",
      "fhc_45_compliance",
      [
        "IMPLIES",
        [
          "AND",
          [
            "EQ",
            "non_credit_transaction_condition_met",
            true
          ],
          [
            "EQ",
            "related_party_involved",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "transaction_condition_valid",
            true
          ],
          [
            "EQ",
            "bank_subsidiary_single_related_limit_ok",
            true
          ],
          [
            "EQ",
            "bank_subsidiary_all_related_limit_ok",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
