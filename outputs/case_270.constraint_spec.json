[
  {
    "id": "insurance:same_person_definition",
    "desc": "同一人定義為同一自然人或同一法人",
    "expr": [
      "EQ",
      "same_person",
      [
        "OR",
        [
          "EQ",
          "person_type",
          1
        ],
        [
          "EQ",
          "person_type",
          2
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:same_related_person_definition",
    "desc": "同一關係人範圍包含本人、配偶、二親等以內血親及以本人或配偶為負責人之事業",
    "expr": [
      "EQ",
      "same_related_person",
      [
        "OR",
        [
          "EQ",
          "is_self",
          true
        ],
        [
          "EQ",
          "is_spouse",
          true
        ],
        [
          "LE",
          "blood_relation_degree",
          2
        ],
        [
          "EQ",
          "is_responsible_person_of_business",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:same_related_enterprise_definition",
    "desc": "同一關係企業範圍依公司法相關條文規定",
    "expr": [
      "EQ",
      "same_related_enterprise",
      [
        "EQ",
        "company_law_related_enterprise",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:related_person_or_enterprise_limit_applied",
    "desc": "主管機關得對保險業就同一人、同一關係人或同一關係企業之放款或其他交易予以限制",
    "expr": [
      "EQ",
      "related_person_or_enterprise_limit_applied",
      [
        "EQ",
        "regulatory_limit_enforced",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_and_audit_established",
    "desc": "保險業建立內部控制及稽核制度",
    "expr": [
      "EQ",
      "internal_control_and_audit_established",
      [
        "EQ",
        "internal_control_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_system_established",
    "desc": "保險業建立內部處理制度及程序",
    "expr": [
      "EQ",
      "internal_handling_system_established",
      [
        "EQ",
        "internal_handling_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_internal_control_or_handling",
    "desc": "違反內部控制或內部處理制度規定",
    "expr": [
      "EQ",
      "violation_internal_control_or_handling",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_executed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足, 0=未分類）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_4_noncompliance",
    "desc": "資本嚴重不足且未依主管機關規定期限完成增資、改善計畫或合併",
    "expr": [
      "EQ",
      "capital_level_4_noncompliance",
      [
        "AND",
        [
          "EQ",
          "capital_level",
          4
        ],
        [
          "OR",
          [
            "NOT",
            [
              "EQ",
              "capital_increase_completed",
              true
            ]
          ],
          [
            "NOT",
            [
              "EQ",
              "financial_or_business_improvement_plan_completed",
              true
            ]
          ],
          [
            "NOT",
            [
              "EQ",
              "merger_completed",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_or_business_deterioration",
    "desc": "財務或業務狀況顯著惡化且不能支付債務或履行契約責任或有損及被保險人權益之虞",
    "expr": [
      "EQ",
      "financial_or_business_deterioration",
      [
        "AND",
        [
          "EQ",
          "financial_or_business_status_worsened",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "unable_to_pay_debt",
            true
          ],
          [
            "EQ",
            "unable_to_fulfill_contract",
            true
          ],
          [
            "EQ",
            "risk_of_harming_insured_rights",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_submitted_and_approved",
    "desc": "保險業提出財務或業務改善計畫並經主管機關核定",
    "expr": [
      "EQ",
      "improvement_plan_submitted_and_approved",
      [
        "AND",
        [
          "EQ",
          "improvement_plan_submitted",
          true
        ],
        [
          "EQ",
          "improvement_plan_approved",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_not_effective",
    "desc": "損益、淨值加速惡化或經輔導仍未改善，致有監管、接管、勒令停業清理或解散之虞",
    "expr": [
      "EQ",
      "improvement_plan_not_effective",
      [
        "AND",
        [
          "OR",
          [
            "EQ",
            "profit_loss_accelerated_deterioration",
            true
          ],
          [
            "EQ",
            "net_worth_accelerated_deterioration",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "improvement_plan_effective",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:regulatory_action_required",
    "desc": "主管機關得為監管、接管、勒令停業清理或命令解散之處分",
    "expr": [
      "EQ",
      "regulatory_action_required",
      [
        "OR",
        [
          "EQ",
          "capital_level_4_noncompliance",
          true
        ],
        [
          "AND",
          [
            "NOT",
            [
              "EQ",
              "capital_level_4_noncompliance",
              true
            ]
          ],
          [
            "EQ",
            "financial_or_business_deterioration",
            true
          ],
          [
            "EQ",
            "improvement_plan_submitted_and_approved",
            true
          ],
          [
            "EQ",
            "improvement_plan_not_effective",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_internal_control_penalty",
    "desc": "違反內部控制或內部處理制度規定，處罰",
    "expr": [
      "EQ",
      "violation_internal_control_penalty",
      [
        "EQ",
        "violation_internal_control_or_handling",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_reporting_penalty",
    "desc": "違反報告或說明文件規定，處罰",
    "expr": [
      "EQ",
      "violation_reporting_penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "reporting_document_provided",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "reporting_document_accurate",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "reporting_submitted_on_time",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "public_disclosure_on_time",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "reporting_content_accurate",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_other_penalty",
    "desc": "違反其他法令規定，處罰",
    "expr": [
      "EQ",
      "violation_other_penalty",
      [
        "EQ",
        "other_legal_violation",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反內部控制、內部處理制度、報告說明文件或其他法令規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "violation_internal_control_penalty",
          true
        ],
        [
          "EQ",
          "violation_reporting_penalty",
          true
        ],
        [
          "EQ",
          "violation_other_penalty",
          true
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]