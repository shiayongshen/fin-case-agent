[
  {
    "id": "insurance:capital_level",
    "desc": "保險業資本等級分類（1=資本適足, 2=資本不足, 3=資本顯著不足, 4=資本嚴重不足）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            [
              "MUL",
              [
                "DIV",
                "own_capital",
                "risk_capital"
              ],
              100.0
            ],
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "OR",
          [
            "AND",
            [
              "GE",
              [
                "MUL",
                [
                  "DIV",
                  "own_capital",
                  "risk_capital"
                ],
                100.0
              ],
              50.0
            ],
            [
              "LT",
              [
                "MUL",
                [
                  "DIV",
                  "own_capital",
                  "risk_capital"
                ],
                100.0
              ],
              150.0
            ]
          ],
          [
            "AND",
            [
              "LT",
              [
                "MUL",
                [
                  "DIV",
                  "net_worth_ratio_prev1",
                  1.0
                ],
                100.0
              ],
              3.0
            ],
            [
              "LT",
              [
                "MUL",
                [
                  "DIV",
                  "net_worth_ratio_prev2",
                  1.0
                ],
                100.0
              ],
              3.0
            ],
            [
              "GE",
              [
                "MUL",
                [
                  "DIV",
                  "net_worth_ratio_prev1",
                  1.0
                ],
                100.0
              ],
              2.0
            ]
          ]
        ],
        3,
        [
          "OR",
          [
            "AND",
            [
              "GE",
              [
                "MUL",
                [
                  "DIV",
                  "own_capital",
                  "risk_capital"
                ],
                100.0
              ],
              150.0
            ],
            [
              "LT",
              [
                "MUL",
                [
                  "DIV",
                  "own_capital",
                  "risk_capital"
                ],
                100.0
              ],
              200.0
            ]
          ],
          [
            "AND",
            [
              "LT",
              [
                "MUL",
                [
                  "DIV",
                  "net_worth_ratio_prev1",
                  1.0
                ],
                100.0
              ],
              2.0
            ],
            [
              "LT",
              [
                "MUL",
                [
                  "DIV",
                  "net_worth_ratio_prev2",
                  1.0
                ],
                100.0
              ],
              2.0
            ],
            [
              "GE",
              [
                "MUL",
                [
                  "DIV",
                  "net_worth_ratio_prev1",
                  1.0
                ],
                100.0
              ],
              0.0
            ]
          ]
        ],
        2,
        [
          "AND",
          [
            "GE",
            [
              "MUL",
              [
                "DIV",
                "own_capital",
                "risk_capital"
              ],
              100.0
            ],
            200.0
          ],
          [
            "OR",
            [
              "GE",
              [
                "MUL",
                [
                  "DIV",
                  "net_worth_ratio_prev1",
                  1.0
                ],
                100.0
              ],
              3.0
            ],
            [
              "GE",
              [
                "MUL",
                [
                  "DIV",
                  "net_worth_ratio_prev2",
                  1.0
                ],
                100.0
              ],
              3.0
            ]
          ]
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:level_2_measures_executed",
    "desc": "資本不足等級措施執行完成",
    "expr": [
      "EQ",
      "level_2_measures_executed",
      [
        "AND",
        [
          "EQ",
          "improvement_plan_submitted",
          true
        ],
        [
          "EQ",
          "improvement_plan_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:level_3_measures_executed",
    "desc": "資本顯著不足等級措施執行完成",
    "expr": [
      "EQ",
      "level_3_measures_executed",
      [
        "AND",
        [
          "EQ",
          "level_2_measures_executed",
          true
        ],
        [
          "EQ",
          "responsible_person_removed",
          true
        ],
        [
          "EQ",
          "responsible_person_suspended",
          true
        ],
        [
          "EQ",
          "asset_disposal_approved",
          true
        ],
        [
          "EQ",
          "asset_disposed",
          true
        ],
        [
          "EQ",
          "credit_restriction",
          true
        ],
        [
          "EQ",
          "responsible_person_compensation_reduced",
          true
        ],
        [
          "EQ",
          "branch_reduction",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:level_4_measures_executed",
    "desc": "資本嚴重不足等級措施執行完成",
    "expr": [
      "EQ",
      "level_4_measures_executed",
      [
        "AND",
        [
          "EQ",
          "level_3_measures_executed",
          true
        ],
        [
          "EQ",
          "special_disposition_149_3_1",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：資本等級不足且未執行對應措施時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "capital_level",
            4
          ],
          [
            "NOT",
            [
              "EQ",
              "level_4_measures_executed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            3
          ],
          [
            "NOT",
            [
              "EQ",
              "level_3_measures_executed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            2
          ],
          [
            "NOT",
            [
              "EQ",
              "level_2_measures_executed",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]