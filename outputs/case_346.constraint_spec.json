[
  {
    "id": "insurance:violate_148_1_1_or_2",
    "desc": "違反第一百四十八條之一第一項或第二項規定",
    "expr": [
      "EQ",
      "violate_148_1_1_or_2",
      [
        "EQ",
        "violate_148_1_1_or_2_flag",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violate_148_2_1_doc_issue",
    "desc": "違反第一百四十八條之二第一項規定，未提供說明文件供查閱、或說明文件未依規定記載或記載不實",
    "expr": [
      "EQ",
      "violate_148_2_1_doc_issue",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "doc_provided_for_review",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "doc_compliant_record",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "doc_truthful",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violate_148_2_2_report_issue",
    "desc": "違反第一百四十八條之二第二項規定，未依限向主管機關報告或主動公開說明，或報告或公開說明內容不實",
    "expr": [
      "EQ",
      "violate_148_2_2_report_issue",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "report_submitted_on_time",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "report_public_disclosed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "report_truthful",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violate_148_3_1_internal_control",
    "desc": "違反第一百四十八條之三第一項規定，未建立或未執行內部控制或稽核制度",
    "expr": [
      "EQ",
      "violate_148_3_1_internal_control",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violate_148_3_2_internal_handling",
    "desc": "違反第一百四十八條之三第二項規定，未建立或未執行內部處理制度或程序",
    "expr": [
      "EQ",
      "violate_148_3_2_internal_handling",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_handling_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反任一相關規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "violate_148_1_1_or_2",
          true
        ],
        [
          "EQ",
          "violate_148_2_1_doc_issue",
          true
        ],
        [
          "EQ",
          "violate_148_2_2_report_issue",
          true
        ],
        [
          "EQ",
          "violate_148_3_1_internal_control",
          true
        ],
        [
          "EQ",
          "violate_148_3_2_internal_handling",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
]