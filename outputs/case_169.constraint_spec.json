[
  {
    "id": "e_payment:contract_terms_compliance",
    "desc": "電子支付機構業務定型化契約條款內容不得低於主管機關範本",
    "expr": [
      "EQ",
      "contract_terms_compliance",
      [
        "EQ",
        "contract_terms_meet_minimum_requirements",
        true
      ]
    ],
    "weight": 1,
    "domain": "e_payment"
  },
  {
    "id": "e_payment:internal_control_established",
    "desc": "建立內部控制及稽核制度",
    "expr": [
      "EQ",
      "internal_control_established",
      [
        "EQ",
        "internal_control_system_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "e_payment"
  },
  {
    "id": "e_payment:annual_report_submitted",
    "desc": "會計年度終了四個月內編製營業報告書及財務報告並於董事會通過翌日起15日內申報公告",
    "expr": [
      "EQ",
      "annual_report_submitted",
      [
        "AND",
        [
          "EQ",
          "business_report_prepared_within_4_months",
          true
        ],
        [
          "EQ",
          "financial_report_audited_and_signed",
          true
        ],
        [
          "EQ",
          "board_approval_obtained",
          true
        ],
        [
          "EQ",
          "report_submitted_within_15_days_after_board_approval",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "e_payment"
  },
  {
    "id": "e_payment:illegal_foreign_cooperation",
    "desc": "未經主管機關核准與境外機構合作或協助其於我國境內從事業務",
    "expr": [
      "EQ",
      "illegal_foreign_cooperation",
      [
        "EQ",
        "foreign_cooperation_approved_by_authority",
        false
      ]
    ],
    "weight": 1,
    "domain": "e_payment"
  },
  {
    "id": "e_payment:illegal_foreign_cooperation_penalty_applicable",
    "desc": "違反非法境外合作規定，法人及其代表人應受罰",
    "expr": [
      "EQ",
      "illegal_foreign_cooperation_penalty_applicable",
      [
        "EQ",
        "illegal_foreign_cooperation",
        true
      ]
    ],
    "weight": 1,
    "domain": "e_payment"
  },
  {
    "id": "e_payment:funds_trust_or_guarantee_compliance",
    "desc": "儲值款項扣除準備金餘額及代理收付款項應全部交付信託或取得銀行十足履約保證",
    "expr": [
      "EQ",
      "funds_trust_or_guarantee_compliance",
      [
        "OR",
        [
          "EQ",
          "funds_fully_trusted",
          true
        ],
        [
          "EQ",
          "funds_fully_guaranteed_by_bank",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "e_payment"
  },
  {
    "id": "e_payment:quarterly_audit_report_submitted",
    "desc": "委託會計師每季查核並於季終了後一個月內報主管機關備查",
    "expr": [
      "EQ",
      "quarterly_audit_report_submitted",
      [
        "AND",
        [
          "EQ",
          "quarterly_audit_conducted",
          true
        ],
        [
          "EQ",
          "audit_report_submitted_within_1_month_after_quarter",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "e_payment"
  },
  {
    "id": "e_payment:trust_contract_compliance",
    "desc": "信託契約應記載及不得記載事項符合主管機關公告規定",
    "expr": [
      "EQ",
      "trust_contract_compliance",
      [
        "EQ",
        "trust_contract_meets_regulations",
        true
      ]
    ],
    "weight": 1,
    "domain": "e_payment"
  },
  {
    "id": "e_payment:trust_contract_valid",
    "desc": "信託契約未違反主管機關公告之應記載及不得記載事項",
    "expr": [
      "EQ",
      "trust_contract_valid",
      [
        "AND",
        [
          "EQ",
          "trust_contract_compliance",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "trust_contract_missing_mandatory_items",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "e_payment"
  },
  {
    "id": "e_payment:performance_guarantee_contract_compliance",
    "desc": "履約保證契約由銀行承擔履約保證責任且足額",
    "expr": [
      "EQ",
      "performance_guarantee_contract_compliance",
      [
        "AND",
        [
          "EQ",
          "performance_guarantee_contract_signed_with_bank",
          true
        ],
        [
          "EQ",
          "performance_guarantee_amount_sufficient",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "e_payment"
  },
  {
    "id": "e_payment:contract_renewal_reported",
    "desc": "信託契約或履約保證契約到期前二個月完成續約或新訂並函報主管機關備查",
    "expr": [
      "EQ",
      "contract_renewal_reported",
      [
        "AND",
        [
          "EQ",
          "contract_renewed_or_new_signed_before_2_months_expiry",
          true
        ],
        [
          "EQ",
          "renewal_reported_to_authority",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "e_payment"
  },
  {
    "id": "e_payment:registration_and_payment_restriction",
    "desc": "未依規定辦理信託或履約保證者，不得受理新使用者註冊、簽訂特約機構及收受新增支付款項",
    "expr": [
      "EQ",
      "registration_and_payment_restriction",
      [
        "NOT",
        [
          "AND",
          [
            "EQ",
            "funds_trust_or_guarantee_compliance",
            true
          ],
          [
            "EQ",
            "contract_renewal_reported",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "e_payment"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反非法境外合作或未建立內部控制制度或未依規定辦理信託或履約保證或未完成契約續約報備時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "illegal_foreign_cooperation",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "funds_trust_or_guarantee_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "contract_renewal_reported",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]