[
  {
    "id": "aml:internal_control_established",
    "desc": "建立洗錢防制內部控制與稽核制度",
    "expr": [
      "EQ",
      "internal_control_established",
      [
        "AND",
        [
          "EQ",
          "control_procedures_established",
          true
        ],
        [
          "EQ",
          "training_held",
          true
        ],
        [
          "EQ",
          "dedicated_personnel_assigned",
          true
        ],
        [
          "EQ",
          "risk_assessment_report_updated",
          true
        ],
        [
          "EQ",
          "audit_procedures_established",
          true
        ],
        [
          "EQ",
          "other_required_matters_established",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:internal_control_executed",
    "desc": "洗錢防制內部控制制度確實執行",
    "expr": [
      "EQ",
      "internal_control_executed",
      [
        "EQ",
        "internal_control_implemented",
        true
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:compliance_ok",
    "desc": "已建立且確實執行洗錢防制內部控制與稽核制度",
    "expr": [
      "EQ",
      "compliance_ok",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:inspection_cooperation",
    "desc": "未規避、拒絕或妨礙查核",
    "expr": [
      "EQ",
      "inspection_cooperation",
      [
        "NOT",
        [
          "OR",
          [
            "EQ",
            "inspection_evaded",
            true
          ],
          [
            "EQ",
            "inspection_refused",
            true
          ],
          [
            "EQ",
            "inspection_obstructed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：未建立或未執行洗錢防制內部控制制度，或規避拒絕妨礙查核時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "compliance_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "inspection_cooperation",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]