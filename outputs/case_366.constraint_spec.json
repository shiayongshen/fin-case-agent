  },
  {
    "id": "bank:internal_operation_executed",
    "desc": "內部作業制度及程序確實執行",
    "expr": [
      "EQ",
      "internal_operation_executed",
      [
        "EQ",
        "internal_operation_system_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_control_ok",
    "desc": "內部控制及稽核制度建立且確實執行",
    "expr": [
      "EQ",
      "internal_control_ok",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_handling_ok",
    "desc": "內部處理制度及程序建立且確實執行",
    "expr": [
      "EQ",
      "internal_handling_ok",
      [
        "AND",
        [
          "EQ",
          "internal_handling_established",
          true
        ],
        [
          "EQ",
          "internal_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_operation_ok",
    "desc": "內部作業制度及程序建立且確實執行",
    "expr": [
      "EQ",
      "internal_operation_ok",
      [
        "AND",
        [
          "EQ",
          "internal_operation_established",
          true
        ],
        [
          "EQ",
          "internal_operation_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:risk_control_unit_established",
    "desc": "設置獨立專責風險控管單位",
    "expr": [
      "EQ",
      "risk_control_unit_established",
      [
        "EQ",
        "independent_risk_control_unit_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:risk_control_reported",
    "desc": "定期向董（理）事會提出風險控管報告",
    "expr": [
      "EQ",
      "risk_control_reported",
      [
        "EQ",
        "risk_control_report_submitted",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:risk_control_measures_taken",
    "desc": "發現重大風險時採取適當措施並向董（理）事會報告",
    "expr": [
      "EQ",
      "risk_control_measures_taken",
      [
        "IMPLIES",
        [
          "EQ",
          "major_risk_found",
          true
        ],
        [
          "AND",
          [
            "EQ",
            "appropriate_measures_taken",
            true
          ],
          [
            "EQ",
            "reported_to_board",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_control_compliance",
    "desc": "內部控制及稽核制度、內部處理制度及程序、內部作業制度及程序均建立且確實執行",
    "expr": [
      "EQ",
      "internal_control_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_control_ok",
          true
        ],
        [
          "EQ",
          "internal_handling_ok",
          true
        ],
        [
          "EQ",
          "internal_operation_ok",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：未依規定建立或執行內部控制、內部處理或內部作業制度時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "NOT",
        [
          "EQ",
          "internal_control_compliance",
          true
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]