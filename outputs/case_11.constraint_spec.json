    "expr": [
      "EQ",
      "violation_148_1_2",
      [
        "EQ",
        "violate_148_1_2",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_148_2_1",
