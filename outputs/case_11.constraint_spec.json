          "violation_148_2_1",
          true
        ],
        [
          "EQ",
          "violation_148_2_2",
          true
        ],
        [
          "EQ",
          "violation_148_3_1",
          true
        ],
        [
          "EQ",
          "violation_148_3_2",
          true
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            4
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_severely_insufficient_measures_executed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            3
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_significantly_insufficient_measures_executed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            2
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_insufficient_measures_executed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "financial_or_business_condition_deteriorated",
            true
          ],
          [
            "OR",
            [
              "EQ",
              "cannot_pay_debts",
              true
            ],
            [
              "EQ",
              "cannot_fulfill_contract",
              true
            ],
            [
              "EQ",
              "risk_to_insured_rights",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
