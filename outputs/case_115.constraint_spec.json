[
  {
    "id": "insurance:license_and_guarantee_compliance",
    "desc": "保險代理人、經紀人、公證人須經主管機關許可，繳存保證金並投保相關保險，且領有執業證照後始得經營或執行業務",
    "expr": [
      "EQ",
      "license_and_guarantee_compliance",
      [
        "AND",
        [
          "EQ",
          "approved_by_authority",
          true
        ],
        [
          "GE",
          "guarantee_deposit_amount",
          "minimum_guarantee_deposit"
        ],
        [
          "EQ",
          "relevant_insurance_subscribed",
          true
        ],
        [
          "EQ",
          "license_issued",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:relevant_insurance_type_compliance",
    "desc": "相關保險類型依身份區分：代理人、公證人為責任保險；經紀人為責任保險及保證保險",
    "expr": [
      "EQ",
      "relevant_insurance_type_compliance",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "agent",
            true
          ],
          [
            "EQ",
            "insurance_type_responsibility",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "broker",
            true
          ],
          [
            "EQ",
            "insurance_type_responsibility",
            true
          ],
          [
            "EQ",
            "insurance_type_guarantee",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "notary",
            true
          ],
          [
            "EQ",
            "insurance_type_responsibility",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:minimum_guarantee_deposit_and_insurance_amount_set_by_authority",
    "desc": "主管機關依經營及執行業務範圍及規模定最低保證金及保險金額",
    "expr": [
      "EQ",
      "minimum_guarantee_deposit_and_insurance_amount_set_by_authority",
      [
        "EQ",
        "authority_set_minimum_amount",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:management_rules_set_by_authority",
    "desc": "主管機關定管理規則涵蓋資格、申請、程序、文件、董事監察人經理人資格、解任、分支機構、財務業務管理、教育訓練、廢止許可及其他事項",
    "expr": [
      "EQ",
      "management_rules_set_by_authority",
      [
        "EQ",
        "authority_set_management_rules",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:bank_permission_for_agent_or_broker",
    "desc": "銀行經主管機關許可擇一兼營保險代理人或經紀人業務，並分別準用相關規定",
    "expr": [
      "EQ",
      "bank_permission_for_agent_or_broker",
      [
        "AND",
        [
          "EQ",
          "bank_approved_by_authority",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "bank_operate_as_agent",
            true
          ],
          [
            "EQ",
            "bank_operate_as_broker",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_duty_of_care_and_fidelity",
    "desc": "保險經紀人應以善良管理人注意義務及忠實義務為被保險人洽訂保險契約或提供服務",
    "expr": [
      "EQ",
      "broker_duty_of_care_and_fidelity",
      [
        "AND",
        [
          "EQ",
          "broker_exercise_duty_of_care",
          true
        ],
        [
          "EQ",
          "broker_exercise_fidelity",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_provide_written_analysis_report_and_disclose_fee",
    "desc": "保險經紀人於主管機關指定範圍內洽訂保險契約前，主動提供書面分析報告，收取報酬者明確告知報酬標準",
    "expr": [
      "EQ",
      "broker_provide_written_analysis_report_and_disclose_fee",
      [
        "AND",
        [
          "EQ",
          "broker_provide_written_report",
          true
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "broker_charge_fee",
            true
          ],
          [
            "EQ",
            "broker_disclose_fee_standard",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_financial_or_business_management_rules",
    "desc": "違反財務或業務管理規定或相關規定者，應限期改正或處罰",
    "expr": [
      "EQ",
      "violation_financial_or_business_management_rules",
      [
        "OR",
        [
          "EQ",
          "violate_financial_management_rules",
          true
        ],
        [
          "EQ",
          "violate_business_management_rules",
          true
        ],
        [
          "EQ",
          "violate_related_regulations",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_duty_of_care_and_fidelity_compliance",
    "desc": "經紀人執行或經營業務時盡善良管理人注意及忠實義務，維護被保險人利益並充分揭露資訊",
    "expr": [
      "EQ",
      "broker_duty_of_care_and_fidelity_compliance",
      [
        "AND",
        [
          "EQ",
          "broker_exercise_duty_of_care",
          true
        ],
        [
          "EQ",
          "broker_exercise_fidelity",
          true
        ],
        [
          "EQ",
          "broker_maintain_client_interest",
          true
        ],
        [
          "EQ",
          "broker_disclose_main_content_and_rights",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_document_retention",
    "desc": "經紀人及銀行應留存相關文件備查",
    "expr": [
      "EQ",
      "broker_document_retention",
      [
        "EQ",
        "broker_documents_retained",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_obtain_contact_info_for_e_policy",
    "desc": "招攬電子保單業務時，應取得要保人及被保險人聯絡方式並提供保險人",
    "expr": [
      "EQ",
      "broker_obtain_contact_info_for_e_policy",
      [
        "IMPLIES",
        [
          "EQ",
          "insurance_policy_is_electronic",
          true
        ],
        [
          "AND",
          [
            "OR",
            [
              "EQ",
              "applicant_mobile_phone",
              true
            ],
            [
              "EQ",
              "applicant_email",
              true
            ],
            [
              "EQ",
              "applicant_other_contact",
              true
            ]
          ],
          [
            "OR",
            [
              "EQ",
              "insured_mobile_phone",
              true
            ],
            [
              "EQ",
              "insured_email",
              true
            ],
            [
              "EQ",
              "insured_other_contact",
              true
            ]
          ],
          [
            "EQ",
            "provide_contact_to_insurer",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_internal_operation_compliance",
    "desc": "經紀人公司及銀行應訂定並落實內部作業規範，確保遵循法令及保障高齡消費者權益",
    "expr": [
      "EQ",
      "broker_internal_operation_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_operation_rules_established",
          true
        ],
        [
          "EQ",
          "internal_operation_rules_executed",
          true
        ],
        [
          "EQ",
          "comply_with_laws_and_regulations",
          true
        ],
        [
          "EQ",
          "protect_senior_consumer_rights",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_understand_client_and_provide_report_before_contract",
    "desc": "經紀人洽訂保險契約前應充分瞭解要保人及被保險人基本資料、需求及風險屬性，並依主管機關規定提供書面分析報告及明確告知報酬標準",
    "expr": [
      "EQ",
      "broker_understand_client_and_provide_report_before_contract",
      [
        "AND",
        [
          "EQ",
          "broker_understand_client_info",
          true
        ],
        [
          "EQ",
          "broker_provide_written_report",
          true
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "broker_charge_fee",
            true
          ],
          [
            "EQ",
            "broker_disclose_fee_standard",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_disclose_shareholding_info_before_contract",
    "desc": "經紀人於洽訂保險契約前應揭露與保險公司持股超過10%之資訊",
    "expr": [
      "EQ",
      "broker_disclose_shareholding_info_before_contract",
      [
        "IMPLIES",
        [
          "OR",
          [
            "GT",
            "broker_company_shareholding_in_insurer",
            10.0
          ],
          [
            "GT",
            "insurer_shareholding_in_broker_company",
            10.0
          ]
        ],
        [
          "EQ",
          "broker_disclose_shareholding_info",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反許可、保證金、保險、執業證照規定或違反財務、業務管理規定，或違反善良管理人及忠實義務，或未依規定提供書面報告及揭露資訊時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "license_and_guarantee_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "relevant_insurance_type_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "management_rules_set_by_authority",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "violation_financial_or_business_management_rules",
            false
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_duty_of_care_and_fidelity_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_provide_written_analysis_report_and_disclose_fee",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_document_retention",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_obtain_contact_info_for_e_policy",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_internal_operation_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_understand_client_and_provide_report_before_contract",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_disclose_shareholding_info_before_contract",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
]