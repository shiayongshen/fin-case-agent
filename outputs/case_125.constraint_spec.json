    "expr": [
      "EQ",
      "loan_limit_compliance",
      [
        "EQ",
        "loan_and_transaction_limit_followed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:related_party_transaction_compliance",
    "desc": "保險業與利害關係人從事放款以外其他交易符合主管機關限制",
    "expr": [
      "EQ",
      "related_party_transaction_compliance",
      [
        "EQ",
        "related_party_other_transaction_limit_followed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:inspection_refusal",
    "desc": "保險業負責人或職員拒絕檢查或拒絕開啟金庫或其他庫房",
    "expr": [
      "EQ",
      "inspection_refusal",
      [
        "EQ",
        "refused_inspection_or_opening",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:document_concealment",
    "desc": "保險業負責人或職員隱匿或毀損有關業務或財務狀況帳冊文件",
    "expr": [
      "EQ",
      "document_concealment",
      [
        "EQ",
        "concealed_or_destroyed_documents",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:uncooperative_response",
    "desc": "保險業負責人或職員無故不答復或答復不實檢查人員詢問",
    "expr": [
      "EQ",
      "uncooperative_response",
      [
        "EQ",
        "uncooperative_or_false_response",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:late_or_false_report",
    "desc": "保險業負責人或職員逾期提報或提報不實、不全財務報告、財產目錄或其他資料及報告，或未於規定期限繳納查核費用",
    "expr": [
      "EQ",
      "late_or_false_report",
      [
        "EQ",
        "late_or_false_financial_report",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:related_entity_report_failure",
    "desc": "保險業關係企業或其他金融機構怠於提供財務報告、帳冊、文件或相關交易資料",
    "expr": [
      "EQ",
      "related_entity_report_failure",
      [
        "EQ",
        "related_entity_failed_to_provide_documents",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_violation",
    "desc": "違反內部控制或稽核制度規定",
    "expr": [
      "EQ",
      "internal_control_violation",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_violation",
    "desc": "違反內部處理制度或程序規定",
    "expr": [
      "EQ",
      "internal_handling_violation",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_handling_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
