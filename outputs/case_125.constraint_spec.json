    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_compliance",
    "desc": "保險業內部控制及稽核制度建立且執行",
    "expr": [
      "EQ",
      "internal_control_compliance",
      [
        "AND",
        [
