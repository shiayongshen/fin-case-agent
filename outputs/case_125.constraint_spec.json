    "expr": [
      "EQ",
      "timely_report_compliance",
      [
        "EQ",
        "timely_report_and_disclosure",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:contract_insurance_truthful",
    "desc": "要保人對保險人書面詢問據實說明",
    "expr": [
      "EQ",
      "contract_insurance_truthful",
      [
        "EQ",
        "applicant_truthful_disclosure",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "insurance:penalty_conditions",
    "desc": "處罰條件：違反內部控制、內部處理制度或檢查規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "inspection_refusal",
          true
        ],
        [
          "EQ",
          "document_concealment",
          true
        ],
        [
          "EQ",
          "uncooperative_response",
          true
        ],
        [
          "EQ",
          "late_or_false_report",
          true
        ],
        [
          "EQ",
          "related_entity_report_failure",
          true
        ],
        [
          "EQ",
          "internal_control_violation",
          true
        ],
        [
          "EQ",
          "internal_handling_violation",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "financial_disclosure_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "timely_report_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "contract_insurance_truthful",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "loan_limit_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "related_party_transaction_compliance",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]