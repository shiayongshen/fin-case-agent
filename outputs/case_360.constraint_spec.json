  {
    "id": "bank:derivative_staff_qualified",
    "desc": "衍生性金融商品業務人員具備專業資格條件",
    "expr": [
      "EQ",
      "derivative_staff_qualified",
      [
        "OR",
        [
          "GE",
          "derivative_training_months",
          3
        ],
        [
          "EQ",
          "derivative_license_held",
          true
        ],
        [
          "GE",
          "derivative_internship_years",
          1
        ],
        [
          "GE",
          "derivative_experience_months",
          6
        ],
        [
          "OR",
          [
            "EQ",
            "structured_product_staff_qualified",
            true
          ],
          [
            "EQ",
            "structured_product_exam_passed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:derivative_structured_qualification",
    "desc": "結構型商品推介人員具備資格或通過資格測驗",
    "expr": [
      "EQ",
      "structured_product_staff_qualified",
      [
        "OR",
        [
          "GE",
          "derivative_training_months",
          3
        ],
        [
          "EQ",
          "derivative_license_held",
          true
        ],
        [
          "GE",
          "derivative_internship_years",
          1
        ],
        [
          "GE",
          "derivative_experience_months",
          6
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:forex_derivative_permit_required",
    "desc": "外匯衍生性商品業務需申請許可或函報備查",
    "expr": [
      "EQ",
      "forex_derivative_permit_required",
      [
        "OR",
        [
          "EQ",
          "forex_derivative_pre_open_permit",
          true
        ],
        [
          "EQ",
          "forex_derivative_pre_open_report",
          true
        ],
        [
          "EQ",
          "forex_derivative_post_open_report",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:forex_derivative_pre_open_permit",
    "desc": "外匯衍生性商品開辦前申請許可類",
    "expr": [
      "EQ",
      "forex_derivative_pre_open_permit",
      [
        "OR",
        [
          "EQ",
          "forex_derivative_not_open_or_open_less_than_6_months",
          true
        ],
        [
          "EQ",
          "forex_derivative_non_principal_ntd_forward",
          true
        ],
        [
          "EQ",
          "forex_derivative_ntd_exchange_rate_related",
          true
        ],
        [
          "EQ",
          "forex_derivative_client_margin_trading",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:forex_derivative_pre_open_report",
    "desc": "外匯衍生性商品開辦前函報備查類",
    "expr": [
