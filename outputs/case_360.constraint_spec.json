    "desc": "外匯衍生性商品開辦後函報備查類",
    "expr": [
      "EQ",
      "forex_derivative_post_open_report",
      [
        "OR",
        [
          "EQ",
          "forex_derivative_open_more_than_6_months_non_ntd",
          true
        ],
        [
          "EQ",
          "forex_derivative_professional_or_high_net_worth_clients",
          true
        ],
        [
          "EQ",
          "forex_derivative_offshore_info_consulting_approved",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：未依規定建立或執行內部控制、內部處理、內部作業制度或違反外匯衍生性商品管理規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_operation_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "derivative_staff_qualified",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "forex_derivative_permit_required",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
