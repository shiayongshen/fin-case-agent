[
  {
    "id": "insurance:license_and_guarantee_compliance",
    "desc": "保險代理人、經紀人、公證人須經主管機關許可，繳存保證金並投保相關保險，且領有執業證照後始得經營或執行業務",
    "expr": [
      "EQ",
      "license_and_guarantee_compliance",
      [
        "AND",
        [
          "EQ",
          "approved_by_authority",
          true
        ],
        [
          "GE",
          "guarantee_deposit_amount",
          "minimum_guarantee_deposit"
        ],
        [
          "EQ",
          "relevant_insurance_subscribed",
          true
        ],
        [
          "EQ",
          "license_issued",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:relevant_insurance_type_compliance",
    "desc": "相關保險類型依身份區分：保險代理人、公證人為責任保險；保險經紀人為責任保險及保證保險",
    "expr": [
      "EQ",
      "relevant_insurance_subscribed",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "agent_or_notary",
            true
          ],
          [
            "EQ",
            "liability_insurance_subscribed",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "broker",
            true
          ],
          [
            "EQ",
            "liability_insurance_subscribed",
            true
          ],
          [
            "EQ",
            "guarantee_insurance_subscribed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:minimum_guarantee_deposit_defined",
    "desc": "最低保證金及實施方式由主管機關依經營業務範圍及規模定之",
    "expr": [
      "EQ",
      "minimum_guarantee_deposit_defined",
      [
        "EQ",
        "authority_defined_minimum_guarantee_deposit",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:management_rules_defined",
    "desc": "資格取得、申請許可條件、程序、文件、董事監察人經理人資格、解任事由、分支機構條件、財務業務管理、教育訓練、廢止許可及其他應遵行事項由主管機關定之",
    "expr": [
      "EQ",
      "management_rules_defined",
      [
        "EQ",
        "authority_defined_management_rules",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:bank_permission_and_application",
    "desc": "銀行得經主管機關許可擇一兼營保險代理人或保險經紀人業務，並分別準用相關規定",
    "expr": [
      "EQ",
      "bank_permission_and_application",
      [
        "AND",
        [
          "EQ",
          "bank_approved_by_authority",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "bank_operate_as_agent",
            true
          ],
          [
            "EQ",
            "bank_operate_as_broker",
            true
          ]
        ],
        [
          "EQ",
          "apply_agent_broker_regulations",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_duties",
    "desc": "保險經紀人應以善良管理人注意義務洽訂保險契約或提供服務，並負忠實義務",
    "expr": [
      "EQ",
      "broker_duties_complied",
      [
        "AND",
        [
          "EQ",
          "duty_of_care",
          true
        ],
        [
          "EQ",
          "duty_of_fidelity",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_report_and_fee_disclosure",
    "desc": "保險經紀人洽訂契約前，於主管機關指定範圍內主動提供書面分析報告，收取報酬者明確告知報酬標準",
    "expr": [
      "EQ",
      "broker_report_and_fee_disclosure_complied",
      [
        "AND",
        [
          "EQ",
          "written_analysis_report_provided",
          true
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "fee_charged",
            true
          ],
          [
            "EQ",
            "fee_disclosure_made",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_penalties",
    "desc": "違反法令或有礙健全經營時，主管機關得糾正、限期改善，並視情節輕重處分",
    "expr": [
      "EQ",
      "violation_penalties_applicable",
      [
        "OR",
        [
          "EQ",
          "corrective_order_issued",
          true
        ],
        [
          "EQ",
          "improvement_order_issued",
          true
        ],
        [
          "EQ",
          "business_scope_restriction",
          true
        ],
        [
          "EQ",
          "manager_or_staff_dismissed",
          true
        ],
        [
          "EQ",
          "director_or_supervisor_dismissed_or_suspended",
          true
        ],
        [
          "EQ",
          "other_necessary_measures_taken",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:director_supervisor_deregistration",
    "desc": "依規定解除董事或監察人職務時，主管機關通知登記主管機關註銷其登記",
    "expr": [
      "EQ",
      "director_supervisor_deregistration_done",
      [
        "IMPLIES",
        [
          "EQ",
          "director_or_supervisor_dismissed",
          true
        ],
        [
          "EQ",
          "deregistration_notified",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_and_business_management_violation",
    "desc": "違反財務或業務管理規定或相關規定者，應限期改正或處罰，情節重大者廢止許可並註銷執照",
    "expr": [
      "EQ",
      "financial_and_business_management_violation",
      [
        "OR",
        [
          "EQ",
          "violate_financial_management_rules",
          true
        ],
        [
          "EQ",
          "violate_business_management_rules",
          true
        ],
        [
          "EQ",
          "violate_related_regulations",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_and_business_management_violation_penalty",
    "desc": "違反財務或業務管理規定者，未限期改正或未廢止許可者處罰",
    "expr": [
      "EQ",
      "financial_and_business_management_violation_penalty",
      [
        "AND",
        [
          "EQ",
          "financial_and_business_management_violation",
          true
        ],
        [
          "OR",
          [
            "NOT",
            [
              "EQ",
              "correction_completed",
              true
            ]
          ],
          [
            "NOT",
            [
              "EQ",
              "license_revoked",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_prohibited_acts_compliance",
    "desc": "保險經紀人及相關人員不得有規則第49條所列禁止行為",
    "expr": [
      "EQ",
      "broker_prohibited_acts_compliance",
      [
        "AND",
        [
          "NOT",
          [
            "EQ",
            "false_report_at_license_application",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "contract_with_unapproved_insurer",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "conceal_important_contract_info",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "improper_coercion_or_inducement",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "false_or_misleading_promotion",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "improper_inducement_to_cancel_or_loan",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "misappropriation_of_funds",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "unauthorized_use_of_license",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "criminal_conviction_for_fraud_or_breach",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "operate_outside_license_scope",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "improper_fee_collection",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "illegal_insurance_claims",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "disrupt_financial_order",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "unauthorized_delegation_or_operation",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "improper_transfer_of_application_documents",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "employ_unqualified_personnel",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "failure_to_cancel_license_in_time",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "unauthorized_suspension_or_termination_of_business",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "failure_to_reappoint_broker_after_resignation",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "failure_to_report_to_broker_association",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "unauthorized_use_of_advertisement",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "improper_commission_payment",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "failure_to_confirm_consumer_suitability",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "sale_of_unapproved_foreign_policy_discount_certificates",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "false_or_incomplete_business_or_financial_reports",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "conflict_of_interest_or_registration_violation",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "induce_cancellation_or_termination_of_contract",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "failure_to_fill_out_prospectus_truthfully",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "other_violations_of_rules_or_laws",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "damage_insurance_image",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反許可、保證金、保險投保、執業證照規定或違反管理規則及禁止行為時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "license_and_guarantee_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "management_rules_defined",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_prohibited_acts_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "financial_and_business_management_violation_penalty",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]