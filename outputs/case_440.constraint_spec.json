[
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_4_noncompliance",
    "desc": "資本嚴重不足且未依規定完成增資、改善計畫或合併",
    "expr": [
      "EQ",
      "capital_level_4_noncompliance",
      [
        "AND",
        [
          "EQ",
          "capital_level",
          4
        ],
        [
          "NOT",
          [
            "EQ",
            "capital_increase_completed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "financial_or_business_improvement_plan_completed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "merger_completed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_4_penalty_period",
    "desc": "資本嚴重不足且未於期限內完成增資、改善計畫或合併且期限屆滿超過90日",
    "expr": [
      "EQ",
      "capital_level_4_penalty_period",
      [
        "AND",
        [
          "EQ",
          "capital_level_4_noncompliance",
          true
        ],
        [
          "GT",
          "days_after_deadline",
          90
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_or_business_deterioration",
    "desc": "財務或業務狀況顯著惡化且不能支付債務或無法履行契約責任或有損及被保險人權益之虞",
    "expr": [
      "EQ",
      "financial_or_business_deterioration",
      [
        "AND",
        [
          "EQ",
          "financial_or_business_status_significantly_deteriorated",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "unable_to_pay_debts",
            true
          ],
          [
            "EQ",
            "unable_to_fulfill_contractual_obligations",
            true
          ],
          [
            "EQ",
            "risk_of_harming_insured_rights",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_required",
    "desc": "主管機關已令保險業提出財務或業務改善計畫並核定",
    "expr": [
      "EQ",
      "improvement_plan_required",
      [
        "AND",
        [
          "EQ",
          "improvement_plan_ordered_by_authority",
          true
        ],
        [
          "EQ",
          "improvement_plan_approved_by_authority",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_failure",
    "desc": "損益、淨值加速惡化或經輔導仍未改善，致仍有財務或業務惡化之虞",
    "expr": [
      "EQ",
      "improvement_plan_failure",
      [
        "AND",
        [
          "OR",
          [
            "EQ",
            "profit_loss_accelerated_deterioration",
            true
          ],
          [
            "EQ",
            "net_worth_accelerated_deterioration",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "improvement_plan_effective",
            true
          ]
        ],
        [
          "EQ",
          "financial_or_business_deterioration",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:supervision_or_takeover_or_shutdown",
    "desc": "主管機關依情節輕重為監管、接管、勒令停業清理或命令解散之處分",
    "expr": [
      "EQ",
      "supervision_or_takeover_or_shutdown",
      [
        "OR",
        [
          "EQ",
          "capital_level_4_penalty_period",
          true
        ],
        [
          "AND",
          [
            "NOT",
            [
              "EQ",
              "capital_level",
              4
            ]
          ],
          [
            "EQ",
            "improvement_plan_failure",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:reinsurance_violation",
    "desc": "違反再保險分出、分入、危險分散機制方式或限額規定",
    "expr": [
      "EQ",
      "reinsurance_violation",
      [
        "EQ",
        "violation_of_reinsurance_rules",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:professional_reinsurance_violation",
    "desc": "專業再保險業違反業務範圍或財務管理規定",
    "expr": [
      "EQ",
      "professional_reinsurance_violation",
      [
        "EQ",
        "violation_of_professional_reinsurance_rules",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_violation",
    "desc": "未建立或未執行內部控制或稽核制度",
    "expr": [
      "EQ",
      "internal_control_violation",
      [
        "NOT",
        [
          "AND",
          [
            "EQ",
            "internal_control_established",
            true
          ],
          [
            "EQ",
            "internal_control_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_violation",
    "desc": "未建立或未執行內部處理制度或程序",
    "expr": [
      "EQ",
      "internal_handling_violation",
      [
        "NOT",
        [
          "AND",
          [
            "EQ",
            "internal_handling_established",
            true
          ],
          [
            "EQ",
            "internal_handling_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_147_1_or_2",
    "desc": "違反第一百四十八條之一第一項或第二項規定",
    "expr": [
      "EQ",
      "violation_147_1_or_2",
      [
        "EQ",
        "violation_of_article_148_1_or_2",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_148_2_1",
    "desc": "違反第一百四十八條之二第一項規定，未提供說明文件或文件不實",
    "expr": [
      "EQ",
      "violation_148_2_1",
      [
        "EQ",
        "violation_of_article_148_2_1",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_148_2_2",
    "desc": "違反第一百四十八條之二第二項規定，未依限報告或公開說明或內容不實",
    "expr": [
      "EQ",
      "violation_148_2_2",
      [
        "EQ",
        "violation_of_article_148_2_2",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反任一法令規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "reinsurance_violation",
          true
        ],
        [
          "EQ",
          "professional_reinsurance_violation",
          true
        ],
        [
          "EQ",
          "internal_control_violation",
          true
        ],
        [
          "EQ",
          "internal_handling_violation",
          true
        ],
        [
          "EQ",
          "violation_147_1_or_2",
          true
        ],
        [
          "EQ",
          "violation_148_2_1",
          true
        ],
        [
          "EQ",
          "violation_148_2_2",
          true
        ],
        [
          "EQ",
          "capital_level_4_penalty_period",
          true
        ],
        [
          "AND",
          [
            "NOT",
            [
              "EQ",
              "capital_level",
              4
            ]
          ],
          [
            "EQ",
            "improvement_plan_failure",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
]