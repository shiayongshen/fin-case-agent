[
  {
    "id": "insurance_agent:license_and_insurance_compliance",
    "desc": "保險代理人、經紀人、公證人須經主管機關許可，繳存保證金並投保相關保險，且領有執業證照後始得經營或執行業務",
    "expr": [
      "EQ",
      "license_and_insurance_compliance",
      [
        "AND",
        [
          "EQ",
          "license_permitted",
          true
        ],
        [
          "EQ",
          "guarantee_deposit_paid",
          true
        ],
        [
          "EQ",
          "related_insurance_purchased",
          true
        ],
        [
          "EQ",
          "practice_certificate_held",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance_agent"
  },
  {
    "id": "insurance_agent:related_insurance_type_compliance",
    "desc": "相關保險種類依代理人、經紀人、公證人身份區分",
    "expr": [
      "EQ",
      "related_insurance_type_compliance",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "agent_type",
            1
          ],
          [
            "EQ",
            "liability_insurance_purchased",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "agent_type",
            2
          ],
          [
            "EQ",
            "liability_insurance_purchased",
            true
          ],
          [
            "EQ",
            "guarantee_insurance_purchased",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "agent_type",
            3
          ],
          [
            "EQ",
            "liability_insurance_purchased",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance_agent"
  },
  {
    "id": "insurance_agent:bank_permission_and_separate_application",
    "desc": "銀行經主管機關許可擇一兼營保險代理人或保險經紀人業務，並分別準用相關規定",
    "expr": [
      "EQ",
      "bank_permission_and_separate_application",
      [
        "AND",
        [
          "EQ",
          "bank_permission_granted",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "bank_operate_as_agent",
            true
          ],
          [
            "EQ",
            "bank_operate_as_broker",
            true
          ]
        ],
        [
          "EQ",
          "bank_separately_apply_agent_broker_rules",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance_agent"
  },
  {
    "id": "insurance_broker:duty_of_care_and_fidelity",
    "desc": "保險經紀人應以善良管理人注意義務為被保險人洽訂保險契約並負忠實義務",
    "expr": [
      "EQ",
      "duty_of_care_and_fidelity",
      [
        "AND",
        [
          "EQ",
          "duty_of_care_observed",
          true
        ],
        [
          "EQ",
          "duty_of_fidelity_observed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance_broker"
  },
  {
    "id": "insurance_broker:pre_contract_report_and_fee_disclosure",
    "desc": "保險經紀人洽訂保險契約前應主動提供書面分析報告，收取報酬者應明確告知報酬標準",
    "expr": [
      "EQ",
      "pre_contract_report_and_fee_disclosure",
      [
        "AND",
        [
          "EQ",
          "written_analysis_report_provided",
          true
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "fee_charged",
            true
          ],
          [
            "EQ",
            "fee_standard_disclosed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance_broker"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：未經主管機關許可、未繳存保證金、未投保相關保險、未領執業證照或未遵守保險經紀人義務時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "license_and_insurance_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "related_insurance_type_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "bank_permission_and_separate_application",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "duty_of_care_and_fidelity",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "pre_contract_report_and_fee_disclosure",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
]