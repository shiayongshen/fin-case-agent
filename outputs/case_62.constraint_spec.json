[
  {
    "id": "insurance:fixed_business_place_and_account_book",
    "desc": "保險代理人、經紀人、公證人應有固定業務處所並專設帳簿記載業務收支",
    "expr": [
      "EQ",
      "fixed_business_place_and_account_book",
      [
        "AND",
        [
          "EQ",
          "has_fixed_business_place",
          true
        ],
        [
          "EQ",
          "has_dedicated_account_book",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:single_license_only",
    "desc": "兼有保險代理人、經紀人、公證人資格者僅得擇一申領執業證照",
    "expr": [
      "EQ",
      "single_license_only",
      [
        "LE",
        [
          "SUM",
          [
            "IF",
            [
              "EQ",
              "has_agent_license",
              true
            ],
            1,
            0
          ],
          [
            "IF",
            [
              "EQ",
              "has_broker_license",
              true
            ],
            1,
            0
          ],
          [
            "IF",
            [
              "EQ",
              "has_notary_license",
              true
            ],
            1,
            0
          ]
        ],
        1
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_required",
    "desc": "公開發行或具一定規模之保險代理人公司、經紀人公司應建立內部控制、稽核制度與招攬處理制度及程序",
    "expr": [
      "EQ",
      "internal_control_required",
      [
        "IMPLIES",
        [
          "OR",
          [
            "EQ",
            "is_publicly_listed",
            true
          ],
          [
            "EQ",
            "has_certain_scale",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "internal_control_established",
            true
          ],
          [
            "EQ",
            "audit_system_established",
            true
          ],
          [
            "EQ",
            "solicitation_handling_system_established",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_executed",
    "desc": "公開發行或具一定規模之保險代理人公司、經紀人公司應確實執行內部控制、稽核制度與招攬處理制度及程序",
    "expr": [
      "EQ",
      "internal_control_executed",
      [
        "IMPLIES",
        [
          "OR",
          [
            "EQ",
            "is_publicly_listed",
            true
          ],
          [
            "EQ",
            "has_certain_scale",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "internal_control_implemented",
            true
          ],
          [
            "EQ",
            "audit_system_implemented",
            true
          ],
          [
            "EQ",
            "solicitation_handling_system_implemented",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:license_and_insurance_compliance",
    "desc": "保險代理人、經紀人、公證人應經主管機關許可，繳存保證金並投保相關保險，領有執業證照後始得經營或執行業務",
    "expr": [
      "EQ",
      "license_and_insurance_compliance",
      [
        "AND",
        [
          "EQ",
          "has_government_license",
          true
        ],
        [
          "EQ",
          "has_deposit_guarantee",
          true
        ],
        [
          "EQ",
          "has_relevant_insurance",
          true
        ],
        [
          "EQ",
          "has_practice_certificate",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:bank_single_insurance_business",
    "desc": "銀行得經主管機關許可擇一兼營保險代理人或保險經紀人業務，並應分別準用相關規定",
    "expr": [
      "EQ",
      "bank_single_insurance_business",
      [
        "IMPLIES",
        [
          "EQ",
          "bank_has_government_permission",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "bank_operates_as_agent",
            true
          ],
          [
            "EQ",
            "bank_operates_as_broker",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_duty_of_care_and_faithfulness",
    "desc": "保險經紀人應以善良管理人注意義務為被保險人洽訂保險契約並負忠實義務",
    "expr": [
      "EQ",
      "broker_duty_of_care_and_faithfulness",
      [
        "AND",
        [
          "EQ",
          "broker_exercises_duty_of_care",
          true
        ],
        [
          "EQ",
          "broker_exercises_faithfulness",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_must_provide_written_analysis_report",
    "desc": "保險經紀人於主管機關指定範圍內洽訂保險契約前應主動提供書面分析報告並明確告知報酬收取標準",
    "expr": [
      "EQ",
      "broker_must_provide_written_analysis_report",
      [
        "IMPLIES",
        [
          "EQ",
          "within_government_specified_scope",
          true
        ],
        [
          "AND",
          [
            "EQ",
            "written_analysis_report_provided",
            true
          ],
          [
            "EQ",
            "compensation_standard_clearly_informed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "insurance:penalty_conditions",
    "desc": "處罰條件：違反內部控制、稽核制度、招攬處理制度或程序未建立或未確實執行時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "is_publicly_listed",
            true
          ],
          [
            "OR",
            [
              "NOT",
              [
                "EQ",
                "internal_control_established",
                true
              ]
            ],
            [
              "NOT",
              [
                "EQ",
                "audit_system_established",
                true
              ]
            ],
            [
              "NOT",
              [
                "EQ",
                "solicitation_handling_system_established",
                true
              ]
            ],
            [
              "NOT",
              [
                "EQ",
                "internal_control_implemented",
                true
              ]
            ],
            [
              "NOT",
              [
                "EQ",
                "audit_system_implemented",
                true
              ]
            ],
            [
              "NOT",
              [
                "EQ",
                "solicitation_handling_system_implemented",
                true
              ]
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "has_certain_scale",
            true
          ],
          [
            "OR",
            [
              "NOT",
              [
                "EQ",
                "internal_control_established",
                true
              ]
            ],
            [
              "NOT",
              [
                "EQ",
                "audit_system_established",
                true
              ]
            ],
            [
              "NOT",
              [
                "EQ",
                "solicitation_handling_system_established",
                true
              ]
            ],
            [
              "NOT",
              [
                "EQ",
                "internal_control_implemented",
                true
              ]
            ],
            [
              "NOT",
              [
                "EQ",
                "audit_system_implemented",
                true
              ]
            ],
            [
              "NOT",
              [
                "EQ",
                "solicitation_handling_system_implemented",
                true
              ]
            ]
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]