[
  {
    "id": "insurance:related_party_definition",
    "desc": "同一人、同一關係人及同一關係企業定義",
    "expr": [
      "EQ",
      "related_party_definition",
      true
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:supervisor_limit_related_party_transactions",
    "desc": "主管機關得限制保險業對同一人、同一關係人或同一關係企業之放款或其他交易",
    "expr": [
      "EQ",
      "supervisor_limit_related_party_transactions",
      true
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:supervisor_limit_other_transactions",
    "desc": "主管機關得限制保險業與利害關係人從事放款以外之其他交易",
    "expr": [
      "EQ",
      "supervisor_limit_other_transactions",
      true
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_4_compliance",
    "desc": "資本嚴重不足等級措施完成",
    "expr": [
      "EQ",
      "capital_level_4_compliance",
      [
        "EQ",
        "capital_level_4_measures_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_3_compliance",
    "desc": "資本顯著不足等級措施完成",
    "expr": [
      "EQ",
      "capital_level_3_compliance",
      [
        "EQ",
        "capital_level_3_measures_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_2_compliance",
    "desc": "資本不足等級措施完成",
    "expr": [
      "EQ",
      "capital_level_2_compliance",
      [
        "AND",
        [
          "EQ",
          "improvement_plan_submitted",
          true
        ],
        [
          "EQ",
          "improvement_plan_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:supervisor_may_impose_measures",
    "desc": "主管機關得對違反法令或有礙健全經營之保險業予以糾正、限期改善及處分",
    "expr": [
      "EQ",
      "supervisor_may_impose_measures",
      true
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:supervisor_must_take_action_for_level_4",
    "desc": "資本嚴重不足且未依規定完成增資或改善計畫，主管機關應於期限屆滿後90日內為接管等處分",
    "expr": [
      "EQ",
      "supervisor_must_take_action_for_level_4",
      [
        "AND",
        [
          "EQ",
          "capital_level",
          4
        ],
        [
          "NOT",
          [
            "EQ",
            "capital_level_4_compliance",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
