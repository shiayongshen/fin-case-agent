    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反主管機關管理規則財務或業務管理規定、保險經紀人管理規則第27條規定、保險法第163條第7項規定，或有禁止行為時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "violation_financial_or_business_management_or_broker_rules",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "prohibited_conduct_compliance",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
