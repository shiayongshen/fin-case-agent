[
  {
    "id": "securities:internal_control_established",
    "desc": "證券商依規定訂定內部控制制度",
    "expr": [
      "EQ",
      "internal_control_established",
      [
        "AND",
        [
          "EQ",
          "internal_control_established_by_commission",
          true
        ],
        [
          "EQ",
          "internal_control_established_by_exchange",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:business_operated_according_to_law_and_internal_control",
    "desc": "證券商業務依法令、章程及內部控制制度經營",
    "expr": [
      "EQ",
      "business_operated_according_to_law_and_internal_control",
      [
        "AND",
        [
          "EQ",
          "business_operated_according_to_law",
          true
        ],
        [
          "EQ",
          "business_operated_according_to_articles",
          true
        ],
        [
          "EQ",
          "business_operated_according_to_internal_control",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:internal_control_updated_after_notification",
    "desc": "內部控制制度經本會或證券相關機構通知變更後限期內完成變更",
    "expr": [
      "EQ",
      "internal_control_updated_after_notification",
      [
        "IMPLIES",
        [
          "EQ",
          "internal_control_change_notified",
          true
        ],
        [
          "EQ",
          "internal_control_changed_within_deadline",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:violation_of_law_or_orders",
    "desc": "證券商違反證券交易法或依該法發布之命令",
    "expr": [
      "EQ",
      "violation_of_law_or_orders",
      [
        "OR",
        [
          "EQ",
          "violate_securities_law",
          true
        ],
        [
          "EQ",
          "violate_orders_issued_under_law",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:penalty_applicable",
    "desc": "主管機關得依情節輕重處分並命限期改善",
    "expr": [
      "EQ",
      "penalty_applicable",
      [
        "EQ",
        "violation_of_law_or_orders",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:penalty_fine_conditions",
    "desc": "證券商違反特定條文或未提出資料、妨礙檢查、未執行內部控制等情事",
    "expr": [
      "EQ",
      "penalty_fine_conditions",
      [
        "OR",
        [
          "EQ",
          "violate_specified_articles",
          true
        ],
        [
          "EQ",
          "fail_to_submit_required_documents",
          true
        ],
        [
          "EQ",
          "obstruct_or_refuse_inspection",
          true
        ],
        [
          "EQ",
          "fail_to_produce_or_report_documents",
          true
        ],
        [
          "EQ",
          "fail_to_execute_internal_control",
          true
        ],
        [
          "EQ",
          "violate_financial_or_management_rules",
          true
        ],
        [
          "EQ",
          "violate_other_regulations",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:penalty_fine_imposed",
    "desc": "違反罰鍰條件且未改善者處罰",
    "expr": [
      "EQ",
      "penalty_fine_imposed",
      [
        "AND",
        [
          "EQ",
          "penalty_fine_conditions",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "improvement_completed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反證券交易法相關規定且未改善時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "violation_of_law_or_orders",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "improvement_completed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "penalty_fine_conditions",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "improvement_completed",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
]