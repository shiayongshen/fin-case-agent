[
  {
    "id": "securities:fiduciary_duty_compliance",
    "desc": "證券投資信託及顧問事業等依善良管理人注意義務及忠實義務執行業務",
    "expr": [
      "EQ",
      "fiduciary_duty_compliance",
      [
        "AND",
        [
          "EQ",
          "complies_with_law",
          true
        ],
        [
          "EQ",
          "complies_with_orders",
          true
        ],
        [
          "EQ",
          "complies_with_contracts",
          true
        ],
        [
          "EQ",
          "acts_in_good_faith",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:confidentiality_compliance",
    "desc": "保守受益人或客戶個人資料及交易資料秘密",
    "expr": [
      "EQ",
      "confidentiality_compliance",
      [
        "OR",
        [
          "EQ",
          "other_laws_or_authority_provisions_apply",
          true
        ],
        [
          "EQ",
          "keeps_confidential",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:investment_decision_record_compliance",
    "desc": "投資決定依分析作成並有合理基礎，且作成紀錄、按月檢討",
    "expr": [
      "EQ",
      "investment_decision_record_compliance",
      [
        "AND",
        [
          "EQ",
          "investment_decision_based_on_analysis",
          true
        ],
        [
          "EQ",
          "investment_decision_has_reasonable_basis",
          true
        ],
        [
          "EQ",
          "investment_decision_recorded",
          true
        ],
        [
          "EQ",
          "monthly_review_submitted",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:internal_control_established_and_executed",
    "desc": "訂定內部控制制度並確實執行，控制作業留存紀錄並保存期限符合規定",
    "expr": [
      "EQ",
      "internal_control_established_and_executed",
      [
        "AND",
        [
          "EQ",
          "internal_control_system_defined",
          true
        ],
        [
          "EQ",
          "internal_control_system_executed",
          true
        ],
        [
          "EQ",
          "control_operations_recorded",
          true
        ],
        [
          "GE",
          "control_records_retention_period",
          "required_retention_period"
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:full_discretionary_investment_operated_according_to_rules",
    "desc": "全權委託投資業務依業務操作規定辦理",
    "expr": [
      "EQ",
      "full_discretionary_investment_operated_according_to_rules",
      [
        "EQ",
        "operates_according_to_operating_rules",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:full_discretionary_investment_investment_decision_compliance",
    "desc": "全權委託投資資產投資決定準用第17條規定",
    "expr": [
      "EQ",
      "full_discretionary_investment_investment_decision_compliance",
      [
        "EQ",
        "investment_decision_record_compliance",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:full_discretionary_investment_diversification_compliance",
    "desc": "全權委託投資資產分散投資且符合主管機關定之分散比率",
    "expr": [
      "EQ",
      "full_discretionary_investment_diversification_compliance",
      [
        "EQ",
        "meets_diversification_ratio",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:prohibited_behaviors_violated",
    "desc": "違反經營全權委託投資業務禁止行為",
    "expr": [
      "EQ",
      "prohibited_behaviors_violated",
      [
        "OR",
        [
          "EQ",
          "insider_trading_for_self_or_others",
          true
        ],
        [
          "EQ",
          "damaging_client_interests_trading",
          true
        ],
        [
          "AND",
          [
            "EQ",
            "profit_loss_sharing_agreement_with_client",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "performance_fee_regulated_exception",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "self_or_other_client_opposite_trading",
            true
          ],
          [
            "NOT",
            [
              "AND",
              [
                "EQ",
                "trading_through_central_market",
                true
              ],
              [
                "EQ",
                "not_intentional_opposite_trading",
                true
              ]
            ]
          ]
        ],
        [
          "EQ",
          "using_client_account_for_self_or_others",
          true
        ],
        [
          "AND",
          [
            "EQ",
            "delegation_or_transfer_of_full_discretionary_contract",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "regulatory_exception_for_delegation_or_transfer",
              true
            ]
          ]
        ],
        [
          "EQ",
          "unauthorized_trade_order_account_change",
          true
        ],
        [
          "AND",
          [
            "NOT",
            [
              "EQ",
              "investment_decision_based_on_analysis",
              true
            ]
          ],
          [
            "NOT",
            [
              "EQ",
              "reasonable_explanation_provided",
              true
            ]
          ]
        ],
        [
          "EQ",
          "other_behaviors_affecting_business_or_client_rights",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:prohibited_behaviors_compliance",
    "desc": "未違反經營全權委託投資業務禁止行為",
    "expr": [
      "EQ",
      "prohibited_behaviors_compliance",
      [
        "NOT",
        [
          "EQ",
          "prohibited_behaviors_violated",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:prohibited_business_activities_compliance",
    "desc": "負責人、業務人員及受僱人不得為第19條第1項、第59條或法令契約禁止行為",
    "expr": [
      "EQ",
      "prohibited_business_activities_compliance",
      [
        "NOT",
        [
          "EQ",
          "prohibited_business_activities_violated",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:internal_control_system_established",
    "desc": "依第93條規定建立內部控制制度",
    "expr": [
      "EQ",
      "internal_control_system_established",
      [
        "EQ",
        "internal_control_system_defined",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:internal_control_system_executed",
    "desc": "內部控制制度確實執行",
    "expr": [
      "EQ",
      "internal_control_system_executed",
      [
        "EQ",
        "internal_control_system_executed_flag",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:conflict_of_interest_prevention_measures_executed",
    "desc": "訂定資訊及通訊設備使用管理規範並確實執行利益衝突防範措施",
    "expr": [
      "EQ",
      "conflict_of_interest_prevention_measures_executed",
      [
        "AND",
        [
          "EQ",
          "conflict_prevention_policy_defined",
          true
        ],
        [
          "EQ",
          "conflict_prevention_policy_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:investment_diversification_ratio_compliance",
    "desc": "投資標的分散比率符合第17條規定",
    "expr": [
      "EQ",
      "investment_diversification_ratio_compliance",
      [
        "AND",
        [
          "LE",
          "investment_in_single_company_stock_bonds_warrants",
          [
            "MUL",
            [
              "DIV",
              "net_asset_value",
              1.0
            ],
            20.0
          ]
        ],
        [
          "LE",
          "investment_in_single_company_bonds",
          [
            "MUL",
            [
              "DIV",
              "net_asset_value",
              1.0
            ],
            10.0
          ]
        ],
        [
          "LE",
          "investment_in_trust_and_special_purpose_company_securities",
          [
            "MUL",
            [
              "DIV",
              "net_asset_value",
              1.0
            ],
            20.0
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:foreign_securities_business_compliance",
    "desc": "經營全權委託投資外國有價證券業務涉及資金匯出入經中央銀行同意",
    "expr": [
      "EQ",
      "foreign_securities_business_compliance",
      [
        "IMPLIES",
        [
          "EQ",
          "engages_in_foreign_securities_business",
          true
        ],
        [
          "EQ",
          "central_bank_approval_obtained",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:securities_brokerage_commissioned",
    "desc": "有價證券投資委託證券經紀商於集中交易市場或證券商營業處所為之",
    "expr": [
      "EQ",
      "securities_brokerage_commissioned",
      [
        "IMPLIES",
        [
          "EQ",
          "engages_in_securities_investment",
          true
        ],
        [
          "EQ",
          "commissioned_to_broker",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:business_termination_handling_compliance",
    "desc": "撤銷、廢止許可、停業或歇業時依法了結業務",
    "expr": [
      "EQ",
      "business_termination_handling_compliance",
      [
        "AND",
        [
          "EQ",
          "business_terminated_properly",
          true
        ],
        [
          "EQ",
          "business_scope_during_termination_properly_handled",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "securities:penalty_conditions",
    "desc": "處罰條件：違反法定義務或禁止行為時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "fiduciary_duty_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "confidentiality_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "investment_decision_record_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_established_and_executed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "full_discretionary_investment_operated_according_to_rules",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "full_discretionary_investment_investment_decision_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "full_discretionary_investment_diversification_compliance",
            true
          ]
        ],
        [
          "EQ",
          "prohibited_behaviors_violated",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "prohibited_business_activities_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_system_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_system_executed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "conflict_of_interest_prevention_measures_executed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "investment_diversification_ratio_compliance",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "engages_in_foreign_securities_business",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "central_bank_approval_obtained",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "engages_in_securities_investment",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "commissioned_to_broker",
              true
            ]
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "business_termination_handling_compliance",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]