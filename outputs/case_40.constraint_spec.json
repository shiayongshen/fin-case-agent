[
  {
    "id": "bank:internal_control_established",
    "desc": "建立內部控制及稽核制度",
    "expr": [
      "EQ",
      "internal_control_established",
      [
        "EQ",
        "internal_control_system_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_handling_established",
    "desc": "建立內部處理制度及程序",
    "expr": [
      "EQ",
      "internal_handling_established",
      [
        "EQ",
        "internal_handling_system_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_operation_established",
    "desc": "建立內部作業制度及程序",
    "expr": [
      "EQ",
      "internal_operation_established",
      [
        "EQ",
        "internal_operation_system_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_control_executed",
    "desc": "內部控制及稽核制度確實執行",
    "expr": [
      "EQ",
      "internal_control_executed",
      [
        "EQ",
        "internal_control_system_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_handling_executed",
    "desc": "內部處理制度及程序確實執行",
    "expr": [
      "EQ",
      "internal_handling_executed",
      [
        "EQ",
        "internal_handling_system_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_operation_executed",
    "desc": "內部作業制度及程序確實執行",
    "expr": [
      "EQ",
      "internal_operation_executed",
      [
        "EQ",
        "internal_operation_system_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_control_ok",
    "desc": "內部控制及稽核制度建立且確實執行",
    "expr": [
      "EQ",
      "internal_control_ok",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_handling_ok",
    "desc": "內部處理制度及程序建立且確實執行",
    "expr": [
      "EQ",
      "internal_handling_ok",
      [
        "AND",
        [
          "EQ",
          "internal_handling_established",
          true
        ],
        [
          "EQ",
          "internal_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_operation_ok",
    "desc": "內部作業制度及程序建立且確實執行",
    "expr": [
      "EQ",
      "internal_operation_ok",
      [
        "AND",
        [
          "EQ",
          "internal_operation_established",
          true
        ],
        [
          "EQ",
          "internal_operation_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:credit_card_business_permitted",
    "desc": "經中央主管機關許可經營信用卡業務",
    "expr": [
      "EQ",
      "credit_card_business_permitted",
      [
        "EQ",
        "credit_card_business_license_granted",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:credit_card_interest_rate_compliant",
    "desc": "信用卡循環信用利率不超過年利率15%",
    "expr": [
      "EQ",
      "credit_card_interest_rate_compliant",
      [
        "LE",
        "credit_card_circulating_interest_rate_percent",
        15.0
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "credit_card:applicant_statement_compliant",
    "desc": "申請書載明利率及費用等事項並經申請人確認",
    "expr": [
      "EQ",
      "applicant_statement_compliant",
      [
        "AND",
        [
          "EQ",
          "interest_and_fees_disclosed",
          true
        ],
        [
          "EQ",
          "applicant_confirmed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "credit_card"
  },
  {
    "id": "credit_card:applicant_signature_valid",
    "desc": "正卡申請人親自簽名，不得代理附卡申請人簽名",
    "expr": [
      "EQ",
      "applicant_signature_valid",
      [
        "NOT",
        [
          "EQ",
          "proxy_signature_for_supplementary_card",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "credit_card"
  },
  {
    "id": "credit_card:third_party_data_provision_compliant",
    "desc": "第三人個人資料提供符合規定",
    "expr": [
      "EQ",
      "third_party_data_provision_compliant",
      [
        "AND",
        [
          "NOT",
          [
            "EQ",
            "third_party_data_mandatory",
            true
          ]
        ],
        [
          "EQ",
          "third_party_data_purpose_explained",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "third_party_data_used_for_credit_or_collection",
            true
          ]
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "third_party_data_stop_request",
            true
          ],
          [
            "EQ",
            "third_party_data_usage_stopped",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "credit_card"
  },
  {
    "id": "credit_card:collection_practices_compliant",
    "desc": "催收行為符合誠實信用及相關規定",
    "expr": [
      "EQ",
      "collection_practices_compliant",
      [
        "AND",
        [
          "EQ",
          "collection_not_violating_public_interest",
          true
        ],
        [
          "EQ",
          "collection_only_to_cardholder_and_guarantor",
          true
        ],
        [
          "EQ",
          "phone_collection_with_recording_and_data_retention",
          true
        ],
        [
          "EQ",
          "no_violent_or_harassing_collection",
          true
        ],
        [
          "EQ",
          "field_collection_with_identification",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "credit_card"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：未建立或未確實執行內部控制、內部處理、內部作業制度，或違反信用卡業務相關規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_operation_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "credit_card_business_permitted",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "credit_card_interest_rate_compliant",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "applicant_statement_compliant",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "applicant_signature_valid",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "third_party_data_provision_compliant",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "collection_practices_compliant",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]