[
  {
    "id": "insurance:license_and_guarantee_compliance",
    "desc": "保險代理人、經紀人、公證人須經主管機關許可，繳存保證金並投保相關保險，且領有執業證照後始得經營或執行業務",
    "expr": [
      "EQ",
      "license_and_guarantee_compliance",
      [
        "AND",
        [
          "EQ",
          "approved_by_authority",
          true
        ],
        [
          "GE",
          "guarantee_deposit_amount",
          "minimum_guarantee_deposit"
        ],
        [
          "EQ",
          "relevant_insurance_covered",
          true
        ],
        [
          "EQ",
          "has_practice_license",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:relevant_insurance_covered",
    "desc": "保險代理人、公證人投保責任保險；保險經紀人投保責任保險及保證保險",
    "expr": [
      "EQ",
      "relevant_insurance_covered",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "agent_type",
            1
          ],
          [
            "EQ",
            "liability_insurance_covered",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "guarantee_insurance_covered",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "agent_type",
            2
          ],
          [
            "EQ",
            "liability_insurance_covered",
            true
          ],
          [
            "EQ",
            "guarantee_insurance_covered",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "agent_type",
            3
          ],
          [
            "EQ",
            "liability_insurance_covered",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "guarantee_insurance_covered",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:minimum_guarantee_deposit",
    "desc": "保證金及相關保險最低金額由主管機關依經營業務範圍及規模定之",
    "expr": [
      "EQ",
      "minimum_guarantee_deposit",
      "authority_defined_minimum_amount"
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:management_rules_compliance",
    "desc": "遵守主管機關定之管理規則，包括資格取得、申請許可條件、程序、文件、董事監察人經理人資格、解任事由、分支機構條件、財務與業務管理、教育訓練、廢止許可及其他事項",
    "expr": [
      "EQ",
      "management_rules_compliance",
      [
        "AND",
        [
          "EQ",
          "qualification_requirements_met",
          true
        ],
        [
          "EQ",
          "application_conditions_met",
          true
        ],
        [
          "EQ",
          "application_procedures_followed",
          true
        ],
        [
          "EQ",
          "required_documents_submitted",
          true
        ],
        [
          "EQ",
          "board_supervisor_manager_qualifications_met",
          true
        ],
        [
          "EQ",
          "dismissal_reasons_not_met",
          true
        ],
        [
          "EQ",
          "branch_establishment_conditions_met",
          true
        ],
        [
          "EQ",
          "financial_and_business_management_compliant",
          true
        ],
        [
          "EQ",
          "education_and_training_compliant",
          true
        ],
        [
          "EQ",
          "license_revocation_procedures_compliant",
          true
        ],
        [
          "EQ",
          "other_mandatory_requirements_compliant",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:bank_authority_approval",
    "desc": "銀行經主管機關許可擇一兼營保險代理人或保險經紀人業務，並分別準用相關規定",
    "expr": [
      "EQ",
      "bank_authority_approval",
      [
        "AND",
        [
          "EQ",
          "bank_approved",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "bank_operate_as_agent",
            true
          ],
          [
            "EQ",
            "bank_operate_as_broker",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_duties",
    "desc": "保險經紀人應以善良管理人注意義務洽訂保險契約或提供服務，並負忠實義務",
    "expr": [
      "EQ",
      "broker_duties_complied",
      [
        "AND",
        [
          "EQ",
          "duty_of_care_met",
          true
        ],
        [
          "EQ",
          "duty_of_loyalty_met",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_report_and_fee_disclosure",
    "desc": "保險經紀人洽訂保險契約前，於主管機關指定範圍內主動提供書面分析報告，收取報酬者明確告知報酬標準",
    "expr": [
      "EQ",
      "broker_report_and_fee_disclosure_compliant",
      [
        "AND",
        [
          "EQ",
          "written_analysis_report_provided",
          true
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "fee_charged",
            true
          ],
          [
            "EQ",
            "fee_standard_disclosed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_correction_and_penalty",
    "desc": "違反管理規則財務或業務管理規定、保險經紀人義務或相關準用規定者，應限期改正或處罰，情節重大者廢止許可並註銷執業證照",
    "expr": [
      "EQ",
      "violation_correction_and_penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "management_rules_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_duties_complied",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "bank_authority_approval",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反管理規則、保險經紀人義務或銀行未依規定經營時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "management_rules_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_duties_complied",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "bank_authority_approval",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]