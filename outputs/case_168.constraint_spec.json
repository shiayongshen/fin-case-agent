[
  {
    "id": "insurance:license_and_guarantee_required",
    "desc": "保險代理人、經紀人、公證人須經主管機關許可，繳存保證金並投保相關保險，領有執業證照後始得經營或執行業務",
    "expr": [
      "EQ",
      "license_and_guarantee_required",
      [
        "AND",
        [
          "EQ",
          "approved_by_authority",
          true
        ],
        [
          "GE",
          "guarantee_deposit_amount",
          "minimum_guarantee_deposit"
        ],
        [
          "EQ",
          "relevant_insurance_purchased",
          true
        ],
        [
          "EQ",
          "license_issued",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:relevant_insurance_type_correct",
    "desc": "保險代理人、公證人投保責任保險；保險經紀人投保責任保險及保證保險",
    "expr": [
      "EQ",
      "relevant_insurance_type_correct",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "agent_type",
            1
          ],
          [
            "EQ",
            "insurance_type",
            "liability_insurance"
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "agent_type",
            2
          ],
          [
            "OR",
            [
              "EQ",
              "insurance_type",
              "liability_insurance"
            ],
            [
              "EQ",
              "insurance_type",
              "guarantee_insurance"
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "agent_type",
            3
          ],
          [
            "EQ",
            "insurance_type",
            "liability_insurance"
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:single_license_only",
    "desc": "兼有保險代理人、經紀人、公證人資格者僅得擇一申領執業證照",
    "expr": [
      "EQ",
      "single_license_only",
      [
        "LE",
        [
          "SUM",
          [
            "IF",
            [
              "EQ",
              "has_agent_license",
              true
            ],
            1,
            0
          ],
          [
            "IF",
            [
              "EQ",
              "has_broker_license",
              true
            ],
            1,
            0
          ],
          [
            "IF",
            [
              "EQ",
              "has_notary_license",
              true
            ],
            1,
            0
          ]
        ],
        1
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:fixed_office_and_accounting",
    "desc": "保險代理人、經紀人、公證人應有固定業務處所，並專設帳簿記載業務收支",
    "expr": [
      "EQ",
      "fixed_office_and_accounting",
      [
        "AND",
        [
          "EQ",
          "has_fixed_office",
          true
        ],
        [
          "EQ",
          "has_dedicated_accounting_books",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_required",
    "desc": "保險代理人公司、經紀人公司為公開發行公司或具一定規模者，應建立內部控制、稽核制度與招攬處理制度及程序",
    "expr": [
      "EQ",
      "internal_control_required",
      [
        "IMPLIES",
        [
          "OR",
          [
            "EQ",
            "is_public_company",
            true
          ],
          [
            "EQ",
            "has_certain_scale",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "internal_control_established",
            true
          ],
          [
            "EQ",
            "audit_system_established",
            true
          ],
          [
            "EQ",
            "solicitation_handling_system_established",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_executed",
    "desc": "保險代理人公司、經紀人公司應確實執行內部控制、稽核制度與招攬處理制度及程序",
    "expr": [
      "EQ",
      "internal_control_executed",
      [
        "IMPLIES",
        [
          "OR",
          [
            "EQ",
            "is_public_company",
            true
          ],
          [
            "EQ",
            "has_certain_scale",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "internal_control_implemented",
            true
          ],
          [
            "EQ",
            "audit_system_implemented",
            true
          ],
          [
            "EQ",
            "solicitation_handling_system_implemented",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:compliance_with_management_rules",
    "desc": "遵守主管機關定之管理規則，包括資格取得、申請許可條件、程序、文件、董事監察人經理人資格、解任事由、分支機構條件、財務與業務管理、教育訓練、廢止許可及其他事項",
    "expr": [
      "EQ",
      "compliance_with_management_rules",
      [
        "EQ",
        "management_rules_complied",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_duty_of_care_and_fidelity",
    "desc": "保險經紀人應以善良管理人注意義務為被保險人洽訂保險契約或提供服務，並負忠實義務",
    "expr": [
      "EQ",
      "broker_duty_of_care_and_fidelity",
      [
        "AND",
        [
          "EQ",
          "broker_exercise_due_care",
          true
        ],
        [
          "EQ",
          "broker_fulfill_fiduciary_duty",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_provide_written_report_and_disclose_fee",
    "desc": "保險經紀人於主管機關指定範圍內洽訂保險契約前，應主動提供書面分析報告，向要保人或被保險人收取報酬者，應明確告知報酬收取標準",
    "expr": [
      "EQ",
      "broker_report_and_fee_disclosure",
      [
        "AND",
        [
          "EQ",
          "written_analysis_report_provided",
          true
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "fee_charged",
            true
          ],
          [
            "EQ",
            "fee_standard_disclosed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:bank_permission_for_agent_or_broker",
    "desc": "銀行得經主管機關許可擇一兼營保險代理人或保險經紀人業務，並分別準用相關規定",
    "expr": [
      "EQ",
      "bank_permission_for_agent_or_broker",
      [
        "IMPLIES",
        [
          "EQ",
          "bank_has_permission",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "bank_operate_as_agent",
            true
          ],
          [
            "EQ",
            "bank_operate_as_broker",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_penalty_167_2",
    "desc": "違反保險法第163條第四項管理規則財務或業務管理規定、第163條第七項規定，或違反第165條第一項或第163條第五項準用規定者，應限期改正或處罰鍰，情節重大者廢止許可並註銷執業證照",
    "expr": [
      "EQ",
      "violation_167_2",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "compliance_with_management_rules",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_required",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_executed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "fixed_office_and_accounting",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "license_and_guarantee_required",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_penalty_167_3",
    "desc": "違反第165條第三項或第163條第五項準用規定，未建立或未確實執行內部控制、稽核制度、招攬處理制度或程序者，應限期改正或處罰鍰",
    "expr": [
      "EQ",
      "violation_167_3",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_implemented",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "audit_system_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "audit_system_implemented",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "solicitation_handling_system_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "solicitation_handling_system_implemented",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "financial:compensation_system_established_and_approved",
    "desc": "金融服務業應訂定業務人員酬金制度並提報董（理）事會通過",
    "expr": [
      "EQ",
      "compensation_system_established_and_approved",
      [
        "AND",
        [
          "EQ",
          "compensation_system_established",
          true
        ],
        [
          "EQ",
          "compensation_system_approved_by_board",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "financial"
  },
  {
    "id": "financial:compensation_system_fair_and_risk_considered",
    "desc": "酬金制度應衡平考量客戶權益及風險，不得僅考量業績目標達成情形",
    "expr": [
      "EQ",
      "compensation_system_fair_and_risk_considered",
      [
        "AND",
        [
          "EQ",
          "compensation_system_considers_customer_interest",
          true
        ],
        [
          "EQ",
          "compensation_system_considers_risks",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "compensation_system_considers_only_performance",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "financial"
  },
  {
    "id": "financial:compensation_system_principles_approved",
    "desc": "酬金制度應遵行原則由同業公會擬訂或主管機關指定公會擬訂，報主管機關核定",
    "expr": [
      "EQ",
      "compensation_system_principles_approved",
      [
        "AND",
        [
          "EQ",
          "compensation_principles_drafted_by_association",
          true
        ],
        [
          "EQ",
          "compensation_principles_approved_by_authority",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "financial"
  },
  {
    "id": "financial:violation_penalty_30_1",
    "desc": "金融服務業違反廣告、招攬、促銷、適合度說明、酬金制度等規定者處罰鍰",
    "expr": [
      "EQ",
      "violation_30_1",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "compliance_advertising_rules",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "compliance_suitability_rules",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "compliance_disclosure_rules",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "compensation_system_established_and_approved",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "compensation_system_fair_and_risk_considered",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "compensation_system_principles_approved",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "financial"
  },
  {
    "id": "financial:violation_penalty_30_1_major",
    "desc": "金融服務業違反前項情形且情節重大者，主管機關得加重處罰",
    "expr": [
      "EQ",
      "violation_30_1_major",
      [
        "AND",
        [
          "EQ",
          "violation_30_1",
          true
        ],
        [
          "EQ",
          "violation_severe",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "financial"
  },
  {
    "id": "financial:violation_penalty_30_1_formal",
    "desc": "金融服務業對未符合條件者協助創造形式上外觀條件者處罰",
    "expr": [
      "EQ",
      "violation_30_1_formal",
      [
        "AND",
        [
          "NOT",
          [
            "EQ",
            "client_meets_conditions",
            true
          ]
        ],
        [
          "EQ",
          "assist_create_formal_appearance",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "financial"
  },
  {
    "id": "insurance:insurance_type_classification",
    "desc": "保險分類：財產保險與人身保險",
    "expr": [
      "EQ",
      "insurance_type_classification",
      [
        "CASE",
        [
          "OR",
          [
            "EQ",
            "insurance_category",
            1
          ],
          [
            "EQ",
            "insurance_category",
            2
          ],
          [
            "EQ",
            "insurance_category",
            3
          ],
          [
            "EQ",
            "insurance_category",
            4
          ],
          [
            "EQ",
            "insurance_category",
            5
          ],
          [
            "EQ",
            "insurance_category",
            6
          ]
        ],
        1,
        [
          "OR",
          [
            "EQ",
            "insurance_category",
            7
          ],
          [
            "EQ",
            "insurance_category",
            8
          ],
          [
            "EQ",
            "insurance_category",
            9
          ],
          [
            "EQ",
            "insurance_category",
            10
          ]
        ],
        2,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反保險法及金融消費者保護法相關規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "violation_167_2",
          true
        ],
        [
          "EQ",
          "violation_167_3",
          true
        ],
        [
          "EQ",
          "violation_30_1",
          true
        ],
        [
          "EQ",
          "violation_30_1_formal",
          true
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]