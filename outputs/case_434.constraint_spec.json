[
  {
    "id": "securities:investment_decision_recorded",
    "desc": "證券投資信託事業投資決定依據分析作成且交付執行時有紀錄",
    "expr": [
      "EQ",
      "investment_decision_recorded",
      [
        "AND",
        [
          "EQ",
          "investment_decision_based_on_analysis",
          true
        ],
        [
          "EQ",
          "investment_execution_recorded",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:investment_monthly_reviewed",
    "desc": "證券投資信託事業按月提出投資檢討",
    "expr": [
      "EQ",
      "investment_monthly_reviewed",
      [
        "EQ",
        "investment_review_submitted_monthly",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:investment_analysis_reasonable",
    "desc": "證券投資信託事業投資分析與決定有合理基礎及根據",
    "expr": [
      "EQ",
      "investment_analysis_reasonable",
      [
        "EQ",
        "investment_analysis_has_reasonable_basis",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:internal_control_defined_and_executed",
    "desc": "證券投資信託事業內部控制制度訂定且確實執行",
    "expr": [
      "EQ",
      "internal_control_defined_and_executed",
      [
        "AND",
        [
          "EQ",
          "internal_control_defined_in_system",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:internal_control_recorded_and_retained",
    "desc": "證券投資信託事業內部控制作業留存紀錄並保存一定期限",
    "expr": [
      "EQ",
      "internal_control_recorded_and_retained",
      [
        "AND",
        [
          "EQ",
          "internal_control_records_retained",
          true
        ],
        [
          "GE",
          "internal_control_records_retention_period_years",
          5.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:personnel_qualifications_compliant",
    "desc": "證券投資信託事業及顧問事業人員資格條件及行為規範符合主管機關規定",
    "expr": [
      "EQ",
      "personnel_qualifications_compliant",
      [
        "EQ",
        "personnel_qualifications_and_conduct_compliant",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:responsible_persons_duties_fulfilled",
    "desc": "證券投資信託事業負責人及業務人員以善良管理人注意義務及忠實義務執行業務",
    "expr": [
      "EQ",
      "responsible_persons_duties_fulfilled",
      [
        "EQ",
        "duties_fulfilled_with_diligence_and_loyalty",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:prohibited_behaviors_absent",
    "desc": "證券投資信託事業人員無法令禁止之不當行為",
    "expr": [
      "EQ",
      "prohibited_behaviors_absent",
      [
        "AND",
        [
          "NOT",
          [
            "EQ",
            "insider_information_leaked",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "self_dealing_or_conflict_of_interest",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "fraudulent_or_misleading_acts",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "improper_fee_or_benefit_handling",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "improper_promotion_or_benefit_provision",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "vote_proxy_trading_for_benefit",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "market_manipulation_or_investor_harm",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "improper_account_transfer",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "improper_public_recommendation_or_forecast",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "unreasonable_commission_or_nonprofessional_recruitment",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "unauthorized_securities_investment_agent",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "other_acts_harming_investors_or_business",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:confidentiality_maintained",
    "desc": "證券投資信託事業人員對客戶資料保守秘密",
    "expr": [
      "EQ",
      "confidentiality_maintained",
      [
        "EQ",
        "client_data_kept_confidential",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反投資決定紀錄、內部控制、資格條件、禁止行為或保密義務等規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "investment_decision_recorded",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "investment_monthly_reviewed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "investment_analysis_reasonable",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_defined_and_executed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_recorded_and_retained",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "personnel_qualifications_compliant",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "responsible_persons_duties_fulfilled",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "prohibited_behaviors_absent",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "confidentiality_maintained",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
]