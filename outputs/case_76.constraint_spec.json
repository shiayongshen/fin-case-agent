[
  {
    "id": "insurance:agent_broker_license_required",
    "desc": "保險代理人、經紀人、公證人須經主管機關許可並繳存保證金及投保相關保險",
    "expr": [
      "EQ",
      "agent_broker_license_required",
      [
        "AND",
        [
          "EQ",
          "license_permitted",
          true
        ],
        [
          "EQ",
          "deposit_bond_paid",
          true
        ],
        [
          "EQ",
          "related_insurance_purchased",
          true
        ],
        [
          "EQ",
          "license_certificate_held",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:related_insurance_type_compliance",
    "desc": "保險代理人、公證人須投保責任保險；保險經紀人須投保責任保險及保證保險",
    "expr": [
      "EQ",
      "related_insurance_type_compliance",
      [
        "AND",
        [
          "IMPLIES",
          [
            "EQ",
            "is_agent_or_notary",
            true
          ],
          [
            "EQ",
            "liability_insurance_purchased",
            true
          ]
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "is_broker",
            true
          ],
          [
            "AND",
            [
              "EQ",
              "liability_insurance_purchased",
              true
            ],
            [
              "EQ",
              "guarantee_insurance_purchased",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:agent_broker_qualification_compliance",
    "desc": "保險代理人、經紀人、公證人資格取得及管理規則遵守",
    "expr": [
      "EQ",
      "agent_broker_qualification_compliance",
      [
        "AND",
        [
          "EQ",
          "qualification_conditions_met",
          true
        ],
        [
          "EQ",
          "application_procedures_followed",
          true
        ],
        [
          "EQ",
          "required_documents_submitted",
          true
        ],
        [
          "EQ",
          "board_supervisor_manager_qualifications_met",
          true
        ],
        [
          "EQ",
          "dismissal_reasons_complied",
          true
        ],
        [
          "EQ",
          "branch_establishment_conditions_met",
          true
        ],
        [
          "EQ",
          "financial_and_business_management_compliant",
          true
        ],
        [
          "EQ",
          "education_training_completed",
          true
        ],
        [
          "EQ",
          "license_revocation_procedures_followed",
          true
        ],
        [
          "EQ",
          "other_mandatory_requirements_complied",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:bank_agent_broker_permit_compliance",
    "desc": "銀行經主管機關許可擇一兼營保險代理人或保險經紀人業務，並分別準用相關規定",
    "expr": [
      "EQ",
      "bank_agent_broker_permit_compliance",
      [
        "AND",
        [
          "EQ",
          "bank_permitted",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "bank_as_agent",
            true
          ],
          [
            "EQ",
            "bank_as_broker",
            true
          ]
        ],
        [
          "EQ",
          "agent_broker_regulations_applied",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_duty_of_care_and_fidelity",
    "desc": "保險經紀人應以善良管理人注意義務及忠實義務為被保險人洽訂保險契約或提供服務",
    "expr": [
      "EQ",
      "broker_duty_of_care_and_fidelity",
      [
        "AND",
        [
          "EQ",
          "duty_of_care_observed",
          true
        ],
        [
          "EQ",
          "duty_of_fidelity_observed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_written_report_and_fee_disclosure",
    "desc": "保險經紀人於主管機關指定範圍內洽訂契約前，應主動提供書面分析報告並明確告知報酬標準",
    "expr": [
      "EQ",
      "broker_written_report_and_fee_disclosure",
      [
        "AND",
        [
          "EQ",
          "written_analysis_report_provided",
          true
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "fee_charged",
            true
          ],
          [
            "EQ",
            "fee_standard_disclosed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_financial_or_business_management",
    "desc": "違反財務或業務管理規定應限期改正或處罰",
    "expr": [
      "EQ",
      "violation_financial_or_business_management",
      [
        "OR",
        [
          "EQ",
          "violate_financial_management",
          true
        ],
        [
          "EQ",
          "violate_business_management",
          true
        ],
        [
          "EQ",
          "violate_related_regulations",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:agent_duty_of_care_and_disclosure",
