  },
  {
    "id": "insurance:broker_company_stop_resume_dissolve",
    "desc": "經紀人公司停業、復業、解散應依規定申請並報主管機關核准及辦理登記",
    "expr": [
      "EQ",
      "broker_company_stop_resume_dissolve",
      [
        "OR",
        [
          "EQ",
          "stop_reported_and_approved",
          true
        ],
        [
          "EQ",
          "resume_reported_and_approved",
          true
        ],
        [
          "EQ",
          "dissolve_reported_and_approved",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_company_stop_period_limit",
    "desc": "經紀人公司停業期間以一年為限，正當理由得申請展延一次，並於屆滿前十五日提出",
    "expr": [
      "EQ",
      "broker_company_stop_period_limit",
      [
        "AND",
        [
          "LE",
          "stop_period_days",
          365
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "extension_requested",
            true
          ],
          [
            "LE",
            "extension_count",
            1
          ]
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "stop_period_expiring",
            true
          ],
          [
            "GE",
            "extension_request_days_before_expiry",
            15
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_company_license_revocation_for_no_resume",
    "desc": "經紀人公司停業屆滿未申請復業且未依規定任用經紀人者，廢止許可並註銷執業證照",
    "expr": [
      "EQ",
      "broker_company_license_revoked_for_no_resume",
      [
        "AND",
        [
          "EQ",
          "stop_period_expired",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "resume_applied",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_appointed_as_required",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_company_license_revocation_for_no_license_cancellation",
    "desc": "經紀人公司停業、解散或被註銷許可未辦理繳銷所任用經紀人執業證照者，應於三十日內委由公會辦理註銷登記",
    "expr": [
      "EQ",
      "broker_company_no_license_cancellation",
      [
        "AND",
        [
          "OR",
          [
            "EQ",
            "company_stopped",
            true
          ],
          [
            "EQ",
            "company_dissolved",
            true
          ],
          [
            "EQ",
            "license_revoked",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_license_canceled",
            true
          ]
        ],
        [
          "LE",
          "days_since_event",
          30
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_company_report_stop_reinsurance_stop",
    "desc": "同時經營保險經紀及再保險經紀業務之公司停止其中一業務，應於一個月內報主管機關備查",
    "expr": [
      "EQ",
      "broker_company_report_stop_reinsurance_stop",
      [
        "IMPLIES",
        [
          "AND",
          [
            "EQ",
            "insurance_brokerage_stopped",
            true
          ],
          [
            "EQ",
            "reinsurance_brokerage_stopped",
            false
          ]
        ],
        [
          "LE",
          "days_since_stop",
          30
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
