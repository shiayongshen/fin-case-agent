[
  {
    "id": "insurance:license_required",
    "desc": "保險代理人、經紀人、公證人須經主管機關許可並領有執業證照",
    "expr": [
      "EQ",
      "license_required",
      [
        "AND",
        [
          "EQ",
          "permit_granted",
          true
        ],
        [
          "EQ",
          "bond_deposited",
          true
        ],
        [
          "EQ",
          "insurance_insured",
          true
        ],
        [
          "EQ",
          "license_issued",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:insurance_insured",
    "desc": "保險代理人、公證人投保責任保險，經紀人投保責任保險及保證保險",
    "expr": [
      "EQ",
      "insurance_insured",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "agent",
            true
          ],
          [
            "EQ",
            "insurance_type_responsibility",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "broker",
            true
          ],
          [
            "AND",
            [
              "EQ",
              "insurance_type_responsibility",
              true
            ],
            [
              "EQ",
              "insurance_type_guarantee",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "notary",
            true
          ],
          [
            "EQ",
            "insurance_type_responsibility",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:single_license",
    "desc": "兼有代理人、經紀人、公證人資格者僅得擇一申領執業證照",
    "expr": [
      "EQ",
      "single_license",
      [
        "LE",
        [
          "SUM",
          [
            "IF",
            [
              "EQ",
              "agent",
              true
            ],
            1,
            0
          ],
          [
            "IF",
            [
              "EQ",
              "broker",
              true
            ],
            1,
            0
          ],
          [
            "IF",
            [
              "EQ",
              "notary",
              true
            ],
            1,
            0
          ]
        ],
        1
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:fixed_office_and_accounting",
    "desc": "保險代理人、經紀人、公證人應有固定業務處所並專設帳簿記載業務收支",
    "expr": [
      "EQ",
      "fixed_office_and_accounting",
      [
        "AND",
        [
          "EQ",
          "fixed_office",
          true
        ],
        [
          "EQ",
          "separate_accounting_books",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_required",
