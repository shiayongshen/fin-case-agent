          [
            "EQ",
            "large_scale",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "internal_control_established",
            true
          ],
          [
            "EQ",
            "audit_system_established",
            true
          ],
          [
            "EQ",
            "handling_system_established",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_duty_of_care",
