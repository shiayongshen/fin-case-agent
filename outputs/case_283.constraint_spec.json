[
  {
    "id": "bank:no_unsecured_credit_over_3_percent",
    "desc": "銀行不得對持有實收資本總額超過3%之企業或相關利害關係人提供無擔保授信，消費者貸款及政府貸款除外",
    "expr": [
      "EQ",
      "no_unsecured_credit_over_3_percent",
      [
        "AND",
        [
          "LE",
          [
            "DIV",
            "unsecured_credit_to_related_parties",
            "paid_in_capital"
          ],
          0.03
        ],
        [
          "LE",
          "unsecured_consumer_loan",
          "consumer_loan_limit"
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:major_shareholder_definition",
    "desc": "主要股東定義：持有銀行已發行股份總數1%以上，且自然人主要股東之配偶與未成年子女持股計入本人",
    "expr": [
      "EQ",
      "major_shareholder_definition",
      true
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:secured_credit_over_5_percent_requirements",
    "desc": "銀行對持有實收資本總額超過5%之企業或相關利害關係人提供擔保授信，須有十足擔保且條件不得優於同類授信，且達一定金額須董事會通過",
    "expr": [
      "EQ",
      "secured_credit_over_5_percent_requirements",
      [
        "AND",
        [
          "GE",
          [
            "DIV",
            "secured_credit_to_related_parties",
            "paid_in_capital"
          ],
          0.05
        ],
        [
          "EQ",
          "full_collateral_provided",
          true
        ],
        [
          "NOT",
          [
            "GT",
            "collateral_condition_advantage",
            0
          ]
        ],
        [
          "IMPLIES",
          [
            "GE",
            "secured_credit_to_related_parties",
            "central_authority_threshold"
          ],
          [
            "AND",
            [
              "GE",
              "board_meeting_attendance_ratio",
              0.6667
            ],
            [
              "GE",
              "board_approval_ratio",
              0.75
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_control_established",
    "desc": "銀行已建立內部控制及稽核制度",
    "expr": [
      "EQ",
      "internal_control_established",
      true
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_handling_established",
    "desc": "銀行已建立內部處理制度及程序",
    "expr": [
      "EQ",
      "internal_handling_established",
      true
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_operation_established",
    "desc": "銀行已建立內部作業制度及程序",
    "expr": [
      "EQ",
      "internal_operation_established",
      true
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_control_executed",
    "desc": "銀行內部控制及稽核制度確實執行",
    "expr": [
      "EQ",
      "internal_control_executed",
      true
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_handling_executed",
    "desc": "銀行內部處理制度及程序確實執行",
    "expr": [
      "EQ",
      "internal_handling_executed",
      true
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_operation_executed",
    "desc": "銀行內部作業制度及程序確實執行",
    "expr": [
      "EQ",
      "internal_operation_executed",
      true
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_control_ok",
    "desc": "銀行內部控制及稽核制度建立且確實執行",
    "expr": [
      "EQ",
      "internal_control_ok",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_handling_ok",
    "desc": "銀行內部處理制度及程序建立且確實執行",
    "expr": [
      "EQ",
      "internal_handling_ok",
      [
        "AND",
        [
          "EQ",
          "internal_handling_established",
          true
        ],
        [
          "EQ",
          "internal_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_operation_ok",
    "desc": "銀行內部作業制度及程序建立且確實執行",
    "expr": [
      "EQ",
      "internal_operation_ok",
      [
        "AND",
        [
          "EQ",
          "internal_operation_established",
          true
        ],
        [
          "EQ",
          "internal_operation_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反無擔保授信限制、擔保授信條件或未建立及執行內部控制制度時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "no_unsecured_credit_over_3_percent",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "secured_credit_over_5_percent_requirements",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_operation_ok",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]