  {
    "id": "insurance:board_approval_internal_control",
    "desc": "內部控制、稽核制度及招攬處理制度經董（理）事會通過",
    "expr": [
      "EQ",
      "board_approval_internal_control",
      [
        "EQ",
        "board_approval",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:audit_committee_approval",
    "desc": "設置審計委員會者，內部控制、稽核制度及招攬處理制度經審計委員會半數以上同意",
    "expr": [
      "EQ",
      "audit_committee_approval",
      [
        "IMPLIES",
        [
          "EQ",
          "audit_committee_exists",
          true
        ],
        [
          "GE",
          "audit_committee_approval_ratio",
          0.5
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:board_approval_if_no_audit_committee",
    "desc": "未經審計委員會同意時，得由三分之二以上董（理）事同意",
    "expr": [
      "EQ",
      "board_approval_if_no_audit_committee",
      [
        "IMPLIES",
        [
          "NOT",
          [
            "EQ",
            "audit_committee_approval",
            true
          ]
        ],
        [
          "GE",
          "board_approval_ratio",
          0.6667
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_approval_compliance",
    "desc": "內部控制、稽核制度及招攬處理制度經適當程序通過",
    "expr": [
      "EQ",
      "internal_control_approval_compliance",
      [
        "OR",
        [
          "EQ",
          "audit_committee_approval",
          true
        ],
        [
          "EQ",
          "board_approval_if_no_audit_committee",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
