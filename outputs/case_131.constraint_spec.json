[
  {
    "id": "insurance:violation_occurred",
    "desc": "保險代理人、經紀人、公證人違反法令或有礙健全經營",
    "expr": [
      "EQ",
      "violation_occurred",
      [
        "EQ",
        "violation_flag",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:penalty_measures_authorized",
    "desc": "主管機關得依違反情節輕重採取處分措施",
    "expr": [
      "EQ",
      "penalty_measures_authorized",
      [
        "EQ",
        "violation_occurred",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_compliance",
    "desc": "建立且確實執行內部控制、稽核制度及招攬處理制度",
    "expr": [
      "EQ",
      "internal_control_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ],
        [
          "EQ",
          "audit_system_established",
          true
        ],
        [
          "EQ",
          "audit_system_executed",
          true
        ],
        [
          "EQ",
          "solicitation_system_established",
          true
        ],
        [
          "EQ",
          "solicitation_system_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_167_2",
    "desc": "違反保險法第163條相關財務或業務管理規定",
    "expr": [
      "EQ",
      "violation_167_2",
      [
        "EQ",
        "violation_163_financial_or_business_rule",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_167_3",
    "desc": "違反保險法第165條或第163條相關內部控制、稽核、招攬處理制度規定",
    "expr": [
      "EQ",
      "violation_167_3",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_executed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "audit_system_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "audit_system_executed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "solicitation_system_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "solicitation_system_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
