[
  {
    "id": "fhc:non_credit_transaction_condition_met",
    "desc": "授信以外之交易條件成立",
    "expr": [
      "EQ",
      "non_credit_transaction_condition_met",
      [
        "OR",
        [
          "EQ",
          "transaction_invest_security",
          true
        ],
        [
          "EQ",
          "transaction_purchase_asset",
          true
        ],
        [
          "EQ",
          "transaction_sell_asset",
          true
        ],
        [
          "EQ",
          "transaction_contract_payment_service",
          true
        ],
        [
          "EQ",
          "transaction_agent_commission_service",
          true
        ],
        [
          "EQ",
          "transaction_related_third_party",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:related_party_transaction_subject",
    "desc": "交易對象為金融控股公司或子公司之負責人、大股東、關係企業、銀行子公司、保險子公司、證券子公司及其負責人",
    "expr": [
      "EQ",
      "related_party_transaction_subject",
      [
        "OR",
        [
          "EQ",
          "is_fhc_and_responsible_or_major_shareholder",
          true
        ],
        [
          "EQ",
          "is_fhc_responsible_or_major_shareholder_business_or_enterprise",
          true
        ],
        [
          "EQ",
          "is_fhc_related_enterprise_and_responsible_or_major_shareholder",
          true
        ],
        [
          "EQ",
          "is_fhc_bank_insurance_securities_subsidiary_or_responsible",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:transaction_condition_compliance",
    "desc": "授信以外交易條件不得優於其他同類對象，且須經董事會三分之二以上出席及出席董事四分之三以上決議",
    "expr": [
      "EQ",
      "transaction_condition_compliance",
      [
        "AND",
        [
          "EQ",
          "transaction_condition_not_better_than_others",
          true
        ],
        [
          "GE",
          "board_attendance_ratio",
          66.6667
        ],
        [
          "GE",
          "board_approval_ratio",
          75.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:bank_subsidiary_single_related_party_limit",
    "desc": "銀行子公司與單一關係人交易金額不得超過淨值10%",
    "expr": [
      "EQ",
      "bank_subsidiary_single_related_party_limit",
      [
        "LE",
        [
          "MUL",
          [
            "DIV",
            "bank_subsidiary_single_related_party_transaction_amount",
            "bank_subsidiary_net_worth"
          ],
          100.0
        ],
        10.0
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:bank_subsidiary_all_related_party_limit",
    "desc": "銀行子公司與所有利害關係人交易總額不得超過淨值20%",
    "expr": [
      "EQ",
      "bank_subsidiary_all_related_party_limit",
      [
        "LE",
        [
          "MUL",
          [
            "DIV",
            "bank_subsidiary_all_related_party_transaction_amount",
            "bank_subsidiary_net_worth"
          ],
          100.0
        ],
        20.0
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:non_credit_transaction_compliance",
    "desc": "授信以外交易符合條件且交易對象為相關人士",
    "expr": [
      "EQ",
      "non_credit_transaction_compliance",
      [
        "IMPLIES",
        [
          "AND",
          [
            "EQ",
            "non_credit_transaction_condition_met",
            true
          ],
          [
            "EQ",
            "related_party_transaction_subject",
            true
          ]
        ],
        [
          "EQ",
          "transaction_condition_compliance",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:bank_subsidiary_transaction_limit_compliance",
    "desc": "銀行子公司交易金額符合單一及全部利害關係人限制",
    "expr": [
      "AND",
      [
        "EQ",
        "bank_subsidiary_single_related_party_limit",
        true
      ],
      [
        "EQ",
        "bank_subsidiary_all_related_party_limit",
        true
      ]
    ]
  },
  {
    "id": "fhc:bank_subsidiary_transaction_limit_compliance_eq",
    "desc": "銀行子公司交易金額限制符合",
    "expr": [
      "EQ",
      "bank_subsidiary_transaction_limit_compliance",
      [
        "AND",
        [
          "EQ",
          "bank_subsidiary_single_related_party_limit",
          true
        ],
        [
          "EQ",
          "bank_subsidiary_all_related_party_limit",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反第四十五條第一項交易條件限制、董事會決議方法或銀行子公司交易金額限制時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "transaction_condition_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "bank_subsidiary_transaction_limit_compliance",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]