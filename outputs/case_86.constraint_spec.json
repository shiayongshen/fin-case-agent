      "EQ",
      "bank_permission_and_separate_application",
      [
        "IMPLIES",
        [
          "EQ",
          "bank_permitted",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "bank_as_agent",
            true
          ],
          [
            "EQ",
            "bank_as_broker",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
