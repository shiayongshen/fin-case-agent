          "LE",
          "stop_period_days",
          365
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "extension_requested",
            true
          ],
          [
            "AND",
            [
              "LE",
              "extension_times",
              1
            ],
            [
              "GE",
              "extension_request_days_before_expiry",
              15
