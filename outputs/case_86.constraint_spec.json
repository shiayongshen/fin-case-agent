            true
          ],
          [
            "EQ",
            "subscribed_liability_insurance",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "broker",
            true
          ],
          [
            "EQ",
            "subscribed_liability_insurance",
            true
          ],
          [
            "EQ",
            "subscribed_guarantee_insurance",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
