[
  {
    "id": "insurance:license_and_guarantee_compliance",
    "desc": "保險代理人、經紀人、公證人須經主管機關許可，繳存保證金並投保相關保險，領有執業證照後始得經營或執行業務",
    "expr": [
      "EQ",
      "license_and_guarantee_compliance",
      [
        "AND",
        [
          "EQ",
          "licensed",
          true
        ],
        [
          "GE",
          "guarantee_deposit_amount",
          "minimum_guarantee_deposit"
        ],
        [
          "EQ",
          "relevant_insurance_subscribed",
          true
        ],
        [
          "EQ",
          "has_practice_certificate",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:relevant_insurance_type_compliance",
