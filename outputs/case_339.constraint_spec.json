  {
    "id": "insurance:reserve_calculation_and_recording",
    "desc": "營業年度屆滿時計算應提存準備金並記載於特設帳簿",
    "expr": [
      "EQ",
      "reserve_calculation_and_recording",
      [
        "AND",
        [
          "GE",
          "business_year_end",
          1
        ],
        [
          "EQ",
          "reserve_calculated",
          true
        ],
        [
          "EQ",
          "reserve_recorded_in_special_ledger",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
