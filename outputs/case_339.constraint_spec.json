[
  {
    "id": "insurance:same_person_definition",
    "desc": "同一人定義為同一自然人或同一法人",
    "expr": [
      "EQ",
      "same_person",
      [
        "OR",
        [
          "EQ",
          "natural_person_1",
          "natural_person_2"
        ],
        [
          "EQ",
          "legal_person_1",
          "legal_person_2"
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:related_person_definition",
    "desc": "同一關係人定義包含本人、配偶、二親等以內血親及以本人或配偶為負責人之事業",
    "expr": [
      "EQ",
      "related_person",
      [
        "OR",
        [
          "EQ",
          "person",
          "self"
        ],
        [
          "EQ",
          "person",
          "spouse"
        ],
        [
          "LE",
          "degree_of_kinship",
          2
        ],
        [
          "EQ",
          "person_responsible_for_business",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:related_corporate_definition",
    "desc": "同一關係企業範圍依公司法相關條文規定",
    "expr": [
      "EQ",
      "related_corporate",
      [
        "OR",
        [
          "EQ",
          "company_law_369_1_applied",
          true
        ],
        [
          "EQ",
          "company_law_369_2_applied",
          true
        ],
        [
          "EQ",
          "company_law_369_3_applied",
          true
        ],
        [
          "EQ",
          "company_law_369_9_applied",
          true
        ],
        [
          "EQ",
          "company_law_369_11_applied",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:loan_and_other_transaction_limit",
    "desc": "主管機關得限制保險業對同一人、同一關係人或同一關係企業之放款或其他交易",
    "expr": [
      "EQ",
      "loan_and_other_transaction_limit",
      [
        "AND",
        [
          "LE",
          "loan_amount_to_same_person",
          "loan_limit"
        ],
        [
          "LE",
          "loan_amount_to_related_person",
          "loan_limit"
        ],
        [
          "LE",
          "loan_amount_to_related_corporate",
          "loan_limit"
        ],
        [
          "LE",
          "other_transaction_amount_to_same_person",
          "transaction_limit"
        ],
        [
          "LE",
          "other_transaction_amount_to_related_person",
          "transaction_limit"
        ],
        [
          "LE",
          "other_transaction_amount_to_related_corporate",
          "transaction_limit"
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:loan_other_transaction_limit_compliance",
    "desc": "保險業遵守主管機關對放款及其他交易限額及範圍規定",
    "expr": [
      "EQ",
      "loan_other_transaction_limit_compliance",
      [
        "EQ",
        "loan_and_other_transaction_limit",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
