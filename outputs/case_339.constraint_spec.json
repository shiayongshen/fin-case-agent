  {
    "id": "insurance:loan_without_board_approval",
    "desc": "擔保放款未經董事會三分之二以上董事出席及四分之三以上同意",
    "expr": [
      "EQ",
      "loan_without_board_approval",
      [
        "OR",
        [
          "LT",
          "board_attendance_ratio",
          0.6666667
        ],
        [
          "LT",
          "board_approval_ratio",
          0.75
        ]
      ]
    ],
    "weight": 1,
