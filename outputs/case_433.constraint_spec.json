        [
          "EQ",
          "insurance_or_representative_supervisor",
          true
        ],
        [
          "EQ",
          "insurance_or_representative_voting_rights",
          true
        ],
        [
          "EQ",
          "insurance_or_representative_manager_appointment",
          true
        ],
        [
          "EQ",
          "insurance_or_representative_trust_supervisor",
          true
        ],
        [
          "EQ",
          "insurance_or_representative_management_participation",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:foreign_investment_limit",
    "desc": "國外投資總額不得超過資金45%",
    "expr": [
      "EQ",
      "foreign_investment_limit",
      [
        "LE",
        [
          "MUL",
          [
            "DIV",
            "foreign_investment_total",
            "total_funds"
          ],
          100.0
        ],
        45.0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:foreign_investment_exclusions",
    "desc": "國外投資限額不計入特定核准項目金額",
    "expr": [
      "EQ",
      "foreign_investment_exclusions",
      [
        "AND",
        [
          "EQ",
          "foreign_investment_exclusion_approved_foreign_currency_insurance",
          true
        ],
        [
          "EQ",
          "foreign_investment_exclusion_domestic_foreign_currency_securities",
          true
        ],
        [
          "EQ",
          "foreign_investment_exclusion_approved_foreign_insurance_related",
          true
        ],
        [
          "EQ",
          "foreign_investment_exclusion_other_approved",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反資本嚴重不足未完成改善計畫或財務業務惡化未改善且未接受監管處分，或違反投資限制規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "capital_level",
            4
          ],
          [
            "NOT",
            [
              "EQ",
