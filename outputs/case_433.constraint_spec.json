[
  {
    "id": "insurance:capital_level_severe_insufficient",
    "desc": "資本等級為嚴重不足",
    "expr": [
      "EQ",
      "capital_level_severe_insufficient",
      [
        "LT",
        "capital_level",
        2
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足, 0=未定義）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_completed",
    "desc": "增資、財務或業務改善計畫或合併已於主管機關規定期限內完成",
    "expr": [
      "EQ",
      "improvement_plan_completed",
      [
        "EQ",
        "improvement_plan_submitted",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_overdue",
    "desc": "資本嚴重不足且未於期限內完成增資、財務或業務改善計畫或合併",
    "expr": [
      "EQ",
      "improvement_plan_overdue",
      [
        "AND",
        [
          "EQ",
          "capital_level",
          4
        ],
        [
          "NOT",
          [
            "EQ",
            "improvement_plan_completed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_or_business_deterioration",
    "desc": "財務或業務狀況顯著惡化，不能支付債務或無法履行契約責任或有損及被保險人權益之虞",
    "expr": [
      "EQ",
      "financial_or_business_deterioration",
      [
        "OR",
        [
          "EQ",
          "unable_to_pay_debt",
          true
        ],
        [
          "EQ",
          "unable_to_fulfill_contract",
          true
        ],
        [
          "EQ",
          "risk_to_insured_interest",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_approved",
    "desc": "主管機關核定財務或業務改善計畫",
    "expr": [
      "EQ",
      "improvement_plan_approved",
      [
        "EQ",
        "improvement_plan_submitted",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:accelerated_deterioration_or_no_improvement",
    "desc": "損益、淨值加速惡化或經輔導仍未改善",
    "expr": [
      "EQ",
      "accelerated_deterioration_or_no_improvement",
      [
        "OR",
        [
          "EQ",
          "profit_loss_accelerated_deterioration",
          true
        ],
        [
          "EQ",
          "no_improvement_after_guidance",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:supervisory_measures_required",
    "desc": "應為監管、接管、勒令停業清理或命令解散之處分",
    "expr": [
      "EQ",
      "supervisory_measures_required",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "capital_level",
            4
          ],
          [
            "NOT",
            [
              "EQ",
              "improvement_plan_completed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "NOT",
            [
              "EQ",
              "capital_level",
              4
            ]
          ],
          [
            "EQ",
            "financial_or_business_deterioration",
            true
          ],
          [
            "EQ",
            "improvement_plan_approved",
            true
          ],
          [
            "EQ",
            "accelerated_deterioration_or_no_improvement",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:supervisory_restrictions",
    "desc": "監管處分限制保險業行為",
    "expr": [
      "EQ",
      "supervisory_restrictions",
      [
        "AND",
        [
          "EQ",
          "under_supervision",
          true
        ],
        [
          "OR",
          [
            "LE",
            "payment_limit",
            "supervision_payment_limit"
          ],
          [
            "LE",
            "contract_commitment_limit",
            "supervision_contract_commitment_limit"
          ],
          [
            "EQ",
            "other_major_financial_matters_restricted",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:investment_limit_financial_bonds",
    "desc": "金融債券等投資不得超過資金35%",
    "expr": [
      "EQ",
      "investment_limit_financial_bonds",
      [
        "LE",
        [
          "MUL",
          [
            "DIV",
            "financial_bonds_investment_amount",
            "total_funds"
          ],
          100.0
        ],
        35.0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:investment_limit_company_stock_per_company",
    "desc": "每一公司股票投資不得超過資金5%",
    "expr": [
      "EQ",
      "investment_limit_company_stock_per_company",
      [
        "LE",
        [
          "MUL",
          [
            "DIV",
            "company_stock_investment_amount_per_company",
            "total_funds"
          ],
          100.0
        ],
        5.0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:investment_limit_company_stock_per_company_shares",
    "desc": "每一公司股票投資不得超過該公司已發行股份總數10%",
    "expr": [
      "EQ",
      "investment_limit_company_stock_per_company_shares",
      [
        "LE",
        [
          "MUL",
          [
            "DIV",
            "company_stock_investment_shares_per_company",
            "total_shares_issued_per_company"
          ],
          100.0
        ],
        10.0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:investment_limit_company_bonds_per_company",
    "desc": "每一公司公司債及免保證商業本票投資不得超過資金5%",
    "expr": [
      "EQ",
      "investment_limit_company_bonds_per_company",
      [
        "LE",
        [
          "MUL",
          [
            "DIV",
            "company_bonds_investment_amount_per_company",
            "total_funds"
          ],
          100.0
        ],
        5.0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:investment_limit_company_bonds_per_company_equity",
    "desc": "每一公司公司債及免保證商業本票投資不得超過公司業主權益10%",
    "expr": [
      "EQ",
      "investment_limit_company_bonds_per_company_equity",
      [
        "LE",
        [
          "MUL",
          [
            "DIV",
            "company_bonds_investment_amount_per_company",
            "company_equity_per_company"
          ],
          100.0
        ],
        10.0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:investment_limit_fund_total",
    "desc": "證券投資信託基金及共同信託基金投資總額不得超過資金10%",
    "expr": [
      "EQ",
      "investment_limit_fund_total",
      [
        "LE",
        [
          "MUL",
          [
            "DIV",
            "fund_investment_total",
            "total_funds"
          ],
          100.0
        ],
        10.0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
