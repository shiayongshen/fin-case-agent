    "desc": "每一基金受益憑證投資不得超過已發行受益憑證總額10%",
    "expr": [
      "EQ",
      "investment_limit_fund_per_issued_units",
      [
        "LE",
        [
          "MUL",
          [
            "DIV",
            "fund_investment_units_per_fund",
            "total_issued_units_per_fund"
          ],
          100.0
        ],
        10.0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:investment_limit_securitized_products",
    "desc": "證券化商品及其他核准有價證券投資總額不得超過資金10%",
    "expr": [
      "EQ",
      "investment_limit_securitized_products",
      [
        "LE",
        [
          "MUL",
          [
            "DIV",
            "securitized_products_investment_total",
            "total_funds"
          ],
          100.0
        ],
        10.0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:investment_limit_stock_and_securitized_total",
    "desc": "第三款及第四款投資總額不得超過資金35%",
    "expr": [
      "EQ",
      "investment_limit_stock_and_securitized_total",
      [
        "LE",
        [
          "MUL",
          [
            "DIV",
            [
              "ADD",
              "company_stock_investment_total",
              "securitized_products_investment_total"
            ],
            "total_funds"
          ],
          100.0
        ],
        35.0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:investment_prohibited_roles",
    "desc": "不得以保險業或代表人擔任被投資公司董事、監察人、行使表決權、指派經理人、擔任信託監察人或參與經營",
    "expr": [
      "EQ",
      "investment_prohibited_roles",
      [
        "NOT",
        [
          "OR",
          [
            "EQ",
            "insurance_or_representative_director",
            true
