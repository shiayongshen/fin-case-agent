  {
    "id": "insurance:penalty_conditions",
    "desc": "處罰條件：違反代理人管理規則第49條禁止行為或未取得許可、保證金、保險，或違反內部控制規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "prohibited_acts",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "license_and_bond_insurance_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_required",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  }
]