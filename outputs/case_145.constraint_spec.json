[
  {
    "id": "insurance:license_and_bond_insurance_ok",
    "desc": "保險代理人、經紀人、公證人已取得許可、繳存保證金並投保相關保險",
    "expr": [
      "EQ",
      "license_and_bond_insurance_ok",
      [
        "AND",
        [
          "EQ",
          "license_obtained",
          true
        ],
        [
          "EQ",
          "bond_deposited",
          true
        ],
        [
          "EQ",
          "insurance_purchased",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:single_license_only",
    "desc": "兼有代理人、經紀人、公證人資格者僅得擇一申領執業證照",
    "expr": [
      "EQ",
      "single_license_only",
      [
        "LE",
        [
          "SUM",
          [
            "IF",
            [
              "EQ",
              "has_agent_license",
              true
            ],
            1,
            0
          ],
          [
            "IF",
            [
              "EQ",
              "has_broker_license",
              true
            ],
            1,
            0
          ],
          [
            "IF",
            [
              "EQ",
              "has_notary_license",
              true
            ],
            1,
            0
          ]
        ],
        1
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:fixed_office_and_accounting",
    "desc": "保險代理人、經紀人、公證人有固定業務處所並專設帳簿記載業務收支",
    "expr": [
      "EQ",
      "fixed_office_and_accounting",
      [
        "AND",
        [
          "EQ",
          "has_fixed_office",
          true
        ],
        [
          "EQ",
          "has_dedicated_accounting_books",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_required",
    "desc": "公開發行公司或具一定規模之代理人公司、經紀人公司建立內部控制、稽核及招攬處理制度與程序",
    "expr": [
      "EQ",
      "internal_control_required",
      [
        "IMPLIES",
        [
          "OR",
          [
            "EQ",
            "is_public_company",
            true
          ],
          [
            "EQ",
            "has_certain_scale",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "internal_control_established",
            true
          ],
          [
            "EQ",
            "audit_system_established",
            true
          ],
          [
            "EQ",
            "solicitation_handling_system_established",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:prohibited_acts",
