            "EQ",
            "act_27_conflict_of_interest",
            true
          ],
          [
            "EQ",
            "act_28_induce_contract_termination_or_loan_payment",
            true
          ],
          [
            "EQ",
            "act_29_fail_to_fill_solicitation_report",
            true
