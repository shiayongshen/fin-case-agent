  {
    "id": "insurance:loan_provision_minimum",
    "desc": "備抵呆帳金額不得低於各類放款資產標準比例",
    "expr": [
      "EQ",
      "loan_provision_minimum",
      [
        "AND",
        [
          "GE",
          "provision_amount",
          [
            "ADD",
            [
              "MUL",
              [
                "SUB",
                "loan_class_1_amount",
                [
                  "ADD",
                  "life_insurance_loan",
                  "premium_advance",
                  "government_claim"
                ]
              ],
              0.005
            ],
            [
              "MUL",
              "loan_class_2_amount",
              0.02
            ],
            [
              "MUL",
              "loan_class_3_amount",
              0.1
            ],
            [
              "MUL",
              "loan_class_4_amount",
              0.5
            ],
            "loan_class_5_amount"
          ]
        ],
        [
          "GE",
          "provision_amount",
          [
            "MUL",
            [
              "ADD",
              [
                "SUB",
                "loan_class_1_amount",
                [
                  "ADD",
                  "life_insurance_loan",
                  "premium_advance",
                  "government_claim"
                ]
              ],
              "loan_class_2_amount",
              "loan_class_3_amount",
              "loan_class_4_amount",
              "loan_class_5_amount"
            ],
            0.01
          ]
        ],
        [
          "GE",
          "provision_amount",
          [
            "SUM",
            "loan_class_7_overdue_unsecured_amounts"
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
