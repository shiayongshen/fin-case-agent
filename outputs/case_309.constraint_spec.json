    "desc": "期貨交易輔助人負責人、經理人及業務員登記有效且無撤銷情事",
    "expr": [
      "EQ",
      "personnel_registration_valid",
      [
        "AND",
        [
          "EQ",
          "personnel_registered",
          true
        ],
        [
          "NOT",
          "personnel_registration_revoked"
        ]
      ]
    ],
    "weight": 1,
    "domain": "futures"
