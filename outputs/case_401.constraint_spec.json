[
  {
    "id": "insurance:agent_broker_notary_license_and_guarantee",
    "desc": "保險代理人、經紀人、公證人須經主管機關許可，繳存保證金並投保相關保險，領有執業證照後始得經營或執行業務",
    "expr": [
      "EQ",
      "agent_broker_notary_license_and_guarantee",
      [
        "AND",
        [
          "EQ",
          "license_permitted",
          true
        ],
        [
          "GE",
          "guarantee_deposit_amount",
          "guarantee_minimum_amount"
        ],
        [
          "EQ",
          "relevant_insurance_covered",
          true
        ],
        [
          "EQ",
          "practice_certificate_held",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:relevant_insurance_type",
    "desc": "相關保險種類依身份區分：保險代理人、公證人為責任保險；保險經紀人為責任保險及保證保險",
    "expr": [
      "EQ",
      "relevant_insurance_type_ok",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "is_agent",
            true
          ],
          [
            "EQ",
            "insurance_type",
            "liability_insurance"
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "is_notary",
            true
          ],
          [
            "EQ",
            "insurance_type",
            "liability_insurance"
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "is_broker",
            true
          ],
          [
            "OR",
            [
              "EQ",
              "insurance_type",
              "liability_insurance"
            ],
            [
              "EQ",
              "insurance_type",
              "guarantee_insurance"
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:guarantee_minimum_amount_defined_by_authority",
    "desc": "保證金最低金額及實施方式由主管機關依業務範圍及規模定之",
    "expr": [
      "EQ",
      "guarantee_minimum_amount_defined",
      [
        "EQ",
        "guarantee_minimum_amount_set_by_authority",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:qualification_and_management_rules_set_by_authority",
    "desc": "資格取得、申請許可條件、程序、文件、董事監察人經理人資格、解任事由、分支機構條件、財務業務管理、教育訓練、廢止許可及其他管理規則由主管機關定之",
    "expr": [
      "EQ",
      "qualification_and_management_rules_set",
      [
        "EQ",
        "qualification_and_management_rules_set_by_authority",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:bank_permitted_to_operate_agent_or_broker",
    "desc": "銀行得經主管機關許可擇一兼營保險代理人或保險經紀人業務，並分別準用相關規定",
    "expr": [
      "EQ",
      "bank_agent_or_broker_permitted",
      [
        "AND",
        [
          "EQ",
          "bank_permitted_by_authority",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "bank_operate_agent",
            true
          ],
          [
            "EQ",
            "bank_operate_broker",
            true
          ]
        ],
        [
          "EQ",
          "apply_agent_broker_regulations",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_duty_of_care_and_fidelity",
    "desc": "保險經紀人應以善良管理人注意義務為被保險人洽訂保險契約或提供服務，並負忠實義務",
    "expr": [
      "EQ",
      "broker_duty_of_care_and_fidelity",
      [
        "AND",
        [
          "EQ",
          "broker_exercise_duty_of_care",
          true
        ],
        [
          "EQ",
          "broker_fulfill_fidelity_duty",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_provide_written_report_and_disclose_fee",
    "desc": "保險經紀人於主管機關指定範圍內洽訂保險契約前，應主動提供書面分析報告，向要保人或被保險人收取報酬者，應明確告知報酬標準",
    "expr": [
      "EQ",
      "broker_report_and_fee_disclosure_ok",
      [
        "AND",
        [
          "EQ",
          "within_authority_designated_scope",
          true
        ],
        [
          "EQ",
          "written_analysis_report_provided",
          true
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "fee_charged",
            true
          ],
          [
            "EQ",
            "fee_disclosure_made",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：未經主管機關許可、未繳存保證金、未投保相關保險、未領執業證照或違反保險經紀人義務時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "license_permitted",
            true
          ]
        ],
        [
          "NOT",
          [
            "GE",
            "guarantee_deposit_amount",
            "guarantee_minimum_amount"
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "relevant_insurance_covered",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "practice_certificate_held",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_duty_of_care_and_fidelity",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_report_and_fee_disclosure_ok",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]