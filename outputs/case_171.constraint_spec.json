[
  {
    "id": "insurance:internal_control_established",
    "desc": "建立內部控制及稽核制度",
    "expr": [
      "EQ",
      "internal_control_established",
      [
        "EQ",
        "internal_control_system_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_executed",
    "desc": "執行內部控制及稽核制度",
    "expr": [
      "EQ",
      "internal_control_executed",
      [
        "EQ",
        "internal_control_system_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_established",
    "desc": "建立內部處理制度及程序",
    "expr": [
      "EQ",
      "internal_handling_established",
      [
        "EQ",
        "internal_handling_system_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_executed",
    "desc": "執行內部處理制度及程序",
    "expr": [
      "EQ",
      "internal_handling_executed",
      [
        "EQ",
        "internal_handling_system_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_compliance",
    "desc": "內部控制及稽核制度建立且執行",
    "expr": [
      "EQ",
      "internal_control_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_compliance",
    "desc": "內部處理制度及程序建立且執行",
    "expr": [
      "EQ",
      "internal_handling_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_handling_established",
          true
        ],
        [
          "EQ",
          "internal_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_systems_compliance",
    "desc": "內部控制及稽核制度與內部處理制度均合規",
    "expr": [
      "EQ",
      "internal_systems_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_control_compliance",
          true
        ],
        [
          "EQ",
          "internal_handling_compliance",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_4_noncompliance",
    "desc": "資本嚴重不足且未依主管機關規定期限完成增資、改善計畫或合併",
    "expr": [
      "EQ",
      "capital_level_4_noncompliance",
      [
        "AND",
        [
          "EQ",
          "capital_level",
          4
        ],
        [
          "NOT",
          [
            "EQ",
            "capital_level_4_measures_completed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_4_measures_completed",
    "desc": "資本嚴重不足等級增資、改善計畫或合併完成",
    "expr": [
      "EQ",
      "capital_level_4_measures_completed",
      [
        "EQ",
        "capital_level_4_measures_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_deterioration_reported",
    "desc": "財務或業務狀況顯著惡化且已提出並核定改善計畫",
    "expr": [
      "EQ",
      "financial_deterioration_reported",
      [
        "AND",
        [
          "EQ",
          "financial_deterioration",
          true
        ],
        [
          "EQ",
          "improvement_plan_submitted",
          true
        ],
        [
          "EQ",
          "improvement_plan_approved",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_deterioration_not_improved",
    "desc": "財務或業務狀況惡化且損益、淨值加速惡化或輔導未改善",
    "expr": [
      "EQ",
      "financial_deterioration_not_improved",
      [
        "AND",
        [
          "EQ",
          "financial_deterioration_reported",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "profit_loss_deteriorated",
            true
          ],
          [
            "EQ",
            "net_worth_deteriorated",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "improvement_plan_executed",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:supervision_measures_taken",
    "desc": "主管機關已對保險業為監管、接管、勒令停業清理或命令解散之處分",
    "expr": [
      "EQ",
      "supervision_measures_taken",
      [
        "OR",
        [
          "EQ",
          "supervision_ordered",
          true
        ],
        [
          "EQ",
          "takeover_ordered",
          true
        ],
        [
          "EQ",
          "suspension_ordered",
          true
        ],
        [
          "EQ",
          "dissolution_ordered",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_internal_control",
    "desc": "違反內部控制及稽核制度規定",
    "expr": [
      "EQ",
      "violation_internal_control",
      [
        "NOT",
        [
          "EQ",
          "internal_control_compliance",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_internal_handling",
    "desc": "違反內部處理制度及程序規定",
    "expr": [
      "EQ",
      "violation_internal_handling",
      [
        "NOT",
        [
          "EQ",
          "internal_handling_compliance",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反內部控制或內部處理制度規定，或資本嚴重不足且未完成增資改善計畫，或財務惡化未改善時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "violation_internal_control",
          true
        ],
        [
          "EQ",
          "violation_internal_handling",
          true
        ],
        [
          "EQ",
          "capital_level_4_noncompliance",
          true
        ],
        [
          "AND",
          [
            "NOT",
            [
              "EQ",
              "capital_level",
              4
            ]
          ],
          [
            "EQ",
            "financial_deterioration_not_improved",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]