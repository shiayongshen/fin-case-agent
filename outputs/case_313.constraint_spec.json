    "expr": [
      "EQ",
      "aml_violation",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "aml_internal_control_compliance",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:penalty_after_improvement",
    "desc": "屆期未改善",
    "expr": [
      "EQ",
      "aml_penalty_after_improvement",
      [
        "AND",
        [
          "EQ",
          "improvement_ordered",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "improvement_completed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:penalty_due_to_violation",
    "desc": "違反規定且未改善處罰",
    "expr": [
      "EQ",
      "aml_penalty_due_to_violation",
      [
        "AND",
        [
          "EQ",
          "aml_violation",
          true
        ],
        [
          "EQ",
          "aml_penalty_after_improvement",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
