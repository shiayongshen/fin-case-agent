    "expr": [
      "EQ",
      "aml_penalty_due_to_obstruction",
      [
        "EQ",
        "inspection_obstruction",
        true
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反洗錢防制法第7條規定未建立或未執行制度且未改善，或規避查核時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "aml_penalty_due_to_violation",
          true
        ],
        [
          "EQ",
          "aml_penalty_due_to_obstruction",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
