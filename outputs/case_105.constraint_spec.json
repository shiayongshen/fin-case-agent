[
  {
    "id": "securities:good_faith_duty",
    "desc": "證券投資信託事業等應以善良管理人注意義務及忠實義務執行業務",
    "expr": [
      "EQ",
      "good_faith_duty",
      [
        "AND",
        [
          "EQ",
          "duty_of_care",
          true
        ],
        [
          "EQ",
          "duty_of_loyalty",
          true
        ],
        [
          "EQ",
          "duty_of_honesty",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:confidentiality_obligation",
    "desc": "應保守受益人或客戶個人資料及交易資料秘密",
    "expr": [
      "EQ",
      "confidentiality_obligation",
      [
        "AND",
        [
          "EQ",
          "data_protection_law_compliance",
          true
        ],
        [
          "EQ",
          "regulator_additional_rules_compliance",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:liability_for_damage",
    "desc": "違反善良管理人義務或保密義務致損害應負賠償責任",
    "expr": [
      "EQ",
      "liability_for_damage",
      [
        "AND",
        [
          "NOT",
          [
            "EQ",
            "good_faith_duty",
            true
          ]
        ],
        [
          "OR",
          [
            "NOT",
            [
              "EQ",
              "confidentiality_obligation",
              true
            ]
          ],
          [
            "GT",
            "damage_amount",
            0.0
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:investment_decision_recorded",
    "desc": "投資決定依分析作成並作成紀錄",
    "expr": [
      "EQ",
      "investment_decision_recorded",
      [
        "AND",
        [
          "EQ",
          "investment_decision_based_on_analysis",
          true
        ],
        [
          "EQ",
          "investment_decision_recorded_flag",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:monthly_review_submitted",
    "desc": "按月提出投資決定檢討",
    "expr": [
      "EQ",
      "monthly_review_submitted",
      [
        "EQ",
        "monthly_review_report_submitted",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:investment_decision_reasonable",
    "desc": "投資分析與決定有合理基礎及根據",
    "expr": [
      "EQ",
      "investment_decision_reasonable",
      [
        "EQ",
        "investment_decision_has_reasonable_basis",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:internal_control_established_and_executed",
    "desc": "訂定內部控制制度並確實執行，控制作業留存紀錄並保存期限符合規定",
    "expr": [
      "EQ",
      "internal_control_established_and_executed",
      [
        "AND",
        [
          "EQ",
          "internal_control_system_defined",
          true
        ],
        [
          "EQ",
          "internal_control_system_executed",
          true
        ],
        [
          "EQ",
          "control_operation_recorded",
          true
        ],
        [
          "GE",
          "control_record_retention_period",
          "regulator_defined_minimum_period"
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:full_trust_investment_decision_compliance",
    "desc": "全權委託投資決定準用第17條規定",
    "expr": [
      "EQ",
      "full_trust_investment_decision_compliance",
      [
        "EQ",
        "investment_decision_recorded",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:full_trust_investment_diversification_compliance",
    "desc": "全權委託投資資產分散投資且符合主管機關分散比率規定",
    "expr": [
      "EQ",
      "full_trust_investment_diversification_compliance",
      [
        "AND",
        [
          "EQ",
          "diversified_investment",
          true
        ],
        [
          "GE",
          "investment_diversification_ratio",
          "regulator_defined_minimum_ratio"
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:prohibited_behaviors_absent",
    "desc": "未有第59條禁止之行為",
    "expr": [
      "EQ",
      "prohibited_behaviors_absent",
      [
        "AND",
        [
          "NOT",
          [
            "EQ",
            "insider_trading_for_self_or_others",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "damaging_client_interests_trading",
            true
          ]
        ],
        [
          "OR",
          [
            "NOT",
            [
              "EQ",
              "profit_loss_sharing_agreement_with_client",
              true
            ]
          ],
          [
            "EQ",
            "regulator_performance_fee_exception",
            true
          ]
        ],
        [
          "OR",
          [
            "NOT",
            [
              "EQ",
              "opposite_commission_trading",
              true
            ]
          ],
          [
            "AND",
            [
              "EQ",
              "trading_through_exchange_or_broker",
              true
            ],
            [
              "NOT",
              [
                "EQ",
                "intentional_opposite_commission",
                true
              ]
            ]
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "using_client_account_for_self_or_others",
            true
          ]
        ],
        [
          "OR",
          [
            "NOT",
            [
              "EQ",
              "full_trust_contract_subcontracted_or_transferred",
              true
            ]
          ],
          [
            "EQ",
            "regulator_subcontracting_exception",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "unauthorized_account_transfer",
            true
          ]
        ],
        [
          "OR",
          [
            "EQ",
            "investment_decision_based_on_analysis",
            true
          ],
          [
            "EQ",
            "reasonable_explanation_provided",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "other_behaviors_affecting_business_or_client_rights",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:prohibited_behaviors_respected",
    "desc": "負責人及受僱人不得為第19條第1項、第59條或法令契約禁止行為",
    "expr": [
      "EQ",
      "prohibited_behaviors_respected",
      [
        "AND",
        [
          "EQ",
          "prohibited_behaviors_absent",
          true
        ],
        [
          "EQ",
          "prohibited_behaviors_law_contract_respected",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:internal_control_system_established",
    "desc": "依第93條規定建立內部控制制度",
    "expr": [
      "EQ",
      "internal_control_system_established",
      [
        "EQ",
        "internal_control_system_defined",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:business_operated_according_to_law_and_internal_control",
    "desc": "業務經營依法令、章程及內部控制制度",
    "expr": [
      "EQ",
      "business_operated_according_to_law_and_internal_control",
      [
        "AND",
        [
          "EQ",
          "business_operated_according_to_law",
          true
        ],
        [
          "EQ",
          "business_operated_according_to_articles",
          true
        ],
        [
          "EQ",
          "business_operated_according_to_internal_control",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:internal_control_change_approved_and_filed",
    "desc": "內部控制制度訂定或變更經董事會同意並留存備查，變更通知限期內完成",
    "expr": [
      "EQ",
      "internal_control_change_approved_and_filed",
      [
        "AND",
        [
          "EQ",
          "internal_control_change_approved_by_board",
          true
        ],
        [
          "EQ",
          "internal_control_change_filed",
          true
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "regulator_notified_change",
            true
          ],
          [
            "EQ",
            "internal_control_change_completed_within_deadline",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:internal_control_system_design_and_execution",
    "desc": "內部控制制度設計明確組織結構、呈報體系及權限責任，並確實執行及持續檢討",
    "expr": [
      "EQ",
      "internal_control_system_design_and_execution",
      [
        "AND",
        [
          "EQ",
          "internal_control_organization_structure_defined",
          true
        ],
        [
          "EQ",
          "internal_control_reporting_system_defined",
          true
        ],
        [
          "EQ",
          "internal_control_authority_and_responsibility_defined",
          true
        ],
        [
          "EQ",
          "manager_appointment_and_dismissal_defined",
          true
        ],
        [
          "EQ",
          "manager_authority_and_salary_policy_defined",
          true
        ],
        [
          "EQ",
          "internal_control_system_executed",
          true
        ],
        [
          "EQ",
          "internal_control_system_continuously_reviewed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "securities:regulator_order_for_special_audit",
    "desc": "主管機關得令限期改善並委託會計師專案審查內部控制制度",
    "expr": [
      "EQ",
      "regulator_order_for_special_audit",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_written",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_audit_staff_adequate",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "annual_audit_plan_reported",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "annual_audit_plan_executed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_deficiencies_reported",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_self_assessed",
            true
          ]
        ],
        [
          "AND",
          [
            "NOT",
            [
              "EQ",
              "internal_control_deficiencies_improved",
              true
            ]
          ],
          [
            "EQ",
            "deficiencies_severity_major",
            true
          ]
        ],
        [
          "AND",
          [
            "NOT",
            [
              "EQ",
              "external_financial_reporting_true",
              true
            ]
          ],
          [
            "EQ",
            "violation_severity_major",
            true
          ]
        ],
        [
          "EQ",
          "fraud_or_suspected_fraud_occurred",
          true
        ],
        [
          "EQ",
          "other_regulator_special_audit_needed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反善良管理人義務、保密義務、投資決策紀錄、內部控制制度或第59條禁止行為等規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "good_faith_duty",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "confidentiality_obligation",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "investment_decision_recorded",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "monthly_review_submitted",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "investment_decision_reasonable",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_established_and_executed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "full_trust_investment_decision_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "full_trust_investment_diversification_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "prohibited_behaviors_absent",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "prohibited_behaviors_respected",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_system_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "business_operated_according_to_law_and_internal_control",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_change_approved_and_filed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_system_design_and_execution",
            true
          ]
        ],
        [
          "EQ",
          "regulator_order_for_special_audit",
          true
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]