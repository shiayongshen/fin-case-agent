[
  {
    "id": "aml:internal_control_established",
    "desc": "已建立洗錢防制內部控制與稽核制度，包含防制作業程序、在職訓練、專責人員、風險評估報告、稽核程序及其他指定事項",
    "expr": [
      "EQ",
      "internal_control_established",
      [
        "AND",
        [
          "EQ",
          "control_procedures_established",
          true
        ],
        [
          "EQ",
          "training_held_regularly",
          true
        ],
        [
          "EQ",
          "dedicated_personnel_assigned",
          true
        ],
        [
          "EQ",
          "risk_assessment_report_updated",
          true
        ],
        [
          "EQ",
          "audit_procedures_established",
          true
        ],
        [
          "EQ",
          "other_designated_matters_established",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:internal_control_executed",
    "desc": "已執行洗錢防制內部控制與稽核制度",
    "expr": [
      "EQ",
      "internal_control_executed",
      [
        "EQ",
        "internal_control_execution_confirmed",
        true
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:account_monitoring_policy_established",
    "desc": "已建立帳戶或交易監控政策與程序，包含資訊系統整合、內部控制程序、風險基礎方法、完整監控型態及書面化",
    "expr": [
      "EQ",
      "account_monitoring_policy_established",
      [
        "AND",
        [
          "EQ",
          "customer_data_integrated",
          true
        ],
        [
          "EQ",
          "internal_control_procedures_for_data_access",
          true
        ],
        [
          "EQ",
          "risk_based_monitoring_policy_established",
          true
        ],
        [
          "EQ",
          "monitoring_policy_includes_required_elements",
          true
        ],
        [
          "EQ",
          "monitoring_policy_written",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:account_monitoring_policy_reviewed",
    "desc": "已依據法令及風險評估定期檢討並更新帳戶或交易監控政策及程序",
    "expr": [
      "EQ",
      "account_monitoring_policy_reviewed",
      [
        "EQ",
        "monitoring_policy_review_and_update_done",
        true
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:monitoring_records_kept",
    "desc": "帳戶或交易持續監控情形有記錄，並依規定期限保存",
    "expr": [
      "EQ",
      "monitoring_records_kept",
      [
        "AND",
        [
          "EQ",
          "monitoring_execution_recorded",
          true
        ],
        [
          "EQ",
          "monitoring_records_retained_within_period",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:compliance_overall",
    "desc": "洗錢防制內部控制制度建立且執行，帳戶監控政策建立、檢討及監控記錄保存均符合規定",
    "expr": [
      "EQ",
      "compliance_overall",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ],
        [
          "EQ",
          "account_monitoring_policy_established",
          true
        ],
        [
          "EQ",
          "account_monitoring_policy_reviewed",
          true
        ],
        [
          "EQ",
          "monitoring_records_kept",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：未建立或未執行洗錢防制內部控制制度，或帳戶監控政策未建立、未檢討更新、未保存監控記錄時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_executed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "account_monitoring_policy_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "account_monitoring_policy_reviewed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "monitoring_records_kept",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]