[
  {
    "id": "insurance:foreign_investment_limit",
    "desc": "國外投資總額不得超過資金45%，扣除不計入項目",
    "expr": [
      "EQ",
      "foreign_investment_within_limit",
      [
        "LE",
        "foreign_investment_amount",
        [
          "MUL",
          "total_funds",
          0.45
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:foreign_investment_exclusion_valid",
    "desc": "國外投資不計入限額之金額均經主管機關核准",
    "expr": [
      "EQ",
      "foreign_investment_exclusion_valid",
      [
        "AND",
        [
          "EQ",
          "approved_foreign_currency_non_investment_amount",
          true
        ],
        [
          "EQ",
          "approved_foreign_currency_domestic_securities_amount",
          true
        ],
        [
          "EQ",
          "approved_foreign_insurance_related_investment_amount",
          true
        ],
        [
          "EQ",
          "approved_other_foreign_investment_amount",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_established",
    "desc": "建立內部控制及稽核制度",
    "expr": [
      "EQ",
      "internal_control_established",
      [
        "EQ",
        "internal_control_system_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_established",
    "desc": "建立內部處理制度及程序",
    "expr": [
      "EQ",
      "internal_handling_established",
      [
        "EQ",
        "internal_handling_system_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足, 0=未分類）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_4_measures_executed",
    "desc": "資本嚴重不足等級(4)措施已執行",
    "expr": [
      "EQ",
      "capital_level_4_measures_executed",
      [
        "EQ",
        "level_4_measures_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_3_measures_executed",
    "desc": "資本顯著不足等級(3)措施已執行",
    "expr": [
      "EQ",
      "capital_level_3_measures_executed",
      [
        "EQ",
        "level_3_measures_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_2_measures_executed",
    "desc": "資本不足等級(2)措施已執行",
    "expr": [
      "EQ",
      "capital_level_2_measures_executed",
      [
        "AND",
        [
          "EQ",
          "improvement_plan_submitted",
          true
        ],
        [
          "EQ",
          "improvement_plan_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:loan_and_other_transaction_limit_compliance",
    "desc": "放款及其他交易限額及範圍符合主管機關規定",
    "expr": [
      "EQ",
      "loan_and_other_transaction_limit_compliance",
      [
        "EQ",
        "loan_and_other_transaction_within_limit",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:related_person_definition_valid",
    "desc": "同一人、同一關係人及同一關係企業定義符合規定",
    "expr": [
      "EQ",
      "related_person_definition_valid",
      [
        "AND",
        [
          "EQ",
          "same_person_defined",
          true
        ],
        [
          "EQ",
          "same_related_person_defined",
          true
        ],
        [
          "EQ",
          "same_related_enterprise_defined",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_executed",
    "desc": "內部控制及稽核制度已執行",
    "expr": [
      "EQ",
      "internal_control_executed",
      [
        "EQ",
        "internal_control_system_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_executed",
    "desc": "內部處理制度及程序已執行",
    "expr": [
      "EQ",
      "internal_handling_executed",
      [
        "EQ",
        "internal_handling_system_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_and_handling_ok",
    "desc": "內部控制及稽核制度與內部處理制度及程序均已建立且執行",
    "expr": [
      "EQ",
      "internal_control_and_handling_ok",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ],
        [
          "EQ",
          "internal_handling_established",
          true
        ],
        [
          "EQ",
          "internal_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反國外投資限額、內部控制、資本等級措施或放款及其他交易限額規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "foreign_investment_within_limit",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "foreign_investment_exclusion_valid",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_and_handling_ok",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            4
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_level_4_measures_executed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            3
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_level_3_measures_executed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            2
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_level_2_measures_executed",
              true
            ]
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "loan_and_other_transaction_limit_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "related_person_definition_valid",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]