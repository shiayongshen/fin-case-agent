  {
    "id": "insurance_agent:solicitation_handling_minimum_items",
    "desc": "招攬處理制度及程序至少應包括規定條款（第7條第1至11款，財產保險第7款不適用）",
    "expr": [
      "EQ",
      "solicitation_handling_minimum_items_met",
      [
        "AND",
        [
          "EQ",
          "item_1_met",
          true
        ],
        [
          "EQ",
          "item_2_met",
          true
        ],
        [
          "EQ",
          "item_3_met",
          true
        ],
        [
          "EQ",
          "item_4_met",
          true
        ],
        [
          "EQ",
          "item_5_met",
          true
        ],
        [
          "EQ",
          "item_6_met",
          true
        ],
        [
          "IMPLIES",
          [
            "NOT",
            [
              "EQ",
              "property_insurance",
              true
            ]
          ],
          [
            "EQ",
            "item_7_met",
            true
          ]
        ],
        [
          "EQ",
          "item_8_met",
          true
        ],
        [
          "EQ",
          "item_9_met",
          true
        ],
        [
          "EQ",
          "item_10_met",
          true
        ],
        [
          "EQ",
          "item_11_met",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance_agent"
  },
