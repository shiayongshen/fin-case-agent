[
  {
    "id": "insurance_agent:violation_penalty_scope",
    "desc": "保險代理人、經紀人、公證人違反法令或有礙健全經營時主管機關可處分範圍",
    "expr": [
      "EQ",
      "violation_penalty_scope",
      [
        "CASE",
        [
          "EQ",
          "violation",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "restriction_on_business_scope",
            true
          ],
          [
            "EQ",
            "dismiss_manager_or_staff",
            true
          ],
          [
            "EQ",
            "dismiss_director_or_supervisor_or_suspend_duties",
            true
          ],
          [
            "EQ",
            "other_necessary_measures",
            true
          ]
        ],
        false
      ]
    ],
    "weight": 1,
    "domain": "insurance_agent"
  },
  {
    "id": "insurance_agent:director_dismissal_notification",
    "desc": "依規定解除董事或監察人職務時通知主管機關註銷登記",
    "expr": [
      "EQ",
      "director_dismissal_notification",
      [
        "IMPLIES",
        [
          "EQ",
          "dismiss_director_or_supervisor_or_suspend_duties",
          true
        ],
        [
          "EQ",
          "notify_registration_authority",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance_agent"
  },
  {
    "id": "insurance_agent:violation_167_2",
    "desc": "違反相關管理規則應限期改正或處罰",
    "expr": [
      "EQ",
      "violation_167_2",
      [
        "OR",
        [
          "EQ",
          "violate_financial_or_business_management_rules",
          true
        ],
        [
          "EQ",
          "violate_163_7",
          true
        ],
        [
          "EQ",
          "violate_165_1",
          true
        ],
        [
          "EQ",
          "violate_163_5_applied",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance_agent"
  },
  {
    "id": "insurance_agent:penalty_167_2",
    "desc": "違反167-2條規定應限期改正或處罰罰鍰，情節重大者廢止許可並註銷執業證照",
    "expr": [
      "EQ",
      "penalty_167_2",
      [
        "EQ",
        "violation_167_2",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance_agent"
  },
  {
    "id": "insurance_agent:violation_167_3",
    "desc": "違反未建立或未確實執行內部控制、稽核制度、招攬處理制度或程序",
    "expr": [
      "EQ",
      "violation_167_3",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_executed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "audit_system_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "audit_system_executed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "solicitation_handling_system_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "solicitation_handling_system_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance_agent"
  },
  {
    "id": "insurance_agent:penalty_167_3",
    "desc": "違反167-3條規定應限期改正或處罰罰鍰",
    "expr": [
      "EQ",
      "penalty_167_3",
      [
        "EQ",
        "violation_167_3",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance_agent"
  },
  {
    "id": "insurance_agent:internal_control_requirements",
    "desc": "內部控制制度應依業務性質及規模訂定招攬處理制度及程序與內部控制作業程序並適時檢討修訂",
    "expr": [
      "EQ",
      "internal_control_requirements_met",
      [
        "AND",
