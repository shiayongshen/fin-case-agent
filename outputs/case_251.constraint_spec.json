            true
          ],
          [
            "EQ",
            "profit_loss_sharing_agreement",
            true
          ],
          [
            "EQ",
            "buy_sell_same_security",
            true
          ],
          [
            "EQ",
            "false_misleading_behavior",
            true
          ],
          [
            "EQ",
            "loan_or_intermediation",
            true
          ],
          [
            "EQ",
            "custody_or_misappropriation",
            true
          ],
          [
            "EQ",
            "conflict_of_interest_behavior",
            true
          ],
          [
            "EQ",
            "unauthorized_disclosure",
            true
          ],
          [
            "EQ",
            "unauthorized_use_of_name",
            true
          ],
          [
            "EQ",
            "unreasonable_advice",
            true
          ],
          [
            "EQ",
            "unauthorized_public_prediction",
            true
          ],
          [
            "EQ",
            "non_employee_program_host",
            true
          ],
          [
            "EQ",
            "superstition_based_advice",
            true
          ],
          [
            "EQ",
            "incitement_to_breach_contract",
            true
          ],
          [
            "EQ",
            "unreasonable_commission",
            true
          ],
          [
            "EQ",
            "unregistered_name_activity",
            true
          ],
          [
            "EQ",
            "gift_as_advisory_service",
            true
          ],
          [
            "EQ",
            "unregistered_business_location",
            true
          ],
          [
            "EQ",
            "profit_and_expense_sharing_agreement",
            true
          ],
          [
            "EQ",
            "other_illegal_acts",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "securities_advisory"
  },
  {
    "id": "securities_advisory:confidentiality_obligation",
    "desc": "對客戶個人資料及交易資料應保守秘密",
    "expr": [
      "EQ",
      "confidentiality_obligation",
      [
        "EQ",
        "client_data_kept_confidential",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities_advisory"
  },
  {
    "id": "securities_advisory:internal_management_rules",
    "desc": "應依同業公會規定訂定內部人員管理規範並執行",
    "expr": [
      "EQ",
      "internal_management_rules",
      [
        "EQ",
        "internal_management_rules_established_and_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "securities_advisory"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反專任、登錄、契約、報告、義務、禁止行為、保密及內部管理規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "manager_executive_dedicated",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "manager_executive_registered",
            true
          ]
        ],
        [
          "NOT",
          [
