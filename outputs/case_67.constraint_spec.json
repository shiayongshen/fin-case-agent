[
  {
    "id": "insurance:license_and_guarantee_compliance",
    "desc": "保險代理人、經紀人、公證人須經主管機關許可，繳存保證金並投保相關保險，且領有執業證照後始得經營或執行業務",
    "expr": [
      "EQ",
      "license_and_guarantee_compliance",
      [
        "AND",
        [
          "EQ",
          "approved_by_authority",
          true
        ],
        [
          "GE",
          "guarantee_deposit_amount",
          "minimum_guarantee_deposit"
        ],
        [
          "EQ",
          "relevant_insurance_covered",
          true
        ],
        [
          "EQ",
          "license_issued",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:relevant_insurance_covered",
    "desc": "相關保險依身份不同而異：代理人、公證人為責任保險；經紀人為責任保險及保證保險",
    "expr": [
      "EQ",
      "relevant_insurance_covered",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "is_agent",
            true
          ],
          [
            "EQ",
            "is_notary",
            false
          ],
          [
            "EQ",
            "responsibility_insurance_covered",
            true
          ],
          [
            "EQ",
            "guarantee_insurance_covered",
            false
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "is_agent",
            false
          ],
          [
            "EQ",
            "is_notary",
            true
          ],
          [
            "EQ",
            "responsibility_insurance_covered",
            true
          ],
          [
            "EQ",
            "guarantee_insurance_covered",
            false
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "is_broker",
            true
          ],
          [
            "EQ",
            "responsibility_insurance_covered",
            true
          ],
          [
            "EQ",
            "guarantee_insurance_covered",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:minimum_guarantee_deposit",
    "desc": "主管機關定最低保證金及實施方式，考量經營及執行業務範圍及規模",
    "expr": [
      "EQ",
      "minimum_guarantee_deposit",
      [
        "CASE",
        [
          "GE",
          "authority_defined_minimum_guarantee_deposit",
          0.0
        ],
        "authority_defined_minimum_guarantee_deposit",
        0.0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:management_rules_compliance",
    "desc": "依主管機關定管理規則，符合資格取得、申請許可條件、程序、文件、董事監察人經理人資格、解任事由、分支機構條件、財務業務管理、教育訓練、廢止許可及其他應遵行事項",
    "expr": [
      "EQ",
      "management_rules_compliance",
      [
        "AND",
        [
          "EQ",
          "qualification_conditions_met",
          true
        ],
        [
          "EQ",
          "application_procedures_followed",
          true
        ],
        [
          "EQ",
          "required_documents_submitted",
          true
        ],
        [
          "EQ",
          "board_supervisor_manager_qualifications_met",
          true
        ],
        [
          "EQ",
          "grounds_for_dismissal_complied",
          true
        ],
        [
          "EQ",
          "branch_establishment_conditions_met",
          true
        ],
        [
          "EQ",
          "financial_and_business_management_compliant",
          true
        ],
        [
          "EQ",
          "education_and_training_compliant",
          true
        ],
        [
          "EQ",
          "license_revocation_procedures_compliant",
          true
        ],
        [
          "EQ",
          "other_mandatory_requirements_compliant",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:bank_authority_approval",
    "desc": "銀行經主管機關許可擇一兼營保險代理人或保險經紀人業務，並分別準用相關規定",
    "expr": [
      "EQ",
      "bank_authority_approval",
      [
        "AND",
        [
          "EQ",
          "bank_approved_by_authority",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "bank_operates_as_agent",
            true
          ],
          [
            "EQ",
            "bank_operates_as_broker",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_duties",
    "desc": "保險經紀人應以善良管理人注意義務洽訂保險契約或提供服務，並負忠實義務",
    "expr": [
      "EQ",
      "broker_duties_complied",
      [
        "AND",
        [
          "EQ",
          "duty_of_care_met",
          true
        ],
        [
          "EQ",
          "duty_of_loyalty_met",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_report_and_fee_disclosure",
    "desc": "保險經紀人洽訂契約前，於主管機關指定範圍內主動提供書面分析報告，收取報酬者明確告知報酬標準",
    "expr": [
      "EQ",
      "broker_report_and_fee_disclosure_complied",
      [
        "AND",
        [
          "EQ",
          "written_analysis_report_provided",
          true
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "fee_charged",
            true
          ],
          [
            "EQ",
            "fee_disclosure_made",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_penalty",
    "desc": "違反保險法第163條第四項管理規則中財務或業務管理規定、同條第七項規定，或違反第165條第一項或第163條第五項準用規定者，應限期改正或處罰",
    "expr": [
      "EQ",
      "violation_penalty_applicable",
      [
        "OR",
        [
          "EQ",
          "violate_financial_or_business_management_rules",
          true
        ],
        [
          "EQ",
          "violate_article_163_seventh_paragraph",
          true
        ],
        [
          "EQ",
          "violate_article_165_first_paragraph",
          true
        ],
        [
          "EQ",
          "violate_article_163_fifth_paragraph_applied",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:agent_misconduct",
    "desc": "代理人不得有申領證照不實、未經核准經營、隱匿重要事項、不當手段強迫或索取利益、誇大不實宣傳、慫恿退保、挪用保險費、證照供他人使用、侵占詐欺偽造文書、經營非許可業務、非法收取報酬、不法保險給付、散播不實言論、授權第三人代經營、招攬未登錄人員、聘用未具資格者、未依規定繳銷證照、擅自停業或終止業務、未依規定報備、使用未經同意廣告、支付佣酬不實、未確認金融消費者適合度、銷售未許可商品、提報不實資料、任職保險業或公會現職、勸誘解除契約、未據實填寫招攬報告書、其他違反規則或損保險形象行為",
    "expr": [
      "EQ",
      "agent_misconduct_detected",
      [
        "OR",
        [
          "EQ",
          "false_information_on_license_application",
          true
        ],
        [
          "EQ",
          "operate_without_approval",
          true
        ],
        [
          "EQ",
          "execute_unapproved_insurance_business",
          true
        ],
        [
          "EQ",
          "conceal_important_contract_info",
          true
        ],
        [
          "EQ",
          "coerce_or_induce_or_restrict_contract_freedom_or_ask_extra_benefits",
          true
        ],
        [
          "EQ",
          "exaggerate_or_mislead_promotion_or_recruitment",
          true
        ],
        [
          "EQ",
          "induce_policyholder_to_surrender_or_transfer_or_loan",
          true
        ],
        [
          "EQ",
          "misappropriate_or_embezzle_premiums_or_claims",
          true
        ],
        [
          "EQ",
          "use_license_for_others",
          true
        ],
        [
          "EQ",
          "embezzle_fraud_forgery_conviction",
          true
        ],
        [
          "EQ",
          "operate_outside_license_scope",
          true
        ],
        [
          "EQ",
          "illegal_collection_of_money_or_benefits",
          true
        ],
        [
          "EQ",
          "illegal_insurance_payment",
          true
        ],
        [
          "EQ",
          "spread_false_statements_or_disrupt_financial_order",
          true
        ],
        [
          "EQ",
          "authorize_third_party_to_operate",
          true
        ],
        [
          "EQ",
          "submit_application_documents_of_unregistered_agents",
          true
        ],
        [
          "EQ",
          "employ_unqualified_insurance_solicitors",
          true
        ],
        [
          "EQ",
          "fail_to_cancel_license_within_deadline",
          true
        ],
        [
          "EQ",
          "unauthorized_suspension_or_termination_of_business",
          true
        ],
        [
          "EQ",
          "fail_to_appoint_agent_after_resignation",
          true
        ],
        [
          "EQ",
          "fail_to_report_to_agent_trade_association",
          true
        ],
        [
          "EQ",
          "use_unapproved_advertisement_content",
          true
        ],
        [
          "EQ",
          "pay_commission_to_non_actual_solicitors",
          true
        ],
        [
          "EQ",
          "fail_to_confirm_financial_consumer_suitability",
          true
        ],
        [
          "EQ",
          "sell_unapproved_foreign_policy_discount_benefit_certificates",
          true
        ],
        [
          "EQ",
          "submit_false_or_incomplete_business_or_financial_reports",
          true
        ],
        [
          "EQ",
          "hold_position_in_insurance_or_association",
          true
        ],
        [
          "EQ",
          "induce_customer_to_terminate_contract_or_pay_by_loan_or_deposit",
          true
        ],
        [
          "EQ",
          "fail_to_fill_solicitation_report_truthfully",
          true
        ],
        [
          "EQ",
          "other_violations_of_rules_or_laws",
          true
        ],
        [
          "EQ",
          "other_behaviors_damaging_insurance_image",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反保險法第163條管理規則財務或業務管理規定、相關規定或代理人違規行為時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "violation_penalty_applicable",
          true
        ],
        [
          "EQ",
          "agent_misconduct_detected",
          true
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]