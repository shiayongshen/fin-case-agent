[
  {
    "id": "insurance:real_estate_investment_limit",
    "desc": "不動產投資總額除自用不動產外不得超過資金30%，自用不動產不得超過業主權益總額",
    "expr": [
      "EQ",
      "real_estate_investment_limit",
      [
        "AND",
        [
          "LE",
          [
            "SUB",
            "total_real_estate_investment",
            "self_use_real_estate_investment"
          ],
          [
            "MUL",
            "capital_fund",
            30.0
          ]
        ],
        [
          "LE",
          "self_use_real_estate_investment",
          "owner_equity"
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:real_estate_use_and_income",
    "desc": "不動產投資以即時利用並有收益者為限，住宅法興辦社會住宅且僅供租賃者除外",
    "expr": [
      "EQ",
      "real_estate_use_and_income",
      [
        "OR",
        [
          "EQ",
          "social_housing_only_rental",
          true
        ],
        [
          "EQ",
          "real_estate_immediate_use_and_income",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:real_estate_valuation_required",
    "desc": "不動產取得及處分應經合法不動產鑑價機構評價",
    "expr": [
      "EQ",
      "real_estate_valuation_required",
      [
        "EQ",
        "real_estate_valuation_done",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:loan_type_limit",
    "desc": "放款類型限銀行或主管機關認可信用保證、動產不動產擔保、有價證券質押、人壽保險單質押",
    "expr": [
      "EQ",
      "loan_type_limit",
      [
        "OR",
        [
          "EQ",
          "loan_guaranteed_by_bank_or_authority",
          true
        ],
        [
          "EQ",
          "loan_secured_by_movable_or_immovable",
          true
        ],
        [
          "EQ",
          "loan_secured_by_approved_securities",
          true
        ],
        [
          "EQ",
          "loan_secured_by_life_insurance_policy",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:single_loan_amount_limit",
    "desc": "每一單位放款金額不得超過資金5%",
    "expr": [
      "EQ",
      "single_loan_amount_limit",
      [
        "LE",
        "single_loan_amount",
        [
          "MUL",
          "capital_fund",
          5.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:total_loan_amount_limit",
    "desc": "放款總額不得超過資金35%",
    "expr": [
      "EQ",
      "total_loan_amount_limit",
      [
        "LE",
        "total_loan_amount",
        [
          "MUL",
          "capital_fund",
          35.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:related_party_loan_guarantee_condition",
    "desc": "對負責人、職員、主要股東及利害關係人擔保放款應有十足擔保且條件不得優於其他同類放款",
    "expr": [
      "EQ",
      "related_party_loan_guarantee_condition",
      [
        "AND",
        [
          "EQ",
          "related_party_loan_full_guarantee",
          true
        ],
        [
          "EQ",
          "related_party_loan_condition_not_better",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:related_party_loan_approval",
    "desc": "利害關係人放款達主管機關規定金額以上須經三分之二以上董事出席及四分之三以上同意",
    "expr": [
      "EQ",
      "related_party_loan_approval",
      [
        "IMPLIES",
        [
          "GE",
          "related_party_loan_amount",
          "authority_threshold"
        ],
        [
          "AND",
          [
            "GE",
            "board_attendance_ratio",
            0.6666667
          ],
          [
            "GE",
            "board_approval_ratio",
            0.75
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:combined_investment_and_loan_limit",
    "desc": "同一公司有價證券投資與以該公司有價證券為質放款合計不得超過資金10%及該公司業主權益10%",
    "expr": [
      "EQ",
      "combined_investment_and_loan_limit",
      [
        "AND",
        [
          "LE",
          [
            "ADD",
            "investment_in_company_securities",
            "loan_secured_by_company_securities"
          ],
          [
            "MUL",
            "capital_fund",
            10.0
          ]
        ],
        [
          "LE",
          [
            "ADD",
            "investment_in_company_securities",
            "loan_secured_by_company_securities"
          ],
          [
            "MUL",
            "company_owner_equity",
            10.0
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_and_audit_established",
    "desc": "建立內部控制及稽核制度",
    "expr": [
      "EQ",
      "internal_control_and_audit_established",
      [
        "EQ",
        "internal_control_and_audit_system_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_system_established",
    "desc": "建立資產品質評估、準備金提存、逾期放款、催收款清理、呆帳轉銷及保單招攬核保理賠等內部處理制度及程序",
    "expr": [
      "EQ",
      "internal_handling_system_established",
      [
        "EQ",
        "internal_handling_system_and_procedure_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "insurance:penalty_conditions",
    "desc": "處罰條件：違反不動產投資限制、放款限制、利害關係人擔保放款條件、內部控制及內部處理制度規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "real_estate_investment_limit",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "real_estate_use_and_income",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "real_estate_valuation_required",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "loan_type_limit",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "single_loan_amount_limit",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "total_loan_amount_limit",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "related_party_loan_guarantee_condition",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "related_party_loan_approval",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "combined_investment_and_loan_limit",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_and_audit_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_system_established",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]