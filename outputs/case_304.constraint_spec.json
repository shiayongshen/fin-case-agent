[
  {
    "id": "insurance:act_144_actuarial_staff_assigned",
    "desc": "保險業聘用精算人員並指派簽證精算人員",
    "expr": [
      "EQ",
      "act_144_actuarial_staff_assigned",
      [
        "AND",
        [
          "EQ",
          "actuarial_staff_hired",
          true
        ],
        [
          "EQ",
          "signing_actuarial_staff_assigned",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
