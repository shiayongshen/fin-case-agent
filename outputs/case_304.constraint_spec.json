        [
          "EQ",
          "act_171_1_violation_act_148_2_1",
          true
        ],
        [
          "EQ",
          "act_171_1_violation_act_148_2_2",
          true
        ],
        [
          "EQ",
          "act_171_1_violation_act_148_3_1",
          true
        ],
        [
          "EQ",
          "act_171_1_violation_act_148_3_2",
          true
