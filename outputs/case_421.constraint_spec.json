        "OR",
        [
          "EQ",
          "violate_article_138_1_3_5_or_2",
          true
        ],
        [
          "EQ",
          "violate_article_138_2_4_5_7_or_138_3",
          true
        ],
        [
          "EQ",
          "violate_article_143",
          true
        ],
        [
          "EQ",
          "violate_article_143_5_or_measures",
          true
        ],
        [
          "EQ",
          "violate_article_146_1_3_5_7_or_6_or_8",
          true
        ],
        [
          "EQ",
          "violate_article_146_1_2_3_5_or_146_5",
          true
        ],
        [
          "EQ",
          "violate_article_146_2_4",
          true
        ],
        [
          "EQ",
          "violate_article_146_3_2_4",
          true
        ],
        [
          "EQ",
          "violate_article_146_4_2_3",
          true
        ],
        [
          "EQ",
          "violate_article_146_5_1_or_documents",
          true
        ],
        [
          "EQ",
          "violate_article_146_6_1_2_3",
          true
        ],
        [
          "EQ",
          "violate_article_146_9",
          true
        ],
        [
          "EQ",
          "violate_article_146_3_loan_guarantee",
          true
        ],
        [
          "EQ",
          "violate_article_146_3_loan_limit",
          true
        ],
        [
          "EQ",
          "violate_article_146_7_loan_limit_or_resolution",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_internal_control",
    "desc": "未建立或未執行內部控制或稽核制度",
    "expr": [
      "EQ",
      "violation_internal_control",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_internal_handling",
    "desc": "未建立或未執行內部處理制度或程序",
    "expr": [
      "EQ",
      "violation_internal_handling",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_handling_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反任一規定或未建立或執行內部控制及內部處理制度時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "violation_of_regulations",
          true
        ],
        [
          "EQ",
          "violation_internal_control",
          true
        ],
        [
          "EQ",
          "violation_internal_handling",
          true
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
