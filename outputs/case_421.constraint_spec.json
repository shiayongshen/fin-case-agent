[
  {
    "id": "insurance:prohibited_share_exchange",
    "desc": "不得與被投資公司或第三人以信託、委任或其他契約約定或以協議、授權或其他方法進行股權交換或利益輸送",
    "expr": [
      "EQ",
      "prohibited_share_exchange",
      [
        "NOT",
        [
          "OR",
          [
            "EQ",
            "share_exchange_trust_agreement",
            true
          ],
          [
            "EQ",
            "share_exchange_commission_agreement",
            true
          ],
          [
            "EQ",
            "share_exchange_other_contract",
            true
          ],
          [
            "EQ",
            "share_exchange_agreement",
            true
          ],
          [
            "EQ",
            "share_exchange_authorization",
            true
          ],
          [
            "EQ",
            "share_exchange_other_method",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:no_harm_to_insured_interest",
    "desc": "不得損及要保人、被保險人或受益人之利益",
    "expr": [
      "EQ",
      "no_harm_to_insured_interest",
      [
        "EQ",
        "insured_interest_harmed",
        false
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:vote_evaluation_report_before_meeting",
    "desc": "出席被投資公司股東會前，應作成行使表決權之評估分析說明",
    "expr": [
      "EQ",
      "vote_evaluation_report_before_meeting",
      [
        "EQ",
        "vote_evaluation_report_made",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:vote_record_report_after_meeting",
    "desc": "股東會後，應將行使表決權之書面紀錄提報董事會",
    "expr": [
      "EQ",
      "vote_record_report_after_meeting",
      [
        "EQ",
        "vote_record_report_submitted",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:no_proxy_solicitor",
    "desc": "不得擔任被投資公司之委託書徵求人或委託他人擔任委託書徵求人",
    "expr": [
      "EQ",
      "no_proxy_solicitor",
      [
        "AND",
        [
          "EQ",
          "not_proxy_solicitor_self",
          true
        ],
        [
          "EQ",
          "not_proxy_solicitor_others",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_established",
    "desc": "建立內部控制及稽核制度",
    "expr": [
      "EQ",
      "internal_control_established",
      [
        "EQ",
        "internal_control_system_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_established",
    "desc": "建立內部處理制度及程序",
    "expr": [
      "EQ",
      "internal_handling_established",
      [
        "EQ",
        "internal_handling_system_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_executed",
    "desc": "內部控制及稽核制度確實執行",
    "expr": [
      "EQ",
      "internal_control_executed",
      [
        "EQ",
        "internal_control_system_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_executed",
    "desc": "內部處理制度及程序確實執行",
    "expr": [
      "EQ",
      "internal_handling_executed",
      [
        "EQ",
        "internal_handling_system_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_and_handling_ok",
    "desc": "內部控制及稽核制度與內部處理制度及程序均建立且執行",
    "expr": [
      "EQ",
      "internal_control_and_handling_ok",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ],
        [
          "EQ",
          "internal_handling_established",
          true
        ],
        [
          "EQ",
          "internal_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_of_regulations",
    "desc": "違反相關規定",
