            "EQ",
            "internal_control_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_operation_ok",
            true
          ]
        ],
        [
