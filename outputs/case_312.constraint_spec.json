  {
    "id": "insurance:product_may_be_rejected_or_sales_stopped",
    "desc": "保險商品有重大錯誤或違規情形主管機關得退回或停止銷售",
    "expr": [
      "EQ",
      "product_may_be_rejected_or_sales_stopped",
      [
        "OR",
        [
          "EQ",
          "product_content_major_violation",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "signed_by_authorized_person",
            true
          ]
        ],
        [
          "EQ",
          "product_content_major_error_or_omission",
          true
        ],
        [
          "EQ",
          "submission_data_false",
          true
        ],
        [
          "EQ",
          "authorized_person_false_or_major_error_statement",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "required_procedures_followed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "submission_method_compliant",
            true
          ]
        ],
        [
          "EQ",
          "required_documents_missing_or_not_corrected_in_time",
          true
        ],
        [
          "EQ",
          "serious_violation_of_specified_articles",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "corrections_completed_within_65_working_days",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "corrections_completed_within_35_working_days",
            true
          ]
        ],
        [
          "EQ",
          "rejected_three_times_cumulative",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
