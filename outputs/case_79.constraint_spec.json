[
  {
    "id": "insurance:internal_control_compliance",
    "desc": "建立且確實執行內部控制、稽核制度及招攬處理制度與程序",
    "expr": [
      "EQ",
      "internal_control_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ],
        [
          "EQ",
          "audit_system_established",
          true
        ],
        [
          "EQ",
          "audit_system_executed",
          true
        ],
        [
          "EQ",
          "solicitation_handling_established",
          true
        ],
        [
          "EQ",
          "solicitation_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_approval",
    "desc": "內部控制、稽核制度與招攬處理制度及程序經董（理）事會通過",
    "expr": [
      "EQ",
      "internal_control_approval",
      [
        "EQ",
        "board_of_directors_approved",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:audit_committee_approval",
    "desc": "設置審計委員會者，內部控制、稽核制度與招攬處理制度及程序經審計委員會同意",
    "expr": [
      "EQ",
      "audit_committee_approval",
      [
        "IMPLIES",
        [
          "EQ",
          "audit_committee_established",
          true
        ],
        [
          "OR",
          [
            "GE",
            "audit_committee_approval_votes",
            [
              "MUL",
              [
                "DIV",
                "audit_committee_total_members",
                2
              ],
              1
            ]
          ],
          [
            "GE",
            "board_of_directors_votes",
            [
              "MUL",
              [
                "DIV",
                "board_of_directors_total",
                3
              ],
              2
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_compliance_full",
    "desc": "內部控制制度完整且經適當程序通過",
    "expr": [
      "EQ",
      "internal_control_compliance_full",
      [
        "AND",
        [
          "EQ",
          "internal_control_compliance",
          true
        ],
        [
          "EQ",
          "internal_control_approval",
          true
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "audit_committee_established",
            true
          ],
          [
            "EQ",
            "audit_committee_approval",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_consumer_protection_violation",
