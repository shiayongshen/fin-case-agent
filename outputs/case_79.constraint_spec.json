        ],
        [
          "EQ",
          "violate_disclosure_rules",
          true
        ],
        [
          "EQ",
          "violate_compensation_system_rules",
          true
        ],
        [
          "EQ",
          "assist_formal_appearance_violation",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "finance"
  },
  {
