  {
    "id": "insurance_broker:capital_adjustment_deadline_met",
    "desc": "經紀人公司於規定期限內完成資本額調整",
    "expr": [
      "EQ",
      "capital_adjustment_deadline_met",
      [
        "OR",
        [
          "GE",
          "capital_adjustment_date",
          20180624
        ],
        [
          "LT",
          "license_issue_date",
          20140624
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance_broker"
  },
  {
    "id": "insurance_broker:capital_adjustment_after_transfer_met",
    "desc": "經紀人公司股權或資本總額移轉達50%以上後六個月內完成資本額調整（繼承除外）",
    "expr": [
      "EQ",
      "capital_adjustment_after_transfer_met",
      [
        "OR",
        [
          "NOT",
          [
            "GE",
            "share_or_capital_transfer_ratio",
            50
          ]
        ],
        [
          "AND",
          [
            "GE",
            "share_or_capital_transfer_ratio",
            50
          ],
          [
            "EQ",
            "capital_adjustment_within_6_months",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "transfer_due_to_inheritance",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance_broker"
  },
  {
    "id": "insurance_broker:capital_paid_in_cash",
    "desc": "經紀人公司發起人及股東出資以現金為限",
    "expr": [
      "EQ",
      "capital_paid_in_cash",
      [
        "EQ",
        "capital_paid_in_cash_flag",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance_broker"
  },
  {
