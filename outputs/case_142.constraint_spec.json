  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反資本額規定或未依規定完成資本調整或出資非現金時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "LT",
          "paid_in_capital",
          "capital_requirement"
        ],
        [
          "NOT",
          [
            "EQ",
            "capital_adjustment_deadline_met",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "capital_adjustment_after_transfer_met",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "capital_paid_in_cash",
            true
          ]
        ],
        [
          "LT",
          "agent_paid_in_capital",
          "agent_capital_requirement"
        ],
        [
          "NOT",
          [
            "EQ",
            "agent_capital_adjustment_deadline_met",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "agent_capital_adjustment_after_transfer_met",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "agent_capital_paid_in_cash",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
