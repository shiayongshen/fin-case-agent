[
  {
    "id": "aml:customer_identification_procedure",
    "desc": "金融機構及指定非金融事業應以風險為基礎執行確認客戶身分程序並審查實質受益人",
    "expr": [
      "EQ",
      "customer_identification_procedure",
      [
        "AND",
        [
          "EQ",
          "risk_based_approach_applied",
          true
        ],
        [
          "EQ",
          "beneficial_owner_reviewed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:customer_identification_data_retention",
    "desc": "確認客戶身分資料應保存至少五年，除法律另有較長保存期間",
    "expr": [
      "EQ",
      "customer_identification_data_retention",
      [
        "OR",
        [
          "GE",
          "data_retention_years",
          5.0
        ],
        [
          "GE",
          "legal_minimum_retention_years",
          5.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:enhanced_customer_due_diligence_for_politically_exposed_persons",
    "desc": "對重要政治性職務人士及其家庭成員及密切關係人應以風險為基礎執行加強客戶審查程序",
    "expr": [
      "EQ",
      "enhanced_due_diligence_pep",
      [
        "IMPLIES",
        [
          "EQ",
          "customer_is_pep_or_related",
          true
        ],
        [
          "EQ",
          "enhanced_due_diligence_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:reliance_on_third_party_requirements",
    "desc": "依賴第三方執行確認客戶身分時應符合規定並負最終責任",
    "expr": [
      "EQ",
      "third_party_reliance_compliant",
      [
        "AND",
        [
          "EQ",
          "immediate_access_to_info",
          true
        ],
        [
          "EQ",
          "third_party_provides_info_without_delay",
          true
        ],
        [
          "EQ",
          "third_party_regulated_and_monitored",
          true
        ],
        [
          "EQ",
          "third_party_aml_standards_consistent",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:ongoing_customer_due_diligence",
    "desc": "金融機構應依重要性及風險程度持續審查客戶身分資料及交易",
    "expr": [
      "EQ",
      "ongoing_customer_due_diligence",
      [
        "AND",
        [
          "EQ",
          "periodic_review_based_on_risk",
          true
        ],
        [
          "EQ",
          "transaction_monitoring_and_funds_source_understood",
          true
        ],
        [
          "EQ",
          "information_updated_regularly",
          true
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "suspicious_or_significant_change_detected",
            true
          ],
          [
            "EQ",
            "customer_reverification_performed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:enhanced_measures_for_high_risk",
    "desc": "高風險客戶應採取第六條第一項第一款各目之強化確認客戶身分措施",
    "expr": [
      "EQ",
      "enhanced_measures_high_risk",
      [
        "IMPLIES",
        [
          "EQ",
          "customer_high_risk",
          true
        ],
        [
          "AND",
          [
            "EQ",
            "senior_management_approval_obtained",
            true
          ],
          [
            "EQ",
            "reasonable_measures_to_understand_wealth_and_funds_source",
            true
          ],
          [
            "EQ",
            "enhanced_ongoing_monitoring",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:exclusion_for_specific_pep_categories",
    "desc": "特定實質受益人或高階管理人員為重要政治性職務人士時不適用加強審查規定",
    "expr": [
      "EQ",
      "pep_exclusion_applied",
      [
        "IMPLIES",
        [
          "EQ",
          "customer_or_beneficial_owner_in_exclusion_list",
          true
        ],
        [
          "EQ",
          "enhanced_due_diligence_executed",
          false
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:insurance_consideration_for_beneficiaries",
    "desc": "保險業應將人壽保險契約受益人納入強化確認客戶身分措施考量",
    "expr": [
      "EQ",
      "insurance_beneficiary_risk_considered",
      [
        "IMPLIES",
        [
          "EQ",
          "beneficiary_is_high_risk",
          true
        ],
        [
          "EQ",
          "enhanced_due_diligence_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:insurance_high_risk_beneficiary_measures",
    "desc": "對高風險人壽保險受益人採取合理措施辨識及驗證實質受益人身分",
    "expr": [
      "EQ",
      "insurance_high_risk_beneficiary_measures",
      [
        "AND",
        [
          "EQ",
          "reasonable_measures_to_identify_beneficial_owner",
          true
        ],
        [
          "EQ",
          "verification_of_beneficial_owner_identity",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:insurance_high_risk_beneficiary_notification",
    "desc": "發現高風險情形應通知高階管理人員並強化審查",
    "expr": [
      "EQ",
      "insurance_high_risk_beneficiary_notification",
      [
        "IMPLIES",
        [
          "EQ",
          "high_risk_beneficiary_detected",
          true
        ],
        [
          "AND",
          [
            "EQ",
            "senior_management_notified",
            true
          ],
          [
            "EQ",
            "enhanced_overall_business_relationship_review",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "bank:internal_control_established_and_executed",
    "desc": "銀行建立內部控制及稽核制度且確實執行",
    "expr": [
      "EQ",
      "internal_control_ok",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_handling_established_and_executed",
    "desc": "銀行建立內部處理制度及程序且確實執行",
    "expr": [
      "EQ",
      "internal_handling_ok",
      [
        "AND",
        [
          "EQ",
          "internal_handling_established",
          true
        ],
        [
          "EQ",
          "internal_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_operation_established_and_executed",
    "desc": "銀行建立內部作業制度及程序且確實執行",
    "expr": [
      "EQ",
      "internal_operation_ok",
      [
        "AND",
        [
          "EQ",
          "internal_operation_established",
          true
        ],
        [
          "EQ",
          "internal_operation_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反洗錢防制法及銀行法相關規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "customer_identification_procedure",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "customer_identification_data_retention",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "enhanced_due_diligence_pep",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "third_party_reliance_compliant",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "ongoing_customer_due_diligence",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "enhanced_measures_high_risk",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_operation_ok",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]