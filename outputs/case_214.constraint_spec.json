  {
    "id": "bank:shareholder_exceeds_5_to_15_percent_pre_2008_reported",
    "desc": "修正施行前持股超過5%未超過15%者於6個月內申報",
    "expr": [
      "EQ",
      "shareholder_exceeds_5_to_15_percent_pre_2008_reported",
      [
        "AND",
        [
          "GE",
          "voting_shares_percent_pre_2008",
          5.0
        ],
        [
          "LE",
          "voting_shares_percent_pre_2008",
          15.0
        ],
        [
          "EQ",
          "reported_within_6_months_after_revision",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:shareholder_exceeds_10_percent_pre_2008_approved",
    "desc": "修正施行前持股超過10%者第一次擬增加持股應事先申請核准",
    "expr": [
      "EQ",
      "shareholder_exceeds_10_percent_pre_2008_approved",
      [
        "IMPLIES",
        [
          "GT",
          "voting_shares_percent_pre_2008",
          10.0
        ],
        [
          "EQ",
          "first_increase_approved_before_acquisition",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:shareholder_exceeds_5_percent_reported_or_pre_2008_compliant",
    "desc": "持股超過5%已申報或符合修正施行前申報規定",
    "expr": [
      "EQ",
      "shareholder_exceeds_5_percent_reported_or_pre_2008_compliant",
      [
        "OR",
        [
          "EQ",
          "shareholder_exceeds_5_percent_reported",
          true
        ],
        [
          "EQ",
          "shareholder_exceeds_5_to_15_percent_pre_2008_reported",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:shareholder_approval_compliance",
    "desc": "擬持有超過10%、25%、50%股份均已事先申請核准",
    "expr": [
      "EQ",
      "shareholder_approval_compliance",
      [
        "AND",
        [
          "IMPLIES",
          [
            "EQ",
            "shareholder_exceeds_10_percent",
            true
          ],
          [
            "EQ",
            "shareholder_exceeds_10_percent_approved",
            true
          ]
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "shareholder_exceeds_25_percent",
            true
          ],
          [
            "EQ",
            "shareholder_exceeds_25_percent_approved",
            true
          ]
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "shareholder_exceeds_50_percent",
            true
          ],
          [
            "EQ",
            "shareholder_exceeds_50_percent_approved",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:shareholder_compliance",
    "desc": "持股申報及核准均符合規定",
    "expr": [
      "EQ",
      "shareholder_compliance",
      [
        "AND",
        [
          "EQ",
          "shareholder_exceeds_5_percent_reported_or_pre_2008_compliant",
          true
        ],
        [
          "EQ",
          "shareholder_approval_compliance",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:shareholder_exceeds_1_percent_notify_bank",
