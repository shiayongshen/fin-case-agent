    "expr": [
      "EQ",
      "trust_investment_company_violate",
      [
        "EQ",
        "violate_article_108",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:foreign_bank_responsible_violate",
    "desc": "外國銀行負責人或職員違反規定參與決定",
    "expr": [
      "EQ",
      "foreign_bank_responsible_violate",
      [
        "EQ",
        "violate_article_123_108",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:shareholder_penalty",
    "desc": "銀行股東持股違反申報或核准規定處罰",
    "expr": [
      "EQ",
      "shareholder_penalty",
      [
        "NOT",
        [
          "EQ",
          "shareholder_compliance",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:financial_info_service_violate",
    "desc": "金融資訊服務事業違反檢查、提報、停止業務或洩漏資料規定",
    "expr": [
      "EQ",
      "financial_info_service_violate",
      [
        "OR",
        [
          "EQ",
          "refuse_inspection",
          true
        ],
        [
          "EQ",
          "conceal_or_destroy_data",
          true
        ],
        [
          "EQ",
          "no_reasonable_response",
          true
        ],
        [
          "EQ",
          "false_or_late_report",
          true
        ],
        [
          "EQ",
          "unauthorized_stop_business",
          true
        ],
        [
          "EQ",
          "unauthorized_disclosure",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:unauthorized_financial_info_service_operation",
    "desc": "金融資訊服務事業未經主管機關許可擅自營業",
    "expr": [
      "EQ",
      "unauthorized_financial_info_service_operation",
      [
        "EQ",
        "unauthorized_operation",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反申報、核准、董事監察人申報義務、信託投資公司規定、金融資訊服務事業規定或擅自營業時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "shareholder_compliance",
            true
          ]
        ],
        [
          "EQ",
          "director_or_supervisor_fail_report",
          true
        ],
        [
          "EQ",
          "trust_investment_company_violate",
          true
        ],
        [
          "EQ",
          "foreign_bank_responsible_violate",
          true
        ],
        [
          "EQ",
          "financial_info_service_violate",
          true
        ],
        [
          "EQ",
          "unauthorized_financial_info_service_operation",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
