  {
    "id": "bank:shareholder_exceeds_5_percent_cumulative_change",
    "desc": "持股超過5%後累積增減逾1個百分點",
    "expr": [
      "EQ",
      "shareholder_exceeds_5_percent_cumulative_change",
      [
        "AND",
        [
          "GT",
          "voting_shares_percent",
          5.0
        ],
        [
          "GT",
          "cumulative_change_percent",
          1.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:shareholder_exceeds_5_percent_reported",
    "desc": "同一人或同一關係人持有超過5%股份已於10日內申報",
    "expr": [
      "EQ",
      "shareholder_exceeds_5_percent_reported",
      [
        "AND",
        [
          "EQ",
          "shareholder_exceeds_5_percent",
          true
        ],
        [
          "EQ",
          "reported_within_10_days",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:shareholder_cumulative_change_reported",
    "desc": "持股超過5%後累積增減逾1%已於10日內申報",
    "expr": [
      "EQ",
      "shareholder_cumulative_change_reported",
      [
        "AND",
        [
          "EQ",
          "shareholder_exceeds_5_percent_cumulative_change",
          true
        ],
        [
          "EQ",
          "reported_within_10_days",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
