[
  {
    "id": "insurance:capital_level",
    "desc": "保險業資本等級分類（1=資本適足, 2=資本不足, 3=資本顯著不足, 4=資本嚴重不足）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:level_4_measures_completed",
    "desc": "資本嚴重不足等級增資或改善計畫完成",
    "expr": [
      "EQ",
      "level_4_measures_completed",
      [
        "AND",
        [
          "EQ",
          "capital_level",
          4
        ],
        [
          "OR",
          [
            "EQ",
            "capital_increase_completed",
            true
          ],
          [
            "EQ",
            "financial_improvement_plan_completed",
            true
          ],
          [
            "EQ",
            "business_improvement_plan_completed",
            true
          ],
          [
            "EQ",
            "merger_completed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:level_4_penalty_due",
    "desc": "資本嚴重不足且未於期限完成增資或改善計畫",
    "expr": [
      "EQ",
      "level_4_penalty_due",
      [
        "AND",
        [
          "EQ",
          "capital_level",
          4
        ],
        [
          "NOT",
          [
            "EQ",
            "level_4_measures_completed",
            true
          ]
        ],
        [
          "EQ",
          "deadline_passed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_or_business_deterioration",
    "desc": "財務或業務狀況顯著惡化且不能支付債務或履行契約",
    "expr": [
      "EQ",
      "financial_or_business_deterioration",
      [
        "OR",
        [
          "EQ",
          "cannot_pay_debt",
          true
        ],
        [
          "EQ",
          "cannot_fulfill_contract",
          true
        ],
        [
          "EQ",
          "risk_to_insured_rights",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_submitted_and_approved",
    "desc": "已提出並經主管機關核定財務或業務改善計畫",
    "expr": [
      "EQ",
      "improvement_plan_submitted_and_approved",
      [
        "AND",
        [
          "EQ",
          "improvement_plan_submitted",
          true
        ],
        [
          "EQ",
          "improvement_plan_approved",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:accelerated_deterioration_and_no_improvement",
    "desc": "損益淨值加速惡化且經輔導仍未改善",
    "expr": [
      "EQ",
      "accelerated_deterioration_and_no_improvement",
      [
        "AND",
        [
          "EQ",
          "accelerated_loss_and_net_worth_deterioration",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "improvement_after_guidance",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:supervisory_measures_applicable",
    "desc": "主管機關得依情節輕重採取監管、接管、勒令停業清理或命令解散處分",
    "expr": [
      "EQ",
      "supervisory_measures_applicable",
      [
        "OR",
        [
          "EQ",
          "level_4_penalty_due",
          true
        ],
        [
          "AND",
          [
            "NOT",
            [
              "EQ",
              "level_4_penalty_due",
              true
            ]
          ],
          [
            "EQ",
            "financial_or_business_deterioration",
            true
          ],
          [
            "EQ",
            "improvement_plan_submitted_and_approved",
            true
          ],
          [
            "EQ",
            "accelerated_deterioration_and_no_improvement",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_and_audit_ok",
    "desc": "建立並執行內部控制及稽核制度",
    "expr": [
      "EQ",
      "internal_control_and_audit_ok",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_ok",
    "desc": "建立並執行內部處理制度及程序",
    "expr": [
      "EQ",
      "internal_handling_ok",
      [
        "AND",
        [
          "EQ",
          "internal_handling_established",
          true
        ],
        [
          "EQ",
          "internal_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：資本嚴重不足且未於期限完成增資或改善計畫，或違反內部控制及處理制度規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "level_4_penalty_due",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_and_audit_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_ok",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]