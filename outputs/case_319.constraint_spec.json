[
  {
    "id": "insurance:license_and_guarantee_compliance",
    "desc": "保險代理人、經紀人、公證人須經主管機關許可，繳存保證金並投保相關保險，且領有執業證照後始得經營或執行業務",
    "expr": [
      "EQ",
      "license_and_guarantee_compliance",
      [
        "AND",
        [
          "EQ",
          "approved_by_authority",
          true
        ],
        [
          "GE",
          "guarantee_deposit_amount",
          "minimum_guarantee_deposit"
        ],
        [
          "EQ",
          "relevant_insurance_subscribed",
          true
        ],
        [
          "EQ",
          "license_issued",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:relevant_insurance_type_compliance",
    "desc": "保險代理人、公證人須投保責任保險；保險經紀人須投保責任保險及保證保險",
    "expr": [
      "EQ",
      "relevant_insurance_type_compliance",
      [
        "AND",
        [
          "OR",
          [
            "AND",
            [
              "EQ",
              "agent_or_notary",
              true
            ],
            [
              "EQ",
              "liability_insurance_subscribed",
              true
            ]
          ],
          [
            "AND",
            [
              "EQ",
              "insurance_broker",
              true
            ],
            [
              "EQ",
              "liability_insurance_subscribed",
              true
            ],
            [
              "EQ",
              "guarantee_insurance_subscribed",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:minimum_guarantee_deposit_defined",
    "desc": "主管機關依經營業務範圍及規模定最低保證金及實施方式",
    "expr": [
      "EQ",
      "minimum_guarantee_deposit_defined",
      [
        "EQ",
        "authority_defined_minimum_guarantee_deposit",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:management_rules_defined",
    "desc": "主管機關定保險代理人、經紀人、公證人資格取得、申請許可條件、程序及其他管理規則",
    "expr": [
      "EQ",
      "management_rules_defined",
      [
        "EQ",
        "authority_defined_management_rules",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:bank_permission_and_separate_application",
    "desc": "銀行經主管機關許可擇一兼營保險代理人或保險經紀人業務，並分別準用相關規定",
    "expr": [
      "EQ",
      "bank_permission_and_separate_application",
      [
        "AND",
        [
          "EQ",
          "bank_approved_by_authority",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "bank_operate_as_agent",
            true
          ],
          [
            "EQ",
            "bank_operate_as_broker",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_duty_of_care_and_fidelity",
    "desc": "保險經紀人應以善良管理人注意義務洽訂保險契約並負忠實義務",
    "expr": [
      "EQ",
      "broker_duty_of_care_and_fidelity",
      [
        "AND",
        [
          "EQ",
          "broker_exercise_duty_of_care",
          true
        ],
        [
          "EQ",
          "broker_fulfill_fidelity_obligation",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_provide_written_analysis_report",
    "desc": "保險經紀人於主管機關指定範圍內洽訂保險契約前，應主動提供書面分析報告",
    "expr": [
      "EQ",
      "broker_provide_written_analysis_report",
      [
        "IMPLIES",
        [
          "EQ",
          "broker_within_authority_scope",
          true
        ],
        [
          "EQ",
          "written_analysis_report_provided",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_disclose_fee_standard",
    "desc": "保險經紀人向要保人或被保險人收取報酬者，應明確告知報酬收取標準",
    "expr": [
      "EQ",
      "broker_disclose_fee_standard",
      [
        "IMPLIES",
        [
          "EQ",
          "broker_charge_fee",
          true
        ],
        [
          "EQ",
          "fee_standard_disclosed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_financial_or_business_management_rules",
    "desc": "違反保險法第163條第四項管理規則中財務或業務管理規定，或第163條第七項規定，或第165條第一項或第163條第五項準用規定",
    "expr": [
      "EQ",
      "violation_financial_or_business_management_rules",
      [
        "OR",
        [
          "EQ",
          "violate_financial_management_rules",
          true
        ],
        [
          "EQ",
          "violate_business_management_rules",
          true
        ],
        [
          "EQ",
          "violate_163_7th_paragraph",
          true
        ],
        [
          "EQ",
          "violate_165_1st_paragraph",
          true
        ],
        [
          "EQ",
          "violate_163_5th_paragraph_applied",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_penalty",
    "desc": "違反上述規定者應限期改正或處罰鍰，情節重大者廢止許可並註銷執業證照",
    "expr": [
      "EQ",
      "violation_penalty",
      [
        "EQ",
        "violation_financial_or_business_management_rules",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_company_report_and_registration_compliance",
    "desc": "經紀人公司停業、復業、解散等應依規定申請核准並辦理登記",
    "expr": [
      "EQ",
      "broker_company_report_and_registration_compliance",
      [
        "AND",
        [
          "OR",
          [
            "EQ",
            "broker_company_apply_suspend",
            true
          ],
          [
            "EQ",
            "broker_company_apply_resume",
            true
          ],
          [
            "EQ",
            "broker_company_apply_dissolve",
            true
          ]
        ],
        [
          "EQ",
          "report_and_registration_done",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_company_suspend_period_limit",
    "desc": "經紀人公司停業期間以一年為限，得申請一次展延，並應於屆滿前十五日提出",
    "expr": [
      "EQ",
      "broker_company_suspend_period_limit",
      [
        "AND",
        [
          "LE",
          "broker_company_suspend_duration_months",
          12
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "broker_company_apply_extension",
            true
          ],
          [
            "EQ",
            "broker_company_extension_count",
            1
          ]
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "broker_company_suspend_period_expiring_soon",
            true
          ],
          [
            "EQ",
            "extension_application_submitted",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_company_revoke_if_no_resume_and_no_broker",
    "desc": "經紀人公司未於停業期間屆滿申請復業並依規定任用經紀人者，主管機關廢止許可並註銷執業證照",
    "expr": [
      "EQ",
      "broker_company_revoke_if_no_resume_and_no_broker",
      [
        "AND",
        [
          "EQ",
          "broker_company_suspend_period_expired",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_company_apply_resume",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_company_employ_broker_as_required",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_company_cancel_broker_license_on_suspend_or_dissolve",
    "desc": "經紀人公司申請停業或解散，應繳銷所任用經紀人及公司執業證照",
    "expr": [
      "EQ",
      "broker_company_cancel_broker_license_on_suspend_or_dissolve",
      [
        "AND",
        [
          "OR",
          [
            "EQ",
            "broker_company_apply_suspend",
            true
          ],
          [
            "EQ",
            "broker_company_apply_dissolve",
            true
          ]
        ],
        [
          "EQ",
          "broker_and_company_license_cancelled",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_cancel_registration_if_company_suspend_dissolve_or_license_revoked",
    "desc": "經紀人公司停業、解散或主管機關註銷執業證照，未辦理繳銷經紀人執業證照者，經紀人應於三十日內委由公會辦理註銷登記",
    "expr": [
      "EQ",
      "broker_cancel_registration_if_company_suspend_dissolve_or_license_revoked",
      [
        "AND",
        [
          "OR",
          [
            "EQ",
            "broker_company_suspend",
            true
          ],
          [
            "EQ",
            "broker_company_dissolve",
            true
          ],
          [
            "EQ",
            "broker_company_license_revoked",
            true
          ]
        ],
        [
          "EQ",
          "broker_license_cancelled_within_30_days",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_company_report_to_authority_on_stop_business",
    "desc": "同時經營保險經紀及再保險經紀業務之經紀人公司停止其中一業務，應於一個月內報主管機關備查",
    "expr": [
      "EQ",
      "broker_company_report_to_authority_on_stop_business",
      [
        "IMPLIES",
        [
          "EQ",
          "broker_company_operate_both_insurance_and_reinsurance",
          true
        ],
        [
          "AND",
          [
            "OR",
            [
              "EQ",
              "broker_company_stop_insurance_brokerage",
              true
            ],
            [
              "EQ",
              "broker_company_stop_reinsurance_brokerage",
              true
            ]
          ],
          [
            "EQ",
            "report_to_authority_within_1_month",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_fee_collection_and_payment_compliance",
    "desc": "個人執業經紀人、經紀人公司及銀行受要保人委託代收轉付保險費應直接總額解繳保險業，非本人票據須有聲明書",
    "expr": [
      "EQ",
      "broker_fee_collection_and_payment_compliance",
      [
        "AND",
        [
          "IMPLIES",
          [
            "EQ",
            "collect_and_pay_insurance_fee",
            true
          ],
          [
            "EQ",
            "direct_total_payment_to_insurer",
            true
          ]
        ],
        [
          "IMPLIES",
          [
            "NOT",
            [
              "EQ",
              "payer_is_insured_or_beneficiary",
              true
            ]
          ],
          [
            "EQ",
            "payer_statement_provided",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_bookkeeping_and_reporting_compliance",
    "desc": "個人執業經紀人、經紀人公司及銀行應專設帳簿並於指定期間彙報主管機關，並接受檢查及改善",
    "expr": [
      "EQ",
      "broker_bookkeeping_and_reporting_compliance",
      [
        "AND",
        [
          "EQ",
          "special_account_books_maintained",
          true
        ],
        [
          "EQ",
          "annual_financial_reports_submitted",
          true
        ],
        [
          "EQ",
          "authority_or_designated_agency_inspection",
          true
        ],
        [
          "EQ",
          "improvement_follow_up_reported",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:prohibited_behaviors",
    "desc": "個人執業經紀人、經紀人公司、銀行及受任用經紀人不得有多項違法或不當行為",
    "expr": [
      "EQ",
      "prohibited_behaviors",
      [
        "NOT",
        [
          "OR",
          [
            "EQ",
            "false_declaration_on_license_application",
            true
          ],
          [
            "EQ",
            "contract_with_unapproved_insurer",
            true
          ],
          [
            "EQ",
            "conceal_important_contract_info",
            true
          ],
          [
            "EQ",
            "coerce_or_induce_or_limit_contract_freedom",
            true
          ],
          [
            "EQ",
            "misleading_promotion_or_recruitment",
            true
          ],
          [
            "EQ",
            "improper_inducement_to_cancel_or_transfer",
            true
          ],
          [
            "EQ",
            "misappropriate_insurance_or_reinsurance_funds",
            true
          ],
          [
            "EQ",
            "permit_others_to_use_license",
            true
          ],
          [
            "EQ",
            "criminal_conviction_for_fraud_or_breach_of_trust",
            true
          ],
          [
            "EQ",
            "operate_outside_license_scope",
            true
          ],
          [
            "EQ",
            "charge_unlawful_fees_or_commissions",
            true
          ],
          [
            "EQ",
            "unlawful_insurance_claims",
            true
          ],
          [
            "EQ",
            "spread_false_information_disturb_financial_order",
            true
          ],
          [
            "EQ",
            "authorize_others_to_operate_or_use_others_name",
            true
          ],
          [
            "EQ",
            "transfer_application_documents_without_consent",
            true
          ],
          [
            "EQ",
            "employ_unqualified_insurance_solicitors",
            true
          ],
          [
            "EQ",
            "fail_to_cancel_license_within_legal_period",
            true
          ],
          [
            "EQ",
            "unauthorized_suspend_resume_dissolve_or_terminate_business",
            true
          ],
          [
            "EQ",
            "fail_to_employ_broker_after_broker_resignation",
            true
          ],
          [
            "EQ",
            "fail_to_report_to_broker_association",
            true
          ],
          [
            "EQ",
            "use_unapproved_advertisement_content",
            true
          ],
          [
            "EQ",
            "pay_commission_to_non_actual_solicitor",
            true
          ],
          [
            "EQ",
            "fail_to_confirm_consumer_suitability",
            true
          ],
          [
            "EQ",
            "sell_unapproved_foreign_policy_discount_products",
            true
          ],
          [
            "EQ",
            "submit_false_or_incomplete_business_or_financial_reports",
            true
          ],
          [
            "EQ",
            "hold_positions_in_insurance_or_association_conflict",
            true
          ],
          [
            "EQ",
            "induce_clients_to_cancel_or_terminate_contracts",
            true
          ],
          [
            "EQ",
            "fail_to_fill_solicitation_report_truthfully",
            true
          ],
          [
            "EQ",
            "other_violations_of_rules_or_laws",
            true
          ],
          [
            "EQ",
            "other_behaviors_damaging_insurance_image",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反許可、保證金、保險投保、管理規則、經紀人公司規定或有禁止行為時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "license_and_guarantee_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "relevant_insurance_type_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "management_rules_defined",
            true
          ]
        ],
        [
          "EQ",
          "violation_penalty",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_company_report_and_registration_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_company_suspend_period_limit",
            true
          ]
        ],
        [
          "EQ",
          "broker_company_revoke_if_no_resume_and_no_broker",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_company_cancel_broker_license_on_suspend_or_dissolve",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_cancel_registration_if_company_suspend_dissolve_or_license_revoked",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_company_report_to_authority_on_stop_business",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_fee_collection_and_payment_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_bookkeeping_and_reporting_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "prohibited_behaviors",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]