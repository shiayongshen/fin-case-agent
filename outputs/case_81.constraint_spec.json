[
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            [
              "DIV",
              "own_capital",
              "risk_capital"
            ],
            0.5
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            [
              "DIV",
              "own_capital",
              "risk_capital"
            ],
            0.5
          ],
          [
            "LT",
            [
              "DIV",
              "own_capital",
              "risk_capital"
            ],
            1.5
          ],
          [
            "GE",
            "net_worth_ratio_prev1",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio_prev1",
            2.0
          ],
          [
            "GE",
            "net_worth_ratio_prev2",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio_prev2",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            [
              "DIV",
              "own_capital",
              "risk_capital"
            ],
            1.5
          ],
          [
            "LT",
            [
              "DIV",
              "own_capital",
              "risk_capital"
            ],
            2.0
          ]
        ],
        2,
        [
          "GE",
          [
            "DIV",
            "own_capital",
            "risk_capital"
          ],
          2.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_consistency",
    "desc": "資本等級以較低等級為準（就低不就高原則）",
    "expr": [
      "EQ",
      "capital_level_consistent",
      [
        "OR",
        [
          "EQ",
          "capital_level",
          4
        ],
        [
          "EQ",
          "capital_level",
          3
        ],
        [
          "EQ",
          "capital_level",
          2
        ],
        [
          "EQ",
          "capital_level",
          1
        ],
        [
          "EQ",
          "capital_level",
          0
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:act_144_compliance",
    "desc": "符合保險法第144條精算人員聘用及簽證規定",
    "expr": [
      "EQ",
      "act_144_compliance",
      [
        "AND",
        [
          "EQ",
          "actuary_employed",
          true
        ],
        [
          "EQ",
          "signing_actuary_assigned",
          true
        ],
        [
          "EQ",
          "external_review_actuary_hired",
          true
        ],
        [
          "EQ",
          "board_approval_for_actuary",
          true
        ],
        [
          "EQ",
          "board_approval_for_external_review",
          true
        ],
        [
          "EQ",
          "actuary_reports_fair_and_true",
          true
        ],
        [
          "EQ",
          "external_review_reports_fair_and_true",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:act_148_3_compliance",
    "desc": "符合保險法第148-3條內部控制及內部處理制度規定",
    "expr": [
      "EQ",
      "act_148_3_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ],
        [
          "EQ",
          "internal_handling_established",
          true
        ],
        [
          "EQ",
          "internal_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:act_171_compliance",
    "desc": "符合保險法第171條關於第144條及精算人員規定",
    "expr": [
      "EQ",
      "act_171_compliance",
      [
        "AND",
        [
          "EQ",
          "act_144_compliance",
          true
        ],
        [
          "EQ",
          "actuary_and_external_review_compliance",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:actuary_and_external_review_compliance",
    "desc": "簽證精算人員及外部複核精算人員遵守第144條第五項規定",
    "expr": [
      "EQ",
      "actuary_and_external_review_compliance",
      [
        "AND",
        [
          "EQ",
          "actuary_fair_and_true",
          true
        ],
        [
          "EQ",
          "external_review_fair_and_true",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:act_171_1_compliance",
    "desc": "符合保險法第171-1條內部控制及內部處理制度罰鍰規定",
    "expr": [
      "EQ",
      "act_171_1_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ],
        [
          "EQ",
          "internal_handling_established",
          true
        ],
        [
          "EQ",
          "internal_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "insurance:penalty_conditions",
    "desc": "處罰條件：違反第144條精算人員聘用及簽證規定或未建立或執行內部控制及內部處理制度時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "act_144_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "act_148_3_compliance",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]