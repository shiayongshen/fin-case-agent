  {
    "id": "bank:internal_control_and_handling_and_operation_ok",
    "desc": "內部控制、內部處理及內部作業制度均建立且確實執行",
    "expr": [
      "EQ",
      "internal_systems_compliant",
      [
        "AND",
        [
          "AND",
          [
            "AND",
            [
              "EQ",
              "internal_control_established",
              true
            ],
            [
              "EQ",
              "internal_control_executed",
              true
            ]
          ],
          [
            "AND",
            [
              "EQ",
              "internal_handling_established",
              true
            ],
            [
              "EQ",
              "internal_handling_executed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "internal_operation_established",
            true
          ],
          [
            "EQ",
            "internal_operation_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：未依規定建立或執行內部控制、內部處理或內部作業制度時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_executed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_executed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_operation_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_operation_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
