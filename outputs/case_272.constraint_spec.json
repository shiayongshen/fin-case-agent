  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：未依規定建立或執行內部控制、處理、作業制度時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_operation_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_derivative_operation_compliance",
            true
          ]
