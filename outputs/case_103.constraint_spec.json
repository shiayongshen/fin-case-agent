[
  {
    "id": "insurance:real_estate_investment_compliance",
    "desc": "不動產投資符合即時利用且有收益，且投資總額及自用不動產限額符合規定",
    "expr": [
      "EQ",
      "real_estate_investment_compliance",
      [
        "AND",
        [
          "EQ",
          "real_estate_investment_legal_valuation",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "social_housing_only_rental",
            true
          ],
          [
            "AND",
            [
              "EQ",
              "real_estate_investment_immediate_use_and_income",
              true
            ],
            [
              "LE",
              "real_estate_investment_total_excluding_self_use",
              [
                "MUL",
                "capital_fund",
                30.0
              ]
            ],
            [
              "LE",
              "self_use_real_estate_total",
              "owner_equity_total"
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:foreign_real_estate_investment_compliance",
