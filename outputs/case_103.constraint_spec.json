    "expr": [
      "EQ",
      "foreign_real_estate_investment_compliance",
      [
        "AND",
        [
          "EQ",
          "foreign_real_estate_legal_use_and_benefit",
          true
        ],
        [
          "GE",
          "capital_to_risk_ratio_latest",
          "legal_standard"
        ],
        [
          "OR",
          [
            "AND",
            [
              "NOT",
              [
                "OR",
                [
                  "GE",
                  "capital_to_risk_ratio_latest",
                  1.25
                ],
                [
                  "GE",
                  "capital_to_risk_ratio_latest",
                  1.5
                ]
              ]
            ],
            [
              "LE",
              "foreign_real_estate_investment_total",
              [
                "MUL",
                "capital_fund",
                1.0
              ]
            ],
            [
              "LE",
              "foreign_real_estate_investment_total",
              [
                "MUL",
                "owner_equity_total",
                10.0
              ]
            ]
          ],
          [
            "AND",
            [
              "GE",
              "capital_to_risk_ratio_latest",
              1.25
            ],
            [
              "LT",
              "capital_to_risk_ratio_latest",
              1.5
            ],
            [
              "LE",
              "foreign_real_estate_investment_total",
              [
                "MUL",
                "capital_fund",
                2.5
              ]
            ],
            [
              "LE",
              "foreign_real_estate_investment_total",
              [
                "MUL",
                "owner_equity_total",
                40.0
              ]
            ]
          ],
          [
            "AND",
            [
              "GE",
              "capital_to_risk_ratio_latest",
              1.5
            ],
            [
              "LE",
              "foreign_real_estate_investment_total",
              [
                "MUL",
                "capital_fund",
                3.0
              ]
            ],
            [
              "LE",
              "foreign_real_estate_investment_total",
              [
                "MUL",
                "owner_equity_total",
                40.0
              ]
            ]
          ]
        ],
        [
          "GE",
          "foreign_real_estate_rental_rate",
          60.0
        ],
        [
          "EQ",
          "foreign_real_estate_meets_local_economic_return",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
