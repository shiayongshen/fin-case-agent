      "EQ",
      "investment_approval_timing_ok",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "invest_in_first_to_ninth_category",
            true
          ],
          [
            "LE",
            "business_days_since_application",
            15
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "invest_in_tenth_or_eleventh_category",
            true
          ],
          [
            "LE",
            "business_days_since_application",
            30
          ]
        ]
      ]
