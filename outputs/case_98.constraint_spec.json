[
  {
    "id": "insurance:licensed_and_bonded",
    "desc": "保險代理人、經紀人、公證人須經主管機關許可，繳存保證金並投保相關保險，領有執業證照後始得經營或執行業務",
    "expr": [
      "EQ",
      "licensed_and_bonded",
      [
        "AND",
        [
          "EQ",
          "license_obtained",
          true
        ],
        [
          "EQ",
          "bond_deposited",
          true
        ],
        [
          "EQ",
          "insurance_purchased",
          true
        ],
        [
          "EQ",
          "practice_certificate_held",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:insurance_type_for_agent_broker_notary",
    "desc": "保險代理人、公證人須投保責任保險；保險經紀人須投保責任保險及保證保險",
    "expr": [
      "EQ",
      "insurance_type_compliant",
      [
        "AND",
        [
          "IMPLIES",
          [
            "EQ",
            "is_agent_or_notary",
            true
          ],
          [
            "EQ",
            "liability_insurance_purchased",
            true
          ]
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "is_broker",
            true
          ],
          [
            "AND",
            [
              "EQ",
              "liability_insurance_purchased",
              true
            ],
            [
              "EQ",
              "guarantee_insurance_purchased",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:agent_broker_notary_must_comply_management_rules",
    "desc": "保險代理人、經紀人、公證人應遵守主管機關定之管理規則",
    "expr": [
      "EQ",
      "management_rules_complied",
      [
        "EQ",
        "management_rules_followed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_duty_of_care_and_fiduciary",
    "desc": "保險經紀人應以善良管理人注意義務為被保險人洽訂保險契約並負忠實義務",
    "expr": [
      "EQ",
      "broker_duty_of_care_and_fiduciary",
      [
        "AND",
        [
          "EQ",
          "duty_of_care_observed",
          true
        ],
        [
          "EQ",
          "fiduciary_duty_observed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_must_provide_written_report_and_disclose_fee",
    "desc": "保險經紀人洽訂保險契約前應主動提供書面分析報告，收取報酬者應明確告知報酬標準",
    "expr": [
      "EQ",
      "broker_report_and_fee_disclosed",
      [
        "AND",
        [
          "EQ",
          "written_report_provided",
          true
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "fee_charged",
            true
          ],
          [
            "EQ",
            "fee_standard_disclosed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_must_comply_financial_and_business_management_rules",
    "desc": "保險經紀人違反財務或業務管理規定應限期改正或處罰",
    "expr": [
      "EQ",
      "financial_and_business_management_compliant",
      [
        "EQ",
        "financial_and_business_management_followed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_must_comply_other_management_rules",
    "desc": "保險經紀人違反主管機關管理規則或相關法令應限期改正或處罰",
    "expr": [
      "EQ",
      "other_management_rules_compliant",
      [
        "EQ",
        "other_management_rules_followed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_must_not_commit_prohibited_acts",
    "desc": "保險經紀人不得有第49條所列禁止行為",
    "expr": [
      "EQ",
      "no_prohibited_acts",
      [
        "AND",
        [
          "EQ",
          "no_false_declaration_on_license_application",
          true
        ],
        [
          "EQ",
          "no_contract_with_unapproved_insurers",
          true
        ],
        [
          "EQ",
          "no_concealment_of_important_contract_info",
          true
        ],
        [
          "EQ",
          "no_coercion_or_illegal_inducement",
          true
        ],
        [
          "EQ",
          "no_false_or_misleading_promotion",
          true
        ],
        [
          "EQ",
          "no_improper_inducement_to_cancel_or_loan",
          true
        ],
        [
          "EQ",
          "no_misappropriation_of_funds",
          true
        ],
        [
          "EQ",
          "no_unauthorized_use_of_license",
          true
        ],
        [
          "EQ",
          "no_conviction_for_fraud_or_forgery",
          true
        ],
        [
          "EQ",
          "no_operation_outside_license_scope",
          true
        ],
        [
          "EQ",
          "no_illegal_commission_or_fee_collection",
          true
        ],
        [
          "EQ",
          "no_illegal_insurance_claims",
          true
        ],
        [
          "EQ",
          "no_spreading_false_information",
          true
        ],
        [
          "EQ",
          "no_unauthorized_delegation_or_nominee_operation",
          true
        ],
        [
          "EQ",
          "no_unauthorized_transfer_of_application_documents",
          true
        ],
        [
          "EQ",
          "no_employment_of_unqualified_recruiters",
          true
        ],
        [
          "EQ",
          "no_failure_to_cancel_license_in_time",
          true
        ],
        [
          "EQ",
          "no_unauthorized_suspension_or_termination_of_business",
          true
        ],
        [
          "EQ",
          "no_failure_to_reappoint_broker_after_resignation",
          true
        ],
        [
          "EQ",
          "no_failure_to_report_to_broker_association",
          true
        ],
        [
          "EQ",
          "no_unauthorized_advertisement_content",
          true
        ],
        [
          "EQ",
          "no_commission_payment_to_non_actual_recruiters",
          true
        ],
        [
          "EQ",
          "no_failure_to_confirm_suitability_for_seniors",
          true
        ],
        [
          "EQ",
          "no_sale_of_unapproved_foreign_policies",
          true
        ],
        [
          "EQ",
          "no_false_or_incomplete_business_or_financial_reports",
          true
        ],
        [
          "EQ",
          "no_conflict_of_interest_or_ineligible_positions",
          true
        ],
        [
          "EQ",
          "no_inducement_to_terminate_contracts_or_loans",
          true
        ],
        [
          "EQ",
          "no_false_recruitment_reports_for_seniors",
          true
        ],
        [
          "EQ",
          "no_other_violations_of_rules_or_laws",
          true
        ],
        [
          "EQ",
          "no_other_actions_damaging_insurance_reputation",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反許可、繳存保證金、投保相關保險、管理規則或禁止行為時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "licensed_and_bonded",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "insurance_type_compliant",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "management_rules_complied",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_duty_of_care_and_fiduciary",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "broker_report_and_fee_disclosed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "financial_and_business_management_compliant",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "other_management_rules_compliant",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "no_prohibited_acts",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]