[
  {
    "id": "fhc:confidentiality_obligation",
    "desc": "金融控股公司及其子公司應保守客戶個人資料、往來交易資料及其他相關資料秘密",
    "expr": [
      "EQ",
      "confidentiality_obligation",
      [
        "EQ",
        "fhc_confidentiality_maintained",
        true
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:confidentiality_measures_disclosed",
    "desc": "主管機關已令金融控股公司及其子公司訂定書面保密措施並揭露重要事項",
    "expr": [
      "EQ",
      "confidentiality_measures_disclosed",
      [
        "EQ",
        "fhc_confidentiality_measures_disclosed",
        true
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:violation_1",
    "desc": "違反第六條第一項規定，未申請設立金融控股公司",
    "expr": [
      "EQ",
      "violation_1",
      [
        "EQ",
        "fhc_establishment_application_submitted",
        false
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:violation_2",
    "desc": "違反第十六條第三項規定，未經主管機關核准而持有股份",
    "expr": [
      "EQ",
      "violation_2",
      [
        "EQ",
        "fhc_hold_shares_without_approval",
        true
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:violation_3",
    "desc": "違反第十六條第一項、第二項或第九項規定未向主管機關申報，或違反同條第七項但書規定增加持股",
    "expr": [
      "EQ",
      "violation_3",
      [
        "OR",
        [
          "EQ",
          "fhc_not_reported_to_authority",
          true
        ],
        [
          "EQ",
          "fhc_illegal_share_increase",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:violation_4",
    "desc": "違反第十六條第十項規定，未依主管機關所定期限處分",
    "expr": [
      "EQ",
      "violation_4",
      [
        "EQ",
        "fhc_not_disposed_within_deadline",
        true
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:violation_5",
    "desc": "違反主管機關依第十六條第五項所定辦法中有關申報或公告之規定",
    "expr": [
      "EQ",
      "violation_5",
      [
        "EQ",
        "fhc_violate_reporting_or_announcement_rules",
        true
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:violation_6",
    "desc": "違反第十六條第六項規定，為質權之設定",
    "expr": [
      "EQ",
      "violation_6",
      [
        "EQ",
        "fhc_illegal_pledge_setting",
        true
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:violation_7",
    "desc": "違反第十八條第一項規定，未經許可為合併、概括讓與或概括承受",
    "expr": [
      "EQ",
      "violation_7",
      [
        "EQ",
        "fhc_illegal_merger_or_transfer",
        true
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:violation_8",
    "desc": "違反第三十八條規定，持有金融控股公司之股份",
    "expr": [
      "EQ",
      "violation_8",
      [
        "EQ",
        "fhc_illegal_shareholding",
        true
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:violation_9",
    "desc": "違反第三十九條第一項所定短期資金運用項目；或違反同條第二項規定，未經核准投資不動產或投資非自用不動產",
    "expr": [
      "EQ",
      "violation_9",
      [
        "OR",
        [
          "EQ",
          "fhc_violate_short_term_fund_use",
          true
        ],
        [
          "EQ",
          "fhc_illegal_real_estate_investment",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:violation_10",
    "desc": "違反主管機關依第三十九條第三項所定辦法中有關發行條件或期限之規定",
    "expr": [
      "EQ",
      "violation_10",
      [
        "EQ",
        "fhc_violate_issuance_conditions_or_deadline",
        true
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:violation_11",
    "desc": "違反主管機關依第四十條或第四十一條所定之比率或所為之處置或限制",
    "expr": [
      "EQ",
      "violation_11",
      [
        "EQ",
        "fhc_violate_ratio_or_disposal_restrictions",
        true
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:violation_12",
    "desc": "違反第四十二條第一項規定，未保守秘密",
    "expr": [
      "EQ",
      "violation_12",
      [
        "NOT",
        [
          "EQ",
          "confidentiality_obligation",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:violation_13",
    "desc": "違反第四十三條第一項、第二項或第四項規定；或違反主管機關依同條第三項所定辦法中有關可從事之業務範圍、資訊交互運用、共用設備、場所或人員管理之規定",
    "expr": [
      "EQ",
      "violation_13",
      [
        "EQ",
        "fhc_violate_article_43_rules",
        true
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:violation_14",
    "desc": "違反第四十五條第一項交易條件之限制或董事會之決議方法；或違反同條第四項所定之金額比率",
    "expr": [
      "EQ",
      "violation_14",
      [
        "EQ",
        "fhc_violate_article_45_rules",
        true
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:violation_15",
    "desc": "違反第四十六條第一項規定，未向主管機關申報或揭露",
    "expr": [
      "EQ",
      "violation_15",
      [
        "EQ",
        "fhc_not_reported_or_disclosed",
        true
