[
  {
    "id": "insurance:internal_control_established",
    "desc": "建立內部控制及稽核制度",
    "expr": [
      "EQ",
      "internal_control_established",
      [
        "EQ",
        "internal_control_system_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_executed",
    "desc": "執行內部控制及稽核制度",
    "expr": [
      "EQ",
      "internal_control_executed",
      [
        "EQ",
        "internal_control_system_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_established",
    "desc": "建立內部處理制度及程序",
    "expr": [
      "EQ",
      "internal_handling_established",
      [
        "EQ",
        "internal_handling_system_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_executed",
    "desc": "執行內部處理制度及程序",
    "expr": [
      "EQ",
      "internal_handling_executed",
      [
        "EQ",
        "internal_handling_system_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_compliance",
    "desc": "內部控制及稽核制度建立且執行",
    "expr": [
      "EQ",
      "internal_control_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_compliance",
    "desc": "內部處理制度及程序建立且執行",
    "expr": [
      "EQ",
      "internal_handling_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_handling_established",
          true
        ],
        [
          "EQ",
          "internal_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_internal_control",
    "desc": "違反內部控制及稽核制度規定",
    "expr": [
      "EQ",
      "violation_internal_control",
      [
        "NOT",
        [
          "EQ",
          "internal_control_compliance",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_internal_handling",
    "desc": "違反內部處理制度及程序規定",
    "expr": [
      "EQ",
      "violation_internal_handling",
      [
        "NOT",
        [
          "EQ",
          "internal_handling_compliance",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：未建立或未執行內部控制或內部處理制度時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "violation_internal_control",
          true
        ],
        [
          "EQ",
          "violation_internal_handling",
          true
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]