[
  {
    "id": "insurance:capital_level_severe_insufficiency",
    "desc": "資本等級嚴重不足判定",
    "expr": [
      "EQ",
      "capital_level_severe_insufficiency",
      [
        "OR",
        [
          "LT",
          "capital_adequacy_ratio",
          50.0
        ],
        [
          "LT",
          "net_worth",
          0.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_significant_deterioration",
    "desc": "資本等級顯著惡化判定",
    "expr": [
      "EQ",
      "capital_level_significant_deterioration",
      [
        "AND",
        [
          "GE",
          "capital_adequacy_ratio",
          50.0
        ],
        [
          "LT",
          "capital_adequacy_ratio",
          150.0
        ],
        [
          "GE",
          "net_worth_ratio",
          0.0
        ],
        [
          "LT",
          "net_worth_ratio",
          2.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_insufficient",
    "desc": "資本等級不足判定",
    "expr": [
      "EQ",
      "capital_level_insufficient",
      [
        "AND",
        [
          "GE",
          "capital_adequacy_ratio",
          150.0
        ],
        [
          "LT",
          "capital_adequacy_ratio",
          200.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_adequate",
    "desc": "資本等級適足判定",
    "expr": [
      "EQ",
      "capital_level_adequate",
      [
        "GE",
        "capital_adequacy_ratio",
        200.0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足, 0=未分類）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_4_measures_executed",
    "desc": "資本嚴重不足等級措施已執行",
    "expr": [
      "EQ",
      "capital_level_4_measures_executed",
      [
        "EQ",
        "level_4_measures_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_3_measures_executed",
    "desc": "資本顯著不足等級措施已執行",
    "expr": [
      "EQ",
      "capital_level_3_measures_executed",
      [
        "EQ",
        "level_3_measures_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_2_measures_executed",
    "desc": "資本不足等級措施已執行",
    "expr": [
      "EQ",
      "capital_level_2_measures_executed",
      [
        "AND",
        [
          "EQ",
          "improvement_plan_submitted",
          true
        ],
        [
          "EQ",
          "improvement_plan_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:severe_insufficiency_and_no_capital_plan",
    "desc": "嚴重不足且未依主管機關規定期限完成增資、改善計畫或合併",
    "expr": [
      "EQ",
      "severe_insufficiency_and_no_capital_plan",
      [
        "AND",
        [
          "EQ",
          "capital_level",
          4
        ],
        [
          "NOT",
          [
            "EQ",
            "capital_plan_completed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:significant_deterioration_and_no_approved_plan",
    "desc": "財務或業務狀況顯著惡化且未提出或未核定改善計畫",
    "expr": [
      "EQ",
      "significant_deterioration_and_no_approved_plan",
      [
        "AND",
        [
          "EQ",
          "capital_level_significant_deterioration",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "improvement_plan_approved",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:accelerated_deterioration_and_no_improvement",
    "desc": "損益、淨值加速惡化且經輔導仍未改善",
    "expr": [
      "EQ",
      "accelerated_deterioration_and_no_improvement",
      [
        "AND",
        [
          "EQ",
          "accelerated_deterioration",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "improvement_after_counseling",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:penalty_conditions",
    "desc": "處罰條件：嚴重不足且未完成增資或改善計畫，或財務顯著惡化未提出核定計畫，或加速惡化未改善",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "capital_level",
            4
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_plan_completed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level_significant_deterioration",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "improvement_plan_approved",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "accelerated_deterioration_and_no_improvement",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  }
]