[
  {
    "id": "insurance:agent_broker_notary_license_and_insurance_ok",
    "desc": "保險代理人、經紀人、公證人經主管機關許可，繳存保證金並投保相關保險，且領有執業證照",
    "expr": [
      "EQ",
      "agent_broker_notary_license_and_insurance_ok",
      [
        "AND",
        [
          "EQ",
          "license_permitted",
          true
        ],
        [
          "EQ",
          "guarantee_deposit_paid",
          true
        ],
        [
          "EQ",
          "related_insurance_purchased",
          true
        ],
        [
          "EQ",
          "practice_certificate_held",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:related_insurance_type_ok",
    "desc": "保險代理人、公證人投保責任保險；保險經紀人投保責任保險及保證保險",
    "expr": [
      "EQ",
      "related_insurance_type_ok",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "is_agent",
            true
          ],
          [
            "EQ",
            "is_notary",
            false
          ],
          [
            "EQ",
            "insurance_type_responsibility",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "insurance_type_guarantee",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "is_agent",
            false
          ],
          [
            "EQ",
            "is_notary",
            true
          ],
          [
            "EQ",
            "insurance_type_responsibility",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "insurance_type_guarantee",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "is_agent",
            false
          ],
          [
            "EQ",
            "is_notary",
            false
          ],
          [
            "EQ",
            "insurance_type_responsibility",
            true
          ],
          [
            "EQ",
            "insurance_type_guarantee",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_minimum_amount_compliance",
    "desc": "繳存保證金及投保相關保險之最低金額及實施方式符合主管機關規定",
    "expr": [
      "EQ",
      "capital_minimum_amount_compliance",
      [
        "EQ",
        "capital_minimum_amount_and_implementation_ok",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:management_rules_compliance",
    "desc": "符合主管機關定之資格取得、申請許可條件、程序、文件、董事監察人經理人資格、解任事由、分支機構條件、財務與業務管理、教育訓練、廢止許可及其他管理規則",
    "expr": [
      "EQ",
      "management_rules_compliance",
      [
        "EQ",
        "management_rules_followed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:bank_permitted_to_engage_agent_or_broker",
    "desc": "銀行經主管機關許可擇一兼營保險代理人或保險經紀人業務，並分別準用相關規定",
    "expr": [
      "EQ",
      "bank_permitted_to_engage_agent_or_broker",
      [
        "AND",
        [
          "EQ",
          "bank_license_permitted",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "bank_engage_agent",
            true
          ],
          [
            "EQ",
            "bank_engage_broker",
            true
          ]
        ],
        [
          "EQ",
          "bank_follow_agent_broker_regulations",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_duty_of_care_and_fidelity",
    "desc": "保險經紀人以善良管理人注意義務洽訂保險契約並負忠實義務",
    "expr": [
      "EQ",
      "broker_duty_of_care_and_fidelity",
      [
        "AND",
        [
          "EQ",
          "broker_exercise_duty_of_care",
          true
        ],
        [
          "EQ",
          "broker_fulfill_fidelity_duty",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_provide_written_report_and_disclose_fee",
    "desc": "保險經紀人於主管機關指定範圍內洽訂保險契約前，主動提供書面分析報告，收取報酬者明確告知報酬標準",
    "expr": [
      "EQ",
      "broker_provide_written_report_and_disclose_fee",
      [
        "AND",
        [
          "EQ",
          "broker_provide_written_report",
          true
        ],
        [
          "IMPLIES",
          [
            "EQ",
            "broker_charge_fee",
            true
          ],
          [
            "EQ",
            "broker_disclose_fee_standard",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_minimum_capital_requirement",
    "desc": "經紀人公司最低實收資本額符合規定",
    "expr": [
      "EQ",
      "broker_minimum_capital_requirement",
      [
        "CASE",
        [
          "AND",
          [
            "EQ",
            "application_date_after_110_03_03",
            true
          ],
          [
            "EQ",
            "business_type_insurance_broker",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "business_type_reinsurance_broker",
              true
            ]
          ]
        ],
        [
          "GE",
          "paid_in_capital",
          20000000.0
        ],
        [
          "AND",
          [
            "EQ",
            "application_date_after_110_03_03",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "business_type_insurance_broker",
              true
            ]
          ],
          [
            "EQ",
            "business_type_reinsurance_broker",
            true
          ]
        ],
        [
          "GE",
          "paid_in_capital",
          20000000.0
        ],
        [
          "AND",
          [
            "EQ",
            "application_date_after_110_03_03",
            true
          ],
          [
            "EQ",
            "business_type_insurance_broker",
            true
          ],
          [
            "EQ",
            "business_type_reinsurance_broker",
            true
          ]
        ],
        [
          "GE",
          "paid_in_capital",
          30000000.0
        ],
        [
          "AND",
          [
            "NOT",
            [
              "EQ",
              "application_date_after_110_03_03",
              true
            ]
          ],
          [
            "EQ",
            "business_type_insurance_broker",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "business_type_reinsurance_broker",
              true
            ]
          ]
        ],
        [
          "GE",
          "paid_in_capital",
          5000000.0
        ],
        [
          "AND",
          [
            "NOT",
            [
              "EQ",
              "application_date_after_110_03_03",
              true
            ]
          ],
          [
            "NOT",
            [
              "EQ",
              "business_type_insurance_broker",
              true
            ]
          ],
          [
            "EQ",
            "business_type_reinsurance_broker",
            true
          ]
        ],
        [
          "GE",
          "paid_in_capital",
          10000000.0
        ],
        [
          "AND",
          [
            "NOT",
            [
              "EQ",
              "application_date_after_110_03_03",
              true
            ]
          ],
          [
            "EQ",
            "business_type_insurance_broker",
            true
          ],
          [
            "EQ",
            "business_type_reinsurance_broker",
            true
          ]
        ],
        [
          "GE",
          "paid_in_capital",
          10000000.0
        ],
        true,
        false,
        0.0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_capital_adjustment_compliance",
    "desc": "已領有執業證照之經紀人公司於股權或資本總額移轉累計達50%以上時，於六個月內完成資本額調整（股東繼承除外）",
    "expr": [
      "EQ",
      "broker_capital_adjustment_compliance",
      [
        "IMPLIES",
        [
          "AND",
          [
            "EQ",
            "license_held",
            true
          ],
          [
            "GE",
            "share_or_capital_transfer_ratio",
            50.0
          ],
          [
            "NOT",
            [
              "EQ",
              "transfer_due_to_inheritance",
              true
            ]
          ]
        ],
        [
          "EQ",
          "capital_adjusted_within_6_months",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_contribution_cash_only",
    "desc": "經紀人公司發起人及股東出資以現金為限",
    "expr": [
      "EQ",
      "broker_contribution_cash_only",
      [
        "EQ",
        "contribution_is_cash_only",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_financial_or_business_management_rules",
    "desc": "違反第163條第四項管理規則中財務或業務管理規定、163條第七項規定，或165條第一項及163條第五項準用規定",
    "expr": [
      "EQ",
      "violation_financial_or_business_management_rules",
      [
        "EQ",
        "violate_financial_or_business_management_rules",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:penalty_imposed_for_violation",
    "desc": "違反相關規定應限期改正或處罰，情節重大者廢止許可並註銷執業證照",
    "expr": [
      "EQ",
      "penalty_imposed_for_violation",
      [
        "EQ",
        "penalty_imposed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:penalty_repeat_offense",
    "desc": "經處罰後於限期內仍不改正者，主管機關得按次處罰；情節輕微者得免處罰",
    "expr": [
      "EQ",
      "penalty_repeat_offense",
      [
        "OR",
        [
          "EQ",
          "repeat_penalty_imposed",
          true
        ],
        [
          "EQ",
          "minor_offense_no_penalty",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：未經主管機關許可、未繳存保證金、未投保相關保險、未領有執業證照，或違反管理規則中財務或業務管理規定，且未限期改正時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "agent_broker_notary_license_and_insurance_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "management_rules_compliance",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "violation_financial_or_business_management_rules",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "penalty_imposed_for_violation",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
]