[
  {
    "id": "bank:internal_control_compliance",
    "desc": "建立內部控制及稽核制度且確實執行",
    "expr": [
      "EQ",
      "internal_control_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_handling_compliance",
    "desc": "建立內部處理制度及程序且確實執行",
    "expr": [
      "EQ",
      "internal_handling_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_handling_established",
          true
        ],
        [
          "EQ",
          "internal_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_operation_compliance",
    "desc": "建立內部作業制度及程序且確實執行",
    "expr": [
      "EQ",
      "internal_operation_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_operation_established",
          true
        ],
        [
          "EQ",
          "internal_operation_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:derivative_business_compliance",
    "desc": "衍生性金融商品業務內部作業制度及程序訂定",
    "expr": [
      "EQ",
      "derivative_business_compliance",
      [
        "EQ",
        "derivative_business_internal_procedures_set",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:money_market_or_credit_card_permit",
    "desc": "經營貨幣市場業務或信用卡業務機構經中央主管機關許可",
    "expr": [
      "EQ",
      "money_market_or_credit_card_permit",
      [
        "EQ",
        "money_market_or_credit_card_permit_granted",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:credit_card_interest_rate_limit",
    "desc": "信用卡及現金卡利率不得超過年利率15%",
    "expr": [
      "EQ",
      "credit_card_interest_rate_limit",
      [
        "LE",
        "credit_card_or_cash_card_annual_interest_rate",
        15.0
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:violation_penalty_129_7",
    "desc": "未依規定建立內部控制、內部處理、內部作業制度或未確實執行",
    "expr": [
      "EQ",
      "violation_129_7",
      [
        "NOT",
        [
          "AND",
          [
            "EQ",
            "internal_control_established",
            true
          ],
          [
            "EQ",
            "internal_control_executed",
            true
          ],
          [
            "EQ",
            "internal_handling_established",
            true
          ],
          [
            "EQ",
            "internal_handling_executed",
            true
          ],
          [
            "EQ",
            "internal_operation_established",
            true
          ],
          [
            "EQ",
            "internal_operation_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反未建立或未確實執行內部控制、內部處理或內部作業制度時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "violation_129_7",
          true
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]