[
  {
    "id": "insurance:internal_control_compliance",
    "desc": "建立且確實執行內部控制制度",
    "expr": [
      "EQ",
      "internal_control_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:audit_system_compliance",
    "desc": "建立且確實執行稽核制度",
    "expr": [
      "EQ",
      "audit_system_compliance",
      [
        "AND",
        [
          "EQ",
          "audit_system_established",
          true
        ],
        [
          "EQ",
          "audit_system_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:solicitation_handling_compliance",
    "desc": "建立且確實執行招攬處理制度及程序",
    "expr": [
      "EQ",
      "solicitation_handling_compliance",
      [
        "AND",
        [
          "EQ",
          "solicitation_handling_established",
          true
        ],
        [
          "EQ",
          "solicitation_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_audit_solicitation_compliance",
    "desc": "內部控制、稽核及招攬處理制度均建立且確實執行",
    "expr": [
      "EQ",
      "internal_control_audit_solicitation_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_control_compliance",
          true
        ],
        [
          "EQ",
          "audit_system_compliance",
          true
        ],
        [
          "EQ",
          "solicitation_handling_compliance",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：未建立或未確實執行內部控制、稽核或招攬處理制度時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "NOT",
        [
          "EQ",
          "internal_control_audit_solicitation_compliance",
          true
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]