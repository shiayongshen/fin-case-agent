[
  {
    "id": "insurance:same_person_definition",
    "desc": "同一人定義為同一自然人或同一法人",
    "expr": [
      "EQ",
      "same_person",
      [
        "OR",
        [
          "EQ",
          "is_same_natural_person",
          true
        ],
        [
          "EQ",
          "is_same_legal_person",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:same_related_person_definition",
    "desc": "同一關係人定義包含本人、配偶、二親等以內血親及本人或配偶為負責人之事業",
    "expr": [
      "EQ",
      "same_related_person",
      [
        "OR",
        [
          "EQ",
          "is_self",
          true
        ],
        [
          "EQ",
          "is_spouse",
          true
        ],
        [
          "LE",
          "degree_of_kinship",
          2
        ],
        [
          "EQ",
          "is_business_responsible_by_self_or_spouse",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:same_related_enterprise_definition",
    "desc": "同一關係企業範圍依公司法369-1至369-3、369-9及369-11規定",
    "expr": [
      "EQ",
      "same_related_enterprise",
      [
        "EQ",
        "company_law_related_enterprise",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_and_audit_established",
    "desc": "保險業建立內部控制及稽核制度",
    "expr": [
      "EQ",
      "internal_control_and_audit_established",
      [
        "EQ",
        "internal_control_and_audit_system_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_system_established",
    "desc": "保險業建立內部處理制度及程序",
    "expr": [
      "EQ",
      "internal_handling_system_established",
      [
        "EQ",
        "internal_handling_system_and_procedure_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_scope",
    "desc": "內部處理制度涵蓋資產品質評估、準備金提存、逾期放款、催收款清理、呆帳轉銷及保單招攬核保理賠",
    "expr": [
      "EQ",
      "internal_handling_scope_compliant",
      [
        "AND",
        [
          "EQ",
          "asset_quality_evaluation_included",
          true
        ],
        [
          "EQ",
          "reserve_provision_included",
          true
        ],
        [
          "EQ",
          "overdue_loan_management_included",
          true
        ],
        [
          "EQ",
          "collection_management_included",
          true
        ],
        [
          "EQ",
          "bad_debt_writeoff_included",
          true
        ],
        [
          "EQ",
          "policy_solicitation_underwriting_claim_included",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_internal_control_or_handling",
    "desc": "違反未建立或未執行內部控制、稽核或內部處理制度者",
    "expr": [
      "EQ",
      "violation_internal_control_or_handling",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_and_audit_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_system_established",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_4_noncompliance",
    "desc": "資本嚴重不足且未依主管機關規定期限完成增資、改善計畫或合併",
    "expr": [
      "EQ",
      "capital_level_4_noncompliance",
      [
        "AND",
        [
          "EQ",
          "capital_level",
          4
        ],
        [
          "OR",
          [
            "NOT",
            [
              "EQ",
              "capital_increase_completed",
              true
            ]
          ],
          [
            "NOT",
            [
              "EQ",
              "financial_or_business_improvement_plan_completed",
              true
            ]
          ],
          [
            "NOT",
            [
              "EQ",
              "merger_completed",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_or_business_deterioration",
    "desc": "財務或業務狀況顯著惡化，不能支付債務或無法履行契約責任或有損及被保險人權益之虞",
    "expr": [
      "EQ",
      "financial_or_business_deterioration",
      [
        "OR",
        [
          "EQ",
          "financial_or_business_status_significantly_deteriorated",
          true
        ],
        [
          "EQ",
          "unable_to_pay_debt",
          true
        ],
        [
          "EQ",
          "unable_to_fulfill_contractual_obligations",
          true
        ],
        [
          "EQ",
          "risk_of_harming_insured_rights",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_submitted_and_approved",
    "desc": "保險業提出財務或業務改善計畫並經主管機關核定",
    "expr": [
      "EQ",
      "improvement_plan_submitted_and_approved",
      [
        "AND",
        [
          "EQ",
          "improvement_plan_submitted",
          true
        ],
        [
          "EQ",
          "improvement_plan_approved",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_deterioration_and_no_improvement",
    "desc": "損益、淨值加速惡化且經輔導仍未改善",
    "expr": [
      "EQ",
      "financial_deterioration_and_no_improvement",
      [
        "AND",
        [
          "EQ",
          "profit_loss_and_net_worth_accelerated_deterioration",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "improvement_after_guidance",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:penalty_conditions",
    "desc": "處罰條件：違反內部控制或處理制度，或資本嚴重不足且未完成增資或改善計畫，或財務惡化未改善時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "violation_internal_control_or_handling",
          true
        ],
        [
          "EQ",
          "capital_level_4_noncompliance",
          true
        ],
        [
          "AND",
          [
            "EQ",
            "financial_or_business_deterioration",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "improvement_plan_submitted_and_approved",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "financial_deterioration_and_no_improvement",
            true
          ],
          [
            "EQ",
            "supervisory_measures_taken",
            false
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  }
]