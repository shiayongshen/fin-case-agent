[
  {
    "id": "insurance:capital_level",
    "desc": "保險業資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足, 0=未分類）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "OR",
          [
            "AND",
            [
              "GE",
              "capital_adequacy_ratio",
              50.0
            ],
            [
              "LT",
              "capital_adequacy_ratio",
              150.0
            ]
          ],
          [
            "AND",
            [
              "LT",
              "net_worth_ratio",
              2.0
            ],
            [
              "GE",
              "net_worth_ratio",
              0.0
            ]
          ]
        ],
        3,
        [
          "OR",
          [
            "AND",
            [
              "GE",
              "capital_adequacy_ratio",
              150.0
            ],
            [
              "LT",
              "capital_adequacy_ratio",
              200.0
            ]
          ],
          [
            "AND",
            [
              "LT",
              "net_worth_ratio",
              3.0
            ],
            [
              "GE",
              "net_worth_ratio",
              2.0
            ]
          ]
        ],
        2,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            200.0
          ],
          [
            "OR",
            [
              "GE",
              "net_worth_ratio",
              3.0
            ],
            [
              "GE",
              "net_worth_ratio_prev",
              3.0
            ]
          ]
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_insufficient_measures_submitted",
    "desc": "資本不足者已提出增資、財務或業務改善計畫",
    "expr": [
      "EQ",
      "capital_insufficient_measures_submitted",
      [
        "EQ",
        "improvement_plan_submitted",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_insufficient_measures_executed",
    "desc": "資本不足者已確實執行增資、財務或業務改善計畫",
    "expr": [
      "EQ",
      "capital_insufficient_measures_executed",
      [
        "EQ",
        "improvement_plan_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_significantly_insufficient_measures_executed",
    "desc": "資本顯著不足者已執行主管機關規定之措施",
    "expr": [
      "EQ",
      "capital_significantly_insufficient_measures_executed",
      [
        "AND",
        [
          "EQ",
          "capital_insufficient_measures_executed",
          true
        ],
        [
          "EQ",
          "responsible_person_removed",
          true
        ],
        [
          "EQ",
          "responsible_person_duty_suspended",
          true
        ],
        [
          "EQ",
          "special_asset_approval_obtained",
          true
        ],
        [
          "EQ",
          "special_asset_disposed",
          true
        ],
        [
          "EQ",
          "credit_restriction_applied",
          true
        ],
        [
          "EQ",
          "responsible_person_compensation_reduced",
          true
        ],
        [
          "EQ",
          "branch_restriction_applied",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_severely_insufficient_measures_executed",
    "desc": "資本嚴重不足者已採取第一百四十九條第三項第一款規定之處分",
    "expr": [
      "EQ",
      "capital_severely_insufficient_measures_executed",
      [
        "EQ",
        "article_149_3_1_measures_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：資本不足等級未執行對應措施時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "capital_level",
            4
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_severely_insufficient_measures_executed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            3
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_significantly_insufficient_measures_executed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            2
          ],
          [
            "OR",
            [
              "NOT",
              [
                "EQ",
                "capital_insufficient_measures_submitted",
                true
              ]
            ],
            [
              "NOT",
              [
                "EQ",
                "capital_insufficient_measures_executed",
                true
              ]
            ]
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]