[
  {
    "id": "futures_trust:internal_control_established",
    "desc": "期貨信託事業依主管機關及相關機構規定訂定內部控制制度",
    "expr": [
      "EQ",
      "internal_control_established",
      [
        "AND",
        [
          "EQ",
          "internal_control_defined_by_authority",
          true
        ],
        [
          "EQ",
          "internal_control_complies_with_regulations",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "futures_trust"
  },
  {
    "id": "futures_trust:internal_control_operation_compliance",
    "desc": "期貨信託事業業務經營依照法令、章程及內部控制制度",
    "expr": [
      "EQ",
      "internal_control_operation_compliance",
      [
        "AND",
        [
          "EQ",
          "business_operates_according_to_laws",
          true
        ],
        [
          "EQ",
          "business_operates_according_to_articles",
          true
        ],
        [
          "EQ",
          "business_operates_according_to_internal_control",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "futures_trust"
  },
  {
    "id": "futures_trust:internal_control_change_approved",
    "desc": "內部控制制度訂定或變更經董事會同意並留存備查",
    "expr": [
      "EQ",
      "internal_control_change_approved",
      [
        "AND",
        [
          "EQ",
          "internal_control_change_reported_to_board",
          true
        ],
        [
          "EQ",
          "internal_control_change_board_approved",
          true
        ],
        [
          "EQ",
          "internal_control_change_recorded",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "futures_trust"
  },
  {
    "id": "futures_trust:internal_control_change_updated_on_notice",
    "desc": "主管機關或指定機構通知變更時，於限期內完成變更",
    "expr": [
      "EQ",
      "internal_control_change_updated_on_notice",
      [
        "IMPLIES",
        [
          "EQ",
          "authority_or_designated_institution_notified_change",
          true
        ],
        [
          "EQ",
          "internal_control_change_completed_within_deadline",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "futures_trust"
  },
  {
    "id": "futures_trust:customer_knowledge_assessed",
    "desc": "充分知悉並評估客戶投資知識、經驗、財務狀況及承受風險程度",
    "expr": [
      "EQ",
      "customer_knowledge_assessed",
      [
        "AND",
        [
          "EQ",
          "customer_investment_knowledge_assessed",
          true
        ],
        [
          "EQ",
          "customer_investment_experience_assessed",
          true
        ],
        [
          "EQ",
          "customer_financial_status_assessed",
          true
        ],
        [
          "EQ",
          "customer_risk_tolerance_assessed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "futures_trust"
  },
  {
    "id": "futures_trust:first_time_customer_identity_verified",
    "desc": "首次申購客戶提出身分證明或法人登記證明並填具基本資料",
    "expr": [
      "EQ",
      "first_time_customer_identity_verified",
      [
        "AND",
        [
          "EQ",
          "identity_document_submitted",
          true
        ],
        [
          "EQ",
          "basic_information_filled",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "futures_trust"
  },
  {
    "id": "futures_trust:subscription_redemption_procedures_complied",
    "desc": "受理申購、買回依契約、公開說明書及作業程序辦理",
    "expr": [
      "EQ",
      "subscription_redemption_procedures_complied",
      [
        "AND",
        [
          "EQ",
          "subscription_redemption_follow_contract",
          true
        ],
        [
          "EQ",
          "subscription_redemption_follow_prospectus",
          true
        ],
        [
          "EQ",
          "subscription_redemption_follow_industry_procedures",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "futures_trust"
  },
  {
    "id": "futures_trust:large_or_suspicious_transactions_recorded_and_aml_complied",
    "desc": "一定金額以上或疑似洗錢交易留存完整紀錄並依洗錢防制法辦理",
    "expr": [
      "EQ",
      "large_or_suspicious_transactions_recorded_and_aml_complied",
      [
        "AND",
        [
          "EQ",
          "large_or_suspicious_transaction_recorded",
          true
        ],
        [
          "EQ",
          "aml_regulations_complied",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "futures_trust"
  },
  {
    "id": "futures_trust:short_swing_trading_fee_deducted_and_included_in_assets",
    "desc": "短線交易買回費用扣除並歸入基金資產",
    "expr": [
      "EQ",
      "short_swing_trading_fee_deducted_and_included_in_assets",
      [
        "AND",
        [
          "EQ",
          "short_swing_trading_identified",
          true
        ],
        [
          "EQ",
          "short_swing_trading_fee_deducted",
          true
        ],
        [
          "EQ",
          "short_swing_trading_fee_included_in_assets",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "futures_trust"
  },
  {
    "id": "futures_trust:internal_control_system_comprehensive",
    "desc": "內部控制制度包括充分瞭解客戶、銷售行為、短線交易防制、洗錢防制及法令遵循作業原則",
    "expr": [
      "EQ",
      "internal_control_system_comprehensive",
      [
        "AND",
        [
          "EQ",
          "internal_control_custody_compliance",
          true
        ],
        [
          "EQ",
          "internal_control_sales_compliance",
          true
        ],
        [
          "EQ",
          "internal_control_short_swing_prevention",
          true
        ],
        [
          "EQ",
          "internal_control_aml_compliance",
          true
        ],
        [
          "EQ",
          "internal_control_legal_compliance",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "futures_trust"
  },
  {
    "id": "futures_trade:violation_penalty_applicable",
    "desc": "期貨交易所、期貨結算機構、期貨業違反本法或命令時應受處分",
    "expr": [
      "EQ",
      "violation_penalty_applicable",
      [
        "OR",
        [
          "EQ",
          "violate_law",
          true
        ],
        [
          "EQ",
          "violate_order",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "futures_trade"
  },
  {
    "id": "futures_trade:penalty_measures",
    "desc": "主管機關得予以糾正、警告、撤換人員、停止營業、撤銷許可或其他處置",
    "expr": [
      "EQ",
      "penalty_measures",
      [
        "OR",
        [
          "EQ",
          "corrective_action_taken",
          true
        ],
        [
          "EQ",
          "warning_issued",
          true
        ],
        [
          "EQ",
          "personnel_replaced",
          true
        ],
        [
          "EQ",
          "business_suspension_ordered",
          true
        ],
        [
          "EQ",
          "license_revoked",
          true
        ],
        [
          "EQ",
          "other_measures_taken",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "futures_trade"
  },
  {
    "id": "futures_trade:penalty_fine_conditions",
    "desc": "違反指定條文或命令者處新臺幣十二萬元以上二百四十萬元以下罰鍰，屆期未改善得按次處罰",
    "expr": [
      "EQ",
      "penalty_fine_conditions",
      [
        "OR",
        [
          "EQ",
          "violate_specified_articles_or_orders",
          true
        ],
        [
          "EQ",
          "fail_to_submit_documents_or_reports",
          true
        ],
        [
          "EQ",
          "obstruct_or_refuse_inspection",
          true
        ],
        [
          "EQ",
          "fail_to_provide_required_documents",
          true
        ],
        [
          "EQ",
          "fail_to_attend_inquiry_without_reason",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "futures_trade"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反期貨交易法相關規定或命令時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "violation_penalty_applicable",
          true
        ],
        [
          "EQ",
          "penalty_fine_conditions",
          true
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]