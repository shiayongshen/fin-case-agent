[
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_severe_and_no_improvement",
    "desc": "資本嚴重不足且未於期限完成增資、改善計畫或合併",
    "expr": [
      "EQ",
      "capital_level_severe_and_no_improvement",
      [
        "AND",
        [
          "EQ",
          "capital_level",
          4
        ],
        [
          "NOT",
          [
            "EQ",
            "capital_improvement_completed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_deterioration_and_no_plan",
    "desc": "財務或業務狀況顯著惡化且未提出或未核定改善計畫",
    "expr": [
      "EQ",
      "financial_deterioration_and_no_plan",
      [
        "AND",
        [
          "EQ",
          "financial_or_business_deteriorated",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "improvement_plan_submitted",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "improvement_plan_approved",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_deterioration_and_no_improvement",
    "desc": "損益、淨值加速惡化且經輔導仍未改善",
    "expr": [
      "EQ",
      "financial_deterioration_and_no_improvement",
      [
        "AND",
        [
          "EQ",
          "profit_and_net_worth_accelerated_deterioration",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "improvement_plan_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:penalty_conditions",
    "desc": "處罰條件：資本嚴重不足且未完成改善計畫，或財務惡化未提出或未核定改善計畫，或損益淨值加速惡化未改善時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "capital_level_severe_and_no_improvement",
          true
        ],
        [
          "EQ",
          "financial_deterioration_and_no_plan",
          true
        ],
        [
          "EQ",
          "financial_deterioration_and_no_improvement",
          true
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  }
]