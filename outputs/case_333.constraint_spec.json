[
  {
    "id": "bank:internal_control_compliance",
    "desc": "建立內部控制及稽核制度且確實執行",
    "expr": [
      "EQ",
      "internal_control_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_handling_compliance",
    "desc": "建立內部處理制度及程序且確實執行",
    "expr": [
      "EQ",
      "internal_handling_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_handling_established",
          true
        ],
        [
          "EQ",
          "internal_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_operation_compliance",
    "desc": "建立內部作業制度及程序且確實執行",
    "expr": [
      "EQ",
      "internal_operation_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_operation_established",
          true
        ],
        [
          "EQ",
          "internal_operation_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:credit_limit_ratio",
    "desc": "第三地區分支機構及國際金融業務分行授信業務比率（%）",
    "expr": [
      "EQ",
      "credit_limit_ratio",
      [
        "MUL",
        [
          "DIV",
          [
            "SUB",
            [
              "ADD",
              "credit_balance_third_area",
              "credit_balance_non_mainland_foreign"
            ],
            "short_term_trade_finance"
          ],
          "net_asset_last_year"
        ],
        100.0
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:credit_limit_ratio_adjusted",
    "desc": "提高授信業務比率後之授信業務比率（%）",
    "expr": [
      "EQ",
      "credit_limit_ratio_adjusted",
      [
        "CASE",
        [
          "EQ",
          "credit_limit_ratio_increased",
          true
        ],
        "credit_limit_ratio_increased",
        "credit_limit_ratio"
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:credit_limit_increase_eligibility",
    "desc": "符合提高授信業務比率條件",
    "expr": [
      "EQ",
      "credit_limit_increase_eligibility",
      [
        "AND",
        [
          "LT",
          "avg_overdue_loan_ratio_6m",
          1.5
        ],
        [
          "GT",
          "avg_bad_debt_coverage_ratio_6m",
          80.0
        ],
        [
          "GT",
          "capital_to_risk_assets_ratio_6m",
          10.0
        ],
        [
          "GT",
          "credit_limit_ratio",
          20.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:annual_report_compliance",
    "desc": "每年一月及七月底前函報授信業務比率及相關比率",
    "expr": [
      "EQ",
      "annual_report_compliance",
      [
        "AND",
        [
          "EQ",
          "report_submitted_jan",
          true
        ],
        [
          "EQ",
          "report_submitted_jul",
          true
        ],
        [
          "EQ",
          "ratios_within_limits",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:risk_management_policy_compliance",
    "desc": "訂定並通過風險管理政策與程序",
    "expr": [
      "EQ",
      "risk_management_policy_compliance",
      [
        "AND",
        [
          "EQ",
          "risk_management_policy_established",
          true
        ],
        [
          "EQ",
          "risk_management_policy_approved",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:risk_control_mechanism_compliance",
    "desc": "銀行業風險控管機制符合規定原則",
    "expr": [
      "EQ",
      "risk_control_mechanism_compliance",
      [
        "AND",
        [
          "EQ",
          "capital_adequacy_monitored",
          true
        ],
        [
          "EQ",
          "liquidity_management_established",
          true
        ],
        [
          "EQ",
          "asset_allocation_considered",
          true
        ],
        [
          "EQ",
          "asset_quality_evaluated",
          true
        ],
        [
          "EQ",
          "information_security_and_emergency_plan_established",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：未依規定建立或執行內部控制、內部處理、內部作業制度或未符授信比率及風險管理規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_operation_compliance",
            true
          ]
        ],
        [
          "AND",
          [
            "GT",
            "credit_limit_ratio",
            30.0
          ],
          [
            "NOT",
            [
              "EQ",
              "credit_limit_increase_eligibility",
              true
            ]
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "annual_report_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "risk_management_policy_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "risk_control_mechanism_compliance",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]