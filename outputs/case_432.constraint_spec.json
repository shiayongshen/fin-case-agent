[
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_severely_insufficient",
    "desc": "資本等級為嚴重不足",
    "expr": [
      "EQ",
      "capital_level_severely_insufficient",
      [
        "EQ",
        "capital_level",
        4
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_significantly_insufficient",
    "desc": "資本等級為顯著不足",
    "expr": [
      "EQ",
      "capital_level_significantly_insufficient",
      [
        "EQ",
        "capital_level",
        3
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_insufficient",
    "desc": "資本等級為不足",
    "expr": [
      "EQ",
      "capital_level_insufficient",
      [
        "EQ",
        "capital_level",
        2
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_adequate",
    "desc": "資本等級為適足",
    "expr": [
      "EQ",
      "capital_level_adequate",
      [
        "EQ",
        "capital_level",
        1
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_completed",
    "desc": "增資、財務或業務改善計畫或合併已於主管機關規定期限內完成",
    "expr": [
      "EQ",
      "improvement_plan_completed",
      [
        "EQ",
        "improvement_plan_submitted_and_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_overdue",
    "desc": "未於主管機關規定期限內完成增資、財務或業務改善計畫或合併",
    "expr": [
      "EQ",
      "improvement_plan_overdue",
      [
        "NOT",
        [
          "EQ",
          "improvement_plan_completed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_4_penalty_condition",
    "desc": "資本嚴重不足且未於期限完成改善計畫",
    "expr": [
      "EQ",
      "capital_level_4_penalty_condition",
      [
        "AND",
        [
          "EQ",
          "capital_level_severely_insufficient",
          true
        ],
        [
          "EQ",
          "improvement_plan_overdue",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_or_business_deterioration",
    "desc": "財務或業務狀況顯著惡化，不能支付債務或無法履行契約責任或有損及被保險人權益之虞",
    "expr": [
      "EQ",
      "financial_or_business_deterioration",
      [
        "EQ",
        "financial_or_business_deterioration_flag",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_approved",
    "desc": "主管機關核定財務或業務改善計畫",
    "expr": [
      "EQ",
      "improvement_plan_approved",
      [
        "EQ",
        "improvement_plan_approved_flag",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_accelerated_deterioration",
    "desc": "損益、淨值呈現加速惡化或經輔導仍未改善",
    "expr": [
      "EQ",
      "improvement_plan_accelerated_deterioration",
      [
        "EQ",
        "accelerated_deterioration_flag",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:supervisory_measures_needed",
    "desc": "因財務或業務惡化，主管機關得為監管、接管、勒令停業清理或命令解散之處分",
    "expr": [
      "EQ",
      "supervisory_measures_needed",
      [
        "OR",
        [
          "GE",
          "capital_level_4_penalty_condition",
          1
        ],
        [
          "AND",
          [
            "EQ",
            "financial_or_business_deterioration",
            true
          ],
          [
            "EQ",
            "improvement_plan_approved",
            true
          ],
          [
            "EQ",
            "improvement_plan_accelerated_deterioration",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:investment_limit_financial_bonds",
    "desc": "金融債券等投資不得超過資金35%",
    "expr": [
      "EQ",
      "investment_limit_financial_bonds",
      [
        "LE",
        "financial_bonds_investment_amount",
        [
          "MUL",
          "total_funds",
          0.35
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:investment_limit_stock_per_company",
    "desc": "每一公司股票投資不得超過資金5%",
    "expr": [
      "EQ",
      "investment_limit_stock_per_company",
      [
        "LE",
        "stock_investment_per_company",
        [
          "MUL",
          "total_funds",
          0.05
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:investment_limit_stock_per_company_shares",
    "desc": "每一公司股票投資不得超過該公司已發行股份總數10%",
    "expr": [
      "EQ",
      "investment_limit_stock_per_company_shares",
      [
        "LE",
        "stock_investment_shares_per_company",
        [
          "MUL",
          "company_total_shares",
          0.1
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:investment_limit_bonds_per_company",
    "desc": "每一公司公司債及免保證商業本票投資不得超過資金5%",
    "expr": [
      "EQ",
      "investment_limit_bonds_per_company",
      [
        "LE",
        "bonds_investment_per_company",
        [
          "MUL",
          "total_funds",
          0.05
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:investment_limit_bonds_per_company_equity",
    "desc": "每一公司公司債及免保證商業本票投資不得超過公司業主權益10%",
    "expr": [
      "EQ",
      "investment_limit_bonds_per_company_equity",
      [
        "LE",
        "bonds_investment_equity_per_company",
        [
          "MUL",
          "company_equity",
          0.1
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:investment_limit_fund_total",
    "desc": "證券投資信託基金及共同信託基金投資總額不得超過資金10%",
    "expr": [
      "EQ",
      "investment_limit_fund_total",
      [
        "LE",
        "fund_investment_total",
        [
          "MUL",
          "total_funds",
          0.1
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:investment_limit_fund_per_issued",
    "desc": "每一基金受益憑證投資不得超過已發行受益憑證總額10%",
    "expr": [
      "EQ",
      "investment_limit_fund_per_issued",
      [
        "LE",
        "fund_investment_per_issued",
        [
          "MUL",
          "fund_total_issued",
          0.1
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:investment_limit_securitized_and_others",
    "desc": "證券化商品及其他核准有價證券投資總額不得超過資金10%",
    "expr": [
      "EQ",
      "investment_limit_securitized_and_others",
      [
        "LE",
        "securitized_and_others_investment_total",
        [
          "MUL",
          "total_funds",
          0.1
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:investment_limit_stock_and_bonds_total",
    "desc": "第三款及第四款投資總額不得超過資金35%",
    "expr": [
      "EQ",
      "investment_limit_stock_and_bonds_total",
      [
        "LE",
        [
          "ADD",
          "stock_investment_total",
          "bonds_investment_total"
        ],
        [
          "MUL",
          "total_funds",
          0.35
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:investment_prohibited_conditions",
    "desc": "不得以保險業或代表人擔任被投資公司董事、監察人等情事",
    "expr": [
      "EQ",
      "investment_prohibited_conditions",
      [
        "NOT",
        [
          "OR",
          [
            "EQ",
            "insurance_or_representative_is_director",
            true
          ],
          [
            "EQ",
            "insurance_or_representative_exercises_voting_rights",
            true
          ],
          [
            "EQ",
            "insurance_or_representative_assigns_manager",
            true
          ],
          [
            "EQ",
            "insurance_or_representative_is_trust_supervisor",
            true
          ],
          [
            "EQ",
            "insurance_or_representative_participates_in_management",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:investment_prohibited_conditions_invalid",
    "desc": "違反投資禁止情事者相關行為無效",
    "expr": [
      "EQ",
      "investment_prohibited_conditions_invalid",
      [
        "NOT",
        [
          "EQ",
          "investment_prohibited_conditions",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:foreign_investment_limit",
    "desc": "國外投資總額不得超過資金45%",
    "expr": [
      "EQ",
      "foreign_investment_limit",
      [
        "LE",
        "foreign_investment_total",
        [
          "MUL",
          "total_funds",
          0.45
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:foreign_investment_exclusions",
    "desc": "不計入國外投資限額之金額",
    "expr": [
      "EQ",
      "foreign_investment_exclusions",
      [
        "ADD",
        "foreign_investment_exclusion_approved_foreign_currency_insurance",
        "foreign_investment_exclusion_domestic_foreign_currency_securities",
        "foreign_investment_exclusion_approved_foreign_insurance_related_investment",
        "foreign_investment_exclusion_other_approved_items"
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:foreign_investment_limit_net",
    "desc": "國外投資淨額不得超過資金45%扣除不計入金額",
    "expr": [
      "EQ",
      "foreign_investment_limit_net",
      [
        "LE",
        [
          "SUB",
          "foreign_investment_total",
          "foreign_investment_exclusions"
        ],
        [
          "MUL",
          "total_funds",
          0.45
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：資本嚴重不足且未於期限完成改善計畫，或財務業務惡化且未改善，或違反投資限制及禁止情事時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "capital_level_4_penalty_condition",
          true
        ],
        [
          "AND",
          [
            "NOT",
            [
              "EQ",
              "capital_level_4_penalty_condition",
              true
            ]
          ],
          [
            "EQ",
            "financial_or_business_deterioration",
            true
          ],
          [
            "EQ",
            "improvement_plan_approved",
            true
          ],
          [
            "EQ",
            "improvement_plan_accelerated_deterioration",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "investment_limit_financial_bonds",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "investment_limit_stock_per_company",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "investment_limit_stock_per_company_shares",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "investment_limit_bonds_per_company",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "investment_limit_bonds_per_company_equity",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "investment_limit_fund_total",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "investment_limit_fund_per_issued",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "investment_limit_securitized_and_others",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "investment_limit_stock_and_bonds_total",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "investment_prohibited_conditions",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "foreign_investment_limit_net",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]