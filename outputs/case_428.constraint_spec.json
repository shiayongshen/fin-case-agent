[
  {
    "id": "insurance:internal_control_established",
    "desc": "建立內部控制及稽核制度",
    "expr": [
      "EQ",
      "internal_control_established",
      [
        "EQ",
        "internal_control_established_flag",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_executed",
    "desc": "執行內部控制及稽核制度",
    "expr": [
      "EQ",
      "internal_control_executed",
      [
        "EQ",
        "internal_control_executed_flag",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_established",
    "desc": "建立內部處理制度及程序",
    "expr": [
      "EQ",
      "internal_handling_established",
      [
        "EQ",
        "internal_handling_established_flag",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_executed",
    "desc": "執行內部處理制度及程序",
    "expr": [
      "EQ",
      "internal_handling_executed",
      [
        "EQ",
        "internal_handling_executed_flag",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_ok",
    "desc": "內部控制及稽核制度建立且執行",
    "expr": [
      "EQ",
      "internal_control_ok",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_ok",
    "desc": "內部處理制度及程序建立且執行",
    "expr": [
      "EQ",
      "internal_handling_ok",
      [
        "AND",
        [
          "EQ",
          "internal_handling_established",
          true
        ],
        [
          "EQ",
          "internal_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_4_noncompliance",
    "desc": "資本嚴重不足且未依主管機關規定期限完成增資、改善計畫或合併",
    "expr": [
      "EQ",
      "capital_level_4_noncompliance",
      [
        "AND",
        [
          "EQ",
          "capital_level",
          4
        ],
        [
          "NOT",
          [
            "EQ",
            "capital_level_4_measures_completed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_deterioration",
    "desc": "財務或業務狀況顯著惡化且不能支付債務或有損及被保險人權益之虞",
    "expr": [
      "EQ",
      "financial_deterioration",
      [
        "EQ",
        "financial_deterioration_flag",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_submitted",
    "desc": "已提出財務或業務改善計畫並經主管機關核定",
    "expr": [
      "EQ",
      "improvement_plan_submitted",
      [
        "EQ",
        "improvement_plan_approved",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_not_effective",
    "desc": "損益、淨值加速惡化或輔導未改善，仍有惡化之虞",
    "expr": [
      "EQ",
      "improvement_plan_not_effective",
      [
        "EQ",
        "improvement_plan_not_effective_flag",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:regulatory_action_required",
    "desc": "需監管、接管、勒令停業清理或命令解散之處分",
    "expr": [
      "EQ",
      "regulatory_action_required",
      [
        "OR",
        [
          "EQ",
          "capital_level_4_noncompliance",
          true
        ],
        [
          "AND",
          [
            "NOT",
            [
              "EQ",
              "capital_level_4_noncompliance",
              true
            ]
          ],
          [
            "EQ",
            "financial_deterioration",
            true
          ],
          [
            "EQ",
            "improvement_plan_submitted",
            true
          ],
          [
            "EQ",
            "improvement_plan_not_effective",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_internal_control",
    "desc": "違反未建立或未執行內部控制及稽核制度",
    "expr": [
      "EQ",
      "violation_internal_control",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_internal_handling",
    "desc": "違反未建立或未執行內部處理制度及程序",
    "expr": [
      "EQ",
      "violation_internal_handling",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_handling_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反內部控制或內部處理制度規定時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "violation_internal_control",
          true
        ],
        [
          "EQ",
          "violation_internal_handling",
          true
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]