        [
          "EQ",
          "internal_operation_established",
          true
        ],
        [
          "EQ",
          "internal_operation_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_audit_staff_qualified",
    "desc": "內部稽核人員具備資格條件",
    "expr": [
      "EQ",
      "internal_audit_staff_qualified",
      [
        "AND",
        [
          "OR",
          [
            "GE",
            "audit_experience_years",
            2
          ],
          [
            "AND",
            [
              "EQ",
              "college_graduate",
              true
            ],
            [
              "OR",
              [
                "EQ",
                "passed_high_exam",
                true
              ],
              [
                "EQ",
                "passed_international_audit_exam",
                true
              ]
            ],
            [
              "GE",
              "financial_experience_years",
              2
            ]
          ],
          [
            "GE",
            "financial_experience_years",
            5
          ]
        ],
        [
          "LE",
          "specialized_staff_ratio",
          0.3333333
        ],
        [
          "NOT",
          [
            "EQ",
            "audit_staff_bad_record",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_audit_staff_leader_experience",
    "desc": "內部稽核人員領隊具備經驗條件",
    "expr": [
      "EQ",
      "internal_audit_staff_leader_experience",
      [
        "OR",
        [
          "GE",
          "audit_leader_audit_experience_years",
          3
        ],
        [
          "AND",
          [
            "GE",
            "audit_leader_audit_experience_years",
            1
          ],
          [
            "GE",
            "audit_leader_financial_experience_years",
            5
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_audit_staff_foreign_compliance",
    "desc": "國外營業單位內部稽核人員符合當地法令及主管機關要求",
    "expr": [
      "EQ",
      "internal_audit_staff_foreign_compliance",
      [
        "OR",
        [
          "EQ",
          "local_regulation_defined",
          false
        ],
        [
          "EQ",
          "foreign_audit_staff_selected_by_board",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_audit_staff_compliance",
    "desc": "內部稽核人員符合資格且無違反規定",
    "expr": [
      "EQ",
      "internal_audit_staff_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_audit_staff_qualified",
          true
        ],
        [
          "EQ",
          "internal_audit_staff_leader_experience",
          true
        ],
        [
          "EQ",
          "internal_audit_staff_foreign_compliance",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_audit_staff_no_violation_or_improved",
    "desc": "內部稽核人員無違反規定或已於二個月內改善",
    "expr": [
      "EQ",
      "internal_audit_staff_no_violation_or_improved",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_audit_staff_violation_found",
            true
          ]
        ],
        [
          "LE",
          "violation_improvement_days",
          60
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_control_compliance",
    "desc": "內部控制及稽核制度符合規定",
    "expr": [
      "EQ",
      "internal_control_compliance",
      [
        "AND",
        [
          "EQ",
          "internal_control_ok",
          true
        ],
        [
          "EQ",
          "internal_handling_ok",
          true
        ],
        [
          "EQ",
          "internal_operation_ok",
          true
        ],
        [
          "EQ",
          "internal_audit_staff_compliance",
          true
        ],
        [
          "EQ",
          "internal_audit_staff_no_violation_or_improved",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_control_supervision_effective",
    "desc": "內部控制制度監督作業有效",
    "expr": [
      "EQ",
      "internal_control_supervision_effective",
      [
        "AND",
        [
          "EQ",
          "control_environment_established",
          true
        ],
        [
          "EQ",
          "risk_assessment_performed",
          true
        ],
        [
          "EQ",
          "control_activities_executed",
          true
        ],
        [
          "EQ",
          "information_communication_effective",
          true
        ],
        [
          "EQ",
          "monitoring_activities_performed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：未建立或未確實執行內部控制、內部處理、內部作業制度或內部稽核人員資格不符且未改善時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_operation_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_audit_staff_compliance",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_audit_staff_no_violation_or_improved",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
]