[
  {
    "id": "insurance:capital_level_severe_insufficient",
    "desc": "資本等級嚴重不足",
    "expr": [
      "EQ",
      "capital_level_severe_insufficient",
      [
        "OR",
        [
          "LT",
          "capital_adequacy_ratio",
          50.0
        ],
        [
          "LT",
          "net_worth",
          0.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_significant_insufficient",
    "desc": "資本等級顯著不足",
    "expr": [
      "EQ",
      "capital_level_significant_insufficient",
      [
        "AND",
        [
          "GE",
          "capital_adequacy_ratio",
          50.0
        ],
        [
          "LT",
          "capital_adequacy_ratio",
          150.0
        ],
        [
          "GE",
          "net_worth_ratio",
          0.0
        ],
        [
          "LT",
          "net_worth_ratio",
          2.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_insufficient",
    "desc": "資本等級不足",
    "expr": [
      "EQ",
      "capital_level_insufficient",
      [
        "AND",
        [
          "GE",
          "capital_adequacy_ratio",
          150.0
        ],
        [
          "LT",
          "capital_adequacy_ratio",
          200.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_adequate",
    "desc": "資本等級適足",
    "expr": [
      "EQ",
      "capital_level_adequate",
      [
        "GE",
        "capital_adequacy_ratio",
        200.0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足, 0=未分類）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_severe_measures_completed",
    "desc": "嚴重不足等級增資、財務或業務改善計畫或合併完成",
    "expr": [
      "EQ",
      "capital_level_severe_measures_completed",
      [
        "AND",
        [
          "EQ",
          "capital_level_severe_insufficient",
          true
        ],
        [
          "EQ",
          "capital_increase_completed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_severe_measures_within_deadline",
    "desc": "嚴重不足等級增資、財務或業務改善計畫或合併於主管機關規定期限內完成",
    "expr": [
      "EQ",
      "capital_level_severe_measures_within_deadline",
      [
        "AND",
        [
          "EQ",
          "capital_level_severe_insufficient",
          true
        ],
        [
          "EQ",
          "capital_increase_within_deadline",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_or_business_deterioration",
    "desc": "財務或業務狀況顯著惡化且不能支付債務或履行契約責任或有損及被保險人權益之虞",
    "expr": [
      "EQ",
      "financial_or_business_deterioration",
      [
        "OR",
        [
          "EQ",
          "cannot_pay_debt",
          true
        ],
        [
          "EQ",
          "cannot_fulfill_contract",
          true
        ],
        [
          "EQ",
          "risk_to_insured_interest",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_submitted_and_approved",
    "desc": "提出財務或業務改善計畫並經主管機關核定",
    "expr": [
      "EQ",
      "improvement_plan_submitted_and_approved",
      [
        "AND",
        [
          "EQ",
          "improvement_plan_submitted",
          true
        ],
        [
          "EQ",
          "improvement_plan_approved",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_accelerated_deterioration",
    "desc": "損益、淨值呈現加速惡化",
    "expr": [
      "EQ",
      "improvement_plan_accelerated_deterioration",
      [
        "EQ",
        "profit_loss_net_worth_accelerated_deterioration",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_not_improved_after_guidance",
    "desc": "經輔導仍未改善",
    "expr": [
      "EQ",
      "improvement_plan_not_improved_after_guidance",
      [
        "EQ",
        "improvement_plan_not_improved",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:supervisory_measures_applicable",
    "desc": "主管機關得依情節輕重為監管、接管、勒令停業清理或命令解散之處分",
    "expr": [
      "EQ",
      "supervisory_measures_applicable",
      [
        "OR",
        [
          "AND",
          [
            "NOT",
            [
              "EQ",
              "capital_level_severe_insufficient",
              true
            ]
          ],
          [
            "EQ",
            "financial_or_business_deterioration",
            true
          ],
          [
            "EQ",
            "improvement_plan_submitted_and_approved",
            true
          ],
          [
            "OR",
            [
              "EQ",
              "improvement_plan_accelerated_deterioration",
              true
            ],
            [
              "EQ",
              "improvement_plan_not_improved_after_guidance",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level_severe_insufficient",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_level_severe_measures_within_deadline",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:supervisory_measures_executed",
    "desc": "主管機關為監管、接管、勒令停業清理或命令解散之處分已執行",
    "expr": [
      "EQ",
      "supervisory_measures_executed",
      [
        "EQ",
        "supervisory_measures_applicable",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:insurance_business_permitted",
    "desc": "保險業經主管機關許可並依法設立登記、繳存保證金及領得營業執照後開始營業",
    "expr": [
      "EQ",
      "insurance_business_permitted",
      [
        "AND",
        [
          "EQ",
          "license_permitted",
          true
        ],
        [
          "EQ",
          "registration_completed",
          true
        ],
        [
          "EQ",
          "deposit_guarantee_completed",
          true
        ],
        [
          "EQ",
          "business_license_obtained",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:insurance_business_not_permitted",
    "desc": "保險業未經主管機關許可或未依法設立登記、繳存保證金或未領得營業執照不得開始營業",
    "expr": [
      "EQ",
      "insurance_business_not_permitted",
      [
        "NOT",
        [
          "EQ",
          "insurance_business_permitted",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:premium_collection_compliant",
    "desc": "保險業收取保費不得錯價、放佣或以不真實支出入帳",
    "expr": [
      "EQ",
      "premium_collection_compliant",
      [
        "AND",
        [
          "NOT",
          [
            "EQ",
            "premium_price_error",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "premium_commission_rebate",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "premium_false_accounting",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反資本嚴重不足未完成增資改善計畫、財務或業務狀況惡化未提出或未改善計畫、未經許可開始營業或錯誤收取保費時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "capital_level_severe_insufficient",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_level_severe_measures_within_deadline",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "financial_or_business_deterioration",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "improvement_plan_submitted_and_approved",
              true
            ]
          ]
        ],
        [
          "EQ",
          "insurance_business_not_permitted",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "premium_collection_compliant",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
]