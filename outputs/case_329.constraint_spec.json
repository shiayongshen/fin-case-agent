[
  {
    "id": "insurance:same_person_definition",
    "desc": "同一人定義為同一自然人或同一法人",
    "expr": [
      "EQ",
      "same_person",
      [
        "OR",
        [
          "EQ",
          "person_type",
          1
        ],
        [
          "EQ",
          "person_type",
          2
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:same_related_person_definition",
    "desc": "同一關係人定義包含本人、配偶、二親等以內血親及以本人或配偶為負責人之事業",
    "expr": [
      "EQ",
      "same_related_person",
      [
        "OR",
        [
          "EQ",
          "is_self",
          true
        ],
        [
          "EQ",
          "is_spouse",
          true
        ],
        [
          "LE",
          "blood_relation_degree",
          2
        ],
        [
          "EQ",
          "is_responsible_person_of_enterprise",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:same_related_enterprise_definition",
    "desc": "同一關係企業範圍適用公司法相關條文",
    "expr": [
      "EQ",
      "same_related_enterprise",
      [
        "EQ",
        "company_law_related_enterprise",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:loan_and_other_transaction_limit",
    "desc": "主管機關得限制保險業對同一人、同一關係人或同一關係企業之放款或其他交易",
    "expr": [
      "EQ",
      "loan_and_other_transaction_limit",
      [
        "EQ",
        "regulatory_limit_set",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:non_loan_transaction_limit",
    "desc": "主管機關得限制保險業與利害關係人從事放款以外之其他交易",
    "expr": [
      "EQ",
      "non_loan_transaction_limit",
      [
        "EQ",
        "regulatory_limit_non_loan_set",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_and_audit_established",
    "desc": "保險業應建立內部控制及稽核制度",
    "expr": [
      "EQ",
      "internal_control_and_audit_established",
      [
        "EQ",
        "internal_control_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_system_established",
    "desc": "保險業應建立資產品質評估、準備金提存、逾期放款、催收款清理、呆帳轉銷及保單招攬核保理賠之內部處理制度及程序",
    "expr": [
      "EQ",
      "internal_handling_system_established",
      [
        "EQ",
        "internal_handling_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_internal_control_penalty",
    "desc": "違反內部控制或稽核制度規定處罰",
    "expr": [
      "EQ",
      "violation_internal_control_penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violation_internal_handling_penalty",
    "desc": "違反內部處理制度或程序規定處罰",
    "expr": [
      "EQ",
      "violation_internal_handling_penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_handling_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著惡化, 4=嚴重不足）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "AND",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_4_measures_executed",
    "desc": "資本嚴重不足等級4應完成增資、財務或業務改善計畫或合併",
    "expr": [
      "EQ",
      "capital_level_4_measures_executed",
      [
        "EQ",
        "capital_level_4_measures_completed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_3_measures_executed",
    "desc": "資本顯著惡化等級3應完成主管機關核定之財務或業務改善計畫",
    "expr": [
      "EQ",
      "capital_level_3_measures_executed",
      [
        "EQ",
        "capital_level_3_measures_completed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_2_measures_executed",
    "desc": "資本不足等級2應完成主管機關核定之財務或業務改善計畫",
    "expr": [
      "EQ",
      "capital_level_2_measures_executed",
      [
        "EQ",
        "capital_level_2_measures_completed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:supervision_restriction",
    "desc": "主管機關對保險業監管處分限制營業或資金運用範圍等",
    "expr": [
      "EQ",
      "supervision_restriction",
      [
        "EQ",
        "supervision_imposed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "insurance:penalty_conditions",
    "desc": "處罰條件：違反內部控制、內部處理制度或資本不足且未完成改善計畫時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "violation_internal_control_penalty",
          true
        ],
        [
          "EQ",
          "violation_internal_handling_penalty",
          true
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            4
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_level_4_measures_executed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            3
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_level_3_measures_executed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            2
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_level_2_measures_executed",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]