[
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_4_noncompliance",
    "desc": "資本嚴重不足且未依規定期限完成增資、改善計畫或合併",
    "expr": [
      "EQ",
      "capital_level_4_noncompliance",
      [
        "AND",
        [
          "EQ",
          "capital_level",
          4
        ],
        [
          "NOT",
          [
            "EQ",
            "capital_level_4_compliance",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_4_compliance",
    "desc": "資本嚴重不足等級已依主管機關規定期限完成增資、財務或業務改善計畫或合併",
    "expr": [
      "EQ",
      "capital_level_4_compliance",
      [
        "EQ",
        "capital_level_4_measures_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_deterioration",
    "desc": "財務或業務狀況顯著惡化且不能支付債務或有損及被保險人權益之虞",
    "expr": [
      "EQ",
      "financial_deterioration",
      [
        "OR",
        [
          "EQ",
          "financial_or_business_deteriorated",
          true
        ],
        [
          "EQ",
          "unable_to_pay_debt",
          true
        ],
        [
          "EQ",
          "unable_to_fulfill_contract",
          true
        ],
        [
          "EQ",
          "risk_to_insured_interest",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:improvement_plan_submitted_and_approved",
    "desc": "已提出財務或業務改善計畫並經主管機關核定",
    "expr": [
      "EQ",
      "improvement_plan_submitted_and_approved",
      [
        "AND",
        [
          "EQ",
          "improvement_plan_submitted",
          true
        ],
        [
          "EQ",
          "improvement_plan_approved",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_deterioration_with_plan_not_improved",
    "desc": "損益、淨值加速惡化或經輔導仍未改善且有前述情事之虞",
    "expr": [
      "EQ",
      "financial_deterioration_with_plan_not_improved",
      [
        "AND",
        [
          "EQ",
          "financial_deterioration",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "profit_loss_net_worth_accelerated_deterioration",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "improvement_plan_effective",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:supervisory_measures_applicable",
    "desc": "主管機關得依情節輕重為監管、接管、勒令停業清理或命令解散之處分",
    "expr": [
      "EQ",
      "supervisory_measures_applicable",
      [
        "OR",
        [
          "EQ",
          "capital_level_4_noncompliance",
          true
        ],
        [
          "AND",
          [
            "EQ",
            "financial_deterioration_with_plan_not_improved",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:supervisory_measures_executed",
    "desc": "主管機關已對保險業為監管、接管、勒令停業清理或命令解散之處分",
    "expr": [
      "EQ",
      "supervisory_measures_executed",
      [
        "EQ",
        "supervisory_measures_applied",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:prohibited_acts_without_supervisor_consent",
    "desc": "保險業監管處分時，未經監管人同意不得為禁止行為",
    "expr": [
      "EQ",
      "prohibited_acts_without_supervisor_consent",
      [
        "AND",
        [
          "NOT",
          [
            "EQ",
            "supervisor_consent_payment_exceed_limit",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "supervisor_consent_contract_commitment",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "supervisor_consent_other_major_financial_matters",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "aml:internal_control_established",
    "desc": "建立洗錢防制內部控制與稽核制度",
    "expr": [
      "EQ",
      "aml_internal_control_established",
      [
        "AND",
        [
          "EQ",
          "aml_anti_money_laundering_procedures",
          true
        ],
        [
          "EQ",
          "aml_regular_training",
          true
        ],
        [
          "EQ",
          "aml_dedicated_personnel_assigned",
          true
        ],
        [
          "EQ",
          "aml_risk_assessment_report_updated",
          true
        ],
        [
          "EQ",
          "aml_audit_procedures",
          true
        ],
        [
          "EQ",
          "aml_other_designated_matters",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:internal_control_executed",
    "desc": "洗錢防制內部控制制度確實執行",
    "expr": [
      "EQ",
      "aml_internal_control_executed",
      [
        "EQ",
        "aml_internal_control_implemented",
        true
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:internal_control_compliance",
    "desc": "洗錢防制內部控制制度建立且確實執行",
    "expr": [
      "EQ",
      "aml_internal_control_compliance",
      [
        "AND",
        [
          "EQ",
          "aml_internal_control_established",
          true
        ],
        [
          "EQ",
          "aml_internal_control_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:improvement_order_issued",
    "desc": "主管機關限期令改善",
    "expr": [
      "EQ",
      "aml_improvement_order_issued",
      [
        "EQ",
        "aml_improvement_order",
        true
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:improvement_order_not_complied",
    "desc": "屆期未改善",
    "expr": [
      "EQ",
      "aml_improvement_order_not_complied",
      [
        "AND",
        [
          "EQ",
          "aml_improvement_order_issued",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "aml_improvement_completed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:inspection_refusal",
    "desc": "規避、拒絕或妨礙查核",
    "expr": [
      "EQ",
      "aml_inspection_refusal",
      [
        "EQ",
        "aml_inspection_refused",
        true
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反資本嚴重不足未完成增資或改善計畫，或財務惡化未改善，或洗錢防制制度未建立或未執行，或未依限改善，或妨礙查核時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "capital_level_4_noncompliance",
          true
        ],
        [
          "AND",
          [
            "EQ",
            "financial_deterioration_with_plan_not_improved",
            true
          ],
          [
            "NOT",
            [
              "EQ",
              "supervisory_measures_executed",
              true
            ]
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "aml_internal_control_compliance",
            true
          ]
        ],
        [
          "EQ",
          "aml_improvement_order_not_complied",
          true
        ],
        [
          "EQ",
          "aml_inspection_refusal",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
]