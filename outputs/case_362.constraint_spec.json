  },
  {
    "id": "bank:internal_operation_executed",
    "desc": "內部作業制度及程序確實執行",
    "expr": [
      "EQ",
      "internal_operation_executed",
      [
        "EQ",
        "internal_operation_system_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_control_ok",
    "desc": "內部控制及稽核制度建立且確實執行",
    "expr": [
      "EQ",
      "internal_control_ok",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_handling_ok",
    "desc": "內部處理制度及程序建立且確實執行",
    "expr": [
      "EQ",
      "internal_handling_ok",
      [
        "AND",
        [
          "EQ",
          "internal_handling_established",
          true
        ],
        [
          "EQ",
          "internal_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:internal_operation_ok",
    "desc": "內部作業制度及程序建立且確實執行",
    "expr": [
      "EQ",
      "internal_operation_ok",
      [
        "AND",
        [
          "EQ",
          "internal_operation_established",
          true
        ],
        [
          "EQ",
          "internal_operation_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:derivative_personnel_qualified",
    "desc": "衍生性金融商品業務人員具備專業資格條件",
    "expr": [
      "EQ",
      "derivative_personnel_qualified",
      [
        "OR",
        [
          "GE",
          "derivative_training_months",
          3
        ],
        [
          "EQ",
          "has_derivative_license",
          true
        ],
        [
          "GE",
          "derivative_internship_years",
          1
        ],
        [
          "GE",
          "derivative_experience_months",
          6
        ],
        [
          "OR",
          [
            "EQ",
            "has_structured_product_qualification",
            true
          ],
          [
            "EQ",
            "passed_structured_product_exam",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:foreign_exchange_permit_required",
    "desc": "外匯業務須經本行許可或完成函報備查程序",
    "expr": [
      "EQ",
      "foreign_exchange_permit_required",
      [
        "OR",
        [
          "EQ",
          "foreign_exchange_permit_obtained",
          true
        ],
        [
          "EQ",
          "foreign_exchange_filing_completed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "bank:foreign_exchange_derivative_permit_required",
    "desc": "外匯衍生性商品業務須依類別申請許可或函報備查",
    "expr": [
      "EQ",
      "foreign_exchange_derivative_permit_required",
      [
        "OR",
        [
          "EQ",
          "foreign_exchange_derivative_permit_applied",
          true
        ],
        [
          "EQ",
          "foreign_exchange_derivative_filing_completed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "bank"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：未依規定建立或執行內部控制、內部處理、內部作業制度及程序時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_operation_ok",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
]