[
  {
    "id": "insurance:violate_148_1_2",
    "desc": "違反第一百四十八條之一第一項或第二項規定",
    "expr": [
      "EQ",
      "violate_148_1_2",
      [
        "EQ",
        "violate_148_1_2_flag",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violate_148_2_1",
    "desc": "違反第一百四十八條之二第一項規定（未提供說明文件、文件未依規定記載或記載不實）",
    "expr": [
      "EQ",
      "violate_148_2_1",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "explanation_document_provided",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "explanation_document_compliant",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "explanation_document_truthful",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violate_148_2_2",
    "desc": "違反第一百四十八條之二第二項規定（未依限報告或公開說明，或報告內容不實）",
    "expr": [
      "EQ",
      "violate_148_2_2",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "reported_to_authority_on_time",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "public_explanation_made",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "report_content_truthful",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violate_148_3_1",
    "desc": "違反第一百四十八條之三第一項規定（未建立或未執行內部控制或稽核制度）",
    "expr": [
      "EQ",
      "violate_148_3_1",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violate_148_3_2",
    "desc": "違反第一百四十八條之三第二項規定（未建立或未執行內部處理制度或程序）",
    "expr": [
      "EQ",
      "violate_148_3_2",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_handling_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_4_noncompliance",
    "desc": "資本嚴重不足且未依主管機關規定期限完成增資、改善計畫或合併",
    "expr": [
      "EQ",
      "capital_level_4_noncompliance",
      [
        "AND",
        [
          "EQ",
          "capital_level",
          4
        ],
        [
          "NOT",
          [
            "EQ",
            "capital_level_4_remedial_completed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_2_3_deterioration",
    "desc": "資本等級非嚴重不足但財務或業務狀況顯著惡化且未改善",
    "expr": [
      "EQ",
      "capital_level_2_3_deterioration",
      [
        "AND",
        [
          "OR",
          [
            "EQ",
            "capital_level",
            3
          ],
          [
            "EQ",
            "capital_level",
            2
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "financial_business_improvement_approved",
            true
          ]
        ],
        [
          "OR",
          [
            "EQ",
            "financial_business_deterioration_accelerated",
            true
          ],
          [
            "EQ",
            "financial_business_deterioration_unimproved",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:supervision_measures_required",
    "desc": "主管機關得為監管、接管、勒令停業清理或命令解散之處分",
    "expr": [
      "EQ",
      "supervision_measures_required",
      [
        "OR",
        [
          "EQ",
          "capital_level_4_noncompliance",
          true
        ],
        [
          "EQ",
          "capital_level_2_3_deterioration",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
