          true
        ],
        [
          "EQ",
          "is_credit_cooperative",
          true
        ],
        [
          "EQ",
          "is_agricultural_credit_department",
          true
        ],
        [
          "EQ",
          "is_fisheries_credit_department",
          true
        ],
        [
          "EQ",
          "is_national_agricultural_bank",
          true
        ],
        [
          "EQ",
          "is_postal_financial_institution",
          true
        ],
        [
          "EQ",
          "is_bill_finance_company",
          true
        ],
        [
          "EQ",
          "is_credit_card_company",
          true
        ],
        [
          "EQ",
          "is_insurance_company",
          true
        ],
        [
          "EQ",
          "is_securities_firm",
          true
        ],
        [
          "EQ",
          "is_securities_investment_trust",
          true
        ],
        [
          "EQ",
          "is_securities_finance_company",
          true
        ],
        [
          "EQ",
          "is_securities_investment_advisor",
          true
        ],
        [
          "EQ",
          "is_securities_central_depository",
          true
        ],
        [
          "EQ",
          "is_futures_broker",
          true
        ],
        [
          "EQ",
          "is_trust_industry",
          true
        ],
        [
          "EQ",
          "is_other_designated_financial_institution",
          true
        ],
        [
          "EQ",
          "is_financing_lease_or_virtual_asset_service_provider",
          true
        ],
        [
          "EQ",
          "is_designated_non_financial_business_or_personnel",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "aml"
  },
  {
    "id": "aml:penalty_conditions",
    "desc": "處罰條件：違反洗錢防制法第7條規定未建立或未執行制度，或規避查核時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_executed",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "inspection_cooperation",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "fcp:penalty_conditions",
    "desc": "處罰條件：違反金融消費者保護法第30-1條規定之任一情形",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "violation_advertising",
          true
        ],
        [
          "EQ",
          "violation_consumer_data",
          true
        ],
        [
          "EQ",
          "violation_disclosure",
          true
        ],
        [
          "EQ",
          "violation_compensation",
          true
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "fcp:penalty_conditions_serious",
    "desc": "處罰條件：違反且情節重大者加重處罰",
    "expr": [
      "EQ",
      "penalty_heavy",
      [
        "AND",
        [
          "OR",
          [
            "EQ",
            "violation_advertising",
            true
          ],
          [
            "EQ",
            "violation_consumer_data",
            true
          ],
          [
            "EQ",
            "violation_disclosure",
            true
          ],
          [
            "EQ",
            "violation_compensation",
            true
          ]
        ],
        [
          "EQ",
          "serious_violation",
          true
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "trust:penalty_conditions",
    "desc": "處罰條件：信託業推介內容虛偽、隱匿或未依規定辦理",
    "expr": [
      "EQ",
      "penalty",
      [
        "EQ",
        "false_or_hidden_recommendation",
        true
      ]
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  }
]