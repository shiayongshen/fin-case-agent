[
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_ok",
    "desc": "建立並執行內部控制及稽核制度",
    "expr": [
      "EQ",
      "internal_control_ok",
      [
        "AND",
        [
          "EQ",
          "internal_control_established",
          true
        ],
        [
          "EQ",
          "internal_control_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_ok",
    "desc": "建立並執行內部處理制度及程序",
    "expr": [
      "EQ",
      "internal_handling_ok",
      [
        "AND",
        [
          "EQ",
          "internal_handling_established",
          true
        ],
        [
          "EQ",
          "internal_handling_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_4_noncompliance",
    "desc": "資本嚴重不足且未依主管機關規定期限完成增資、改善計畫或合併",
    "expr": [
      "EQ",
      "capital_level_4_noncompliance",
      [
        "AND",
        [
          "EQ",
          "capital_level",
          4
        ],
        [
          "NOT",
          [
            "EQ",
            "capital_level_4_measures_completed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:financial_deterioration_noncompliance",
    "desc": "財務或業務狀況顯著惡化且未提出或未核定改善計畫",
    "expr": [
      "EQ",
      "financial_deterioration_noncompliance",
      [
        "AND",
        [
          "EQ",
          "financial_deterioration",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "improvement_plan_approved",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:prohibited_actions_without_supervisor_consent",
    "desc": "監管處分期間未經監管人同意從事限制行為",
    "expr": [
      "EQ",
      "prohibited_actions_without_consent",
      [
        "OR",
        [
          "EQ",
          "exceed_payment_limit",
          true
        ],
        [
          "EQ",
          "enter_major_contract",
          true
        ],
        [
          "EQ",
          "other_major_financial_acts",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反內部控制或內部處理制度規定，或資本嚴重不足未完成改善，或財務惡化未核定改善計畫，或監管期間未經同意從事限制行為時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_ok",
            true
          ]
        ],
        "capital_level_4_noncompliance",
        "financial_deterioration_noncompliance",
        "prohibited_actions_without_consent"
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]