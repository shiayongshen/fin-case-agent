[
  {
    "id": "insurance:real_estate_investment_limit",
    "desc": "不動產投資總額除自用不動產外不得超過資金30%，自用不動產不得超過業主權益總額",
    "expr": [
      "EQ",
      "real_estate_investment_limit",
      [
        "AND",
        [
          "LE",
          [
            "SUB",
            "total_real_estate_investment",
            "self_use_real_estate_investment"
          ],
          [
            "MUL",
            "capital_fund",
            30.0
          ]
        ],
        [
          "LE",
          "self_use_real_estate_investment",
          "owner_equity"
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:real_estate_valuation_required",
    "desc": "不動產取得及處分應經合法鑑價機構評價",
    "expr": [
      "EQ",
      "real_estate_valuation_required",
      [
        "EQ",
        "real_estate_valuation_done",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:social_housing_exemption",
    "desc": "依住宅法興辦社會住宅且僅供租賃者，不受即時利用並有收益限制",
    "expr": [
      "EQ",
      "social_housing_exemption",
      [
        "EQ",
        "social_housing_only_rental",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:real_estate_investment_compliance",
    "desc": "不動產投資符合即時利用並有收益限制或符合社會住宅例外",
    "expr": [
      "EQ",
      "real_estate_investment_compliance",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "real_estate_in_use",
            true
          ],
          [
            "EQ",
            "real_estate_has_income",
            true
          ]
        ],
        [
          "EQ",
          "social_housing_only_rental",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:loan_type_limit",
    "desc": "放款類型限銀行或主管機關認可信用保證機構保證、以動產不動產擔保、有價證券質押、人壽保險單質押",
    "expr": [
      "EQ",
      "loan_type_limit",
      [
        "OR",
        [
          "EQ",
          "loan_guaranteed_by_bank_or_authority",
          true
        ],
        [
          "EQ",
          "loan_secured_by_property",
          true
        ],
        [
          "EQ",
          "loan_secured_by_approved_securities",
          true
        ],
        [
          "EQ",
          "loan_secured_by_life_insurance_policy",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:single_loan_amount_limit",
    "desc": "每一單位放款金額不得超過資金5%",
    "expr": [
      "EQ",
      "single_loan_amount_limit",
      [
        "LE",
        "single_loan_amount",
        [
          "MUL",
          "capital_fund",
          5.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:total_loan_amount_limit",
    "desc": "放款總額不得超過資金35%",
    "expr": [
      "EQ",
      "total_loan_amount_limit",
      [
        "LE",
        "total_loan_amount",
        [
          "MUL",
          "capital_fund",
          35.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:related_party_loan_guarantee",
    "desc": "對負責人、職員、主要股東及利害關係人擔保放款應有十足擔保且條件不得優於其他同類放款",
    "expr": [
      "EQ",
      "related_party_loan_guarantee",
      [
        "AND",
        [
          "EQ",
          "related_party_loan_fully_secured",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "related_party_loan_better_terms",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:related_party_loan_approval",
    "desc": "利害關係人放款達規定金額以上須董事會三分之二出席且四分之三同意",
    "expr": [
      "EQ",
      "related_party_loan_approval",
      [
        "IMPLIES",
        [
          "GE",
          "related_party_loan_amount",
          "authority_threshold_amount"
        ],
        [
          "AND",
          [
            "GE",
            "board_attendance_ratio",
            0.6666667
          ],
          [
            "GE",
            "board_approval_ratio",
            0.75
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:combined_investment_limit",
    "desc": "有價證券投資與以該公司有價證券為質放款合併計算不得超過資金10%及該公司業主權益10%",
    "expr": [
      "EQ",
      "combined_investment_limit",
      [
        "AND",
        [
          "LE",
          "combined_investment_amount",
          [
            "MUL",
            "capital_fund",
            10.0
          ]
        ],
        [
          "LE",
          "combined_investment_amount",
          [
            "MUL",
            "issuer_owner_equity",
            10.0
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:foreign_investment_types",
    "desc": "國外投資限外匯存款、國外有價證券、核准保險相關事業投資及其他核准投資",
    "expr": [
      "EQ",
      "foreign_investment_types",
      [
        "OR",
        [
          "EQ",
          "foreign_investment_foreign_currency_deposit",
          true
        ],
        [
          "EQ",
          "foreign_investment_foreign_securities",
          true
        ],
        [
          "EQ",
          "foreign_investment_approved_insurance_related",
          true
        ],
        [
          "EQ",
          "foreign_investment_other_approved",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:foreign_investment_limit",
    "desc": "國外投資總額最高不得超過資金45%，特定金額及項目不計入限額",
    "expr": [
      "EQ",
      "foreign_investment_limit",
      [
        "LE",
        "foreign_investment_total",
        [
          "MUL",
          "capital_fund",
          45.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:foreign_investment_exclusions",
    "desc": "特定投資金額不計入國外投資限額",
    "expr": [
      "EQ",
      "foreign_investment_exclusions",
      [
        "AND",
        [
          "EQ",
          "foreign_investment_non_investment_life_insurance_approved",
          true
        ],
        [
          "EQ",
          "foreign_investment_domestic_foreign_currency_securities",
          true
        ],
        [
          "EQ",
          "foreign_investment_approved_foreign_insurance_related",
          true
        ],
        [
          "EQ",
          "foreign_investment_other_approved_items",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:related_party_loan_and_transaction_limit",
    "desc": "主管機關得限制同一人、關係人及關係企業放款及其他交易之限額及範圍",
    "expr": [
      "EQ",
      "related_party_loan_and_transaction_limit",
      [
        "EQ",
        "authority_limit_related_party_loan_and_transaction",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:prohibited_shareholder_rights_actions",
    "desc": "不得以信託、委任等方式進行股權交換或利益輸送，不得損及要保人利益",
    "expr": [
      "EQ",
      "prohibited_shareholder_rights_actions",
      [
        "NOT",
        [
          "EQ",
          "shareholder_rights_prohibited_actions",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:shareholder_meeting_vote_documentation",
    "desc": "出席股東會前應作表決權評估分析，會後應提報董事會書面紀錄",
    "expr": [
      "EQ",
      "shareholder_meeting_vote_documentation",
      [
        "AND",
        [
          "EQ",
          "vote_evaluation_done_before_meeting",
          true
        ],
        [
          "EQ",
          "vote_record_reported_after_meeting",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:proxy_prohibition",
    "desc": "不得擔任被投資公司委託書徵求人或委託他人擔任",
    "expr": [
      "EQ",
      "proxy_prohibition",
      [
        "NOT",
        [
          "EQ",
          "proxy_agent_appointed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_control_established",
    "desc": "建立內部控制及稽核制度",
    "expr": [
      "EQ",
      "internal_control_established",
      [
        "EQ",
        "internal_control_system_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:internal_handling_established",
    "desc": "建立資產品質評估、準備金提存、逾期放款等內部處理制度及程序",
    "expr": [
      "EQ",
      "internal_handling_established",
      [
        "EQ",
        "internal_handling_system_established",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:supervisory_measures_classification",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "GE",
          "capital_adequacy_ratio",
          200.0
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:supervisory_measures_penalty",
    "desc": "處分條件：資本嚴重不足且未依主管機關規定完成增資或改善計畫",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "capital_level",
            4
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_increase_or_improvement_completed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            3
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_increase_or_improvement_completed",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  }
]