    "expr": [
      "EQ",
      "solicitation_underwriting_claims_compliance",
      [
        "EQ",
        "solicitation_underwriting_claims_systems_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:solicitation_underwriting_claims_personnel_compliance",
    "desc": "招攬、核保及理賠人員依規定執行業務",
    "expr": [
      "EQ",
      "solicitation_underwriting_claims_personnel_compliance",
      [
        "EQ",
        "personnel_performance_compliant",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 0,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：未建立或未執行內部控制或稽核制度，或未建立或未執行內部處理制度或程序，或招攬核保理賠人員未依規定執行業務時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_ok",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "solicitation_underwriting_claims_personnel_compliance",
            true
          ]
        ]
      ]
    ],
    "weight": 0,
    "domain": "meta"
  }
]