    "expr": [
      "EQ",
      "underwriting_training_compliance",
      [
        "EQ",
        "underwriting_training_completed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:underwriting_system_compliance",
    "desc": "訂定核保處理制度及程序並符合第7條規定",
    "expr": [
      "EQ",
      "underwriting_system_compliance",
      [
        "EQ",
        "underwriting_system_established_and_compliant",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:underwriting_execution_compliance",
    "desc": "確實執行核保處理制度及程序",
    "expr": [
      "EQ",
      "underwriting_execution_compliance",
      [
        "EQ",
        "underwriting_system_executed",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:solicitation_underwriting_claims_compliance",
