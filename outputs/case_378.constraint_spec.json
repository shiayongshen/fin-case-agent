[
  {
    "id": "insurance:capital_level",
    "desc": "資本等級分類（1=適足, 2=不足, 3=顯著不足, 4=嚴重不足）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            [
              "MUL",
              [
                "DIV",
                "own_capital",
                "risk_capital"
              ],
              100.0
            ],
            25.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            [
              "MUL",
              [
                "DIV",
                "own_capital",
                "risk_capital"
              ],
              100.0
            ],
            25.0
          ],
          [
            "LT",
            [
              "MUL",
              [
                "DIV",
                "own_capital",
                "risk_capital"
              ],
              100.0
            ],
            100.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            [
              "MUL",
              [
                "DIV",
                "own_capital",
                "risk_capital"
              ],
              100.0
            ],
            100.0
          ],
          [
            "LT",
            "net_worth_ratio",
            100.0
          ]
        ],
        2,
        [
          "AND",
          [
            "GE",
            [
              "MUL",
              [
                "DIV",
                "own_capital",
                "risk_capital"
              ],
              100.0
            ],
            100.0
          ],
          [
            "GE",
            "net_worth_ratio",
            100.0
          ]
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_ratio_minimum",
    "desc": "自有資本與風險資本比率不得低於一定比率",
    "expr": [
      "EQ",
      "capital_ratio_minimum",
      [
        "GE",
        [
          "MUL",
          [
            "DIV",
            "own_capital",
            "risk_capital"
          ],
          100.0
        ],
        "minimum_capital_ratio"
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:net_worth_ratio_minimum",
    "desc": "淨值比率不得低於一定比率",
    "expr": [
      "EQ",
      "net_worth_ratio_minimum",
      [
        "GE",
        "net_worth_ratio",
        "minimum_net_worth_ratio"
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_reporting_compliance",
    "desc": "保險業依規定申報資本等級相關資訊",
    "expr": [
      "EQ",
      "capital_reporting_compliance",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "annual_report_submitted",
            true
          ],
          [
            "LE",
            "annual_report_submission_days",
            90
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "semiannual_report_submitted",
            true
          ],
          [
            "LE",
            "semiannual_report_submission_days",
            60
          ]
        ],
        [
          "EQ",
          "under_supervision",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：資本比率或淨值比率低於最低標準，或未依規定申報資本等級資訊時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "capital_ratio_minimum",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "net_worth_ratio_minimum",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "capital_reporting_compliance",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
]