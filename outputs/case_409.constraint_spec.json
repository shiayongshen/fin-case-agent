[
  {
    "id": "insurance:license_required",
    "desc": "保險代理人、經紀人、公證人須經主管機關許可並領有執業證照",
    "expr": [
      "EQ",
      "license_required",
      [
        "AND",
        [
          "EQ",
          "approved_by_authority",
          true
        ],
        [
          "EQ",
          "license_held",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:deposit_and_insurance_required",
    "desc": "須繳存保證金並投保相關保險",
    "expr": [
      "EQ",
      "deposit_and_insurance_required",
      [
        "AND",
        [
          "EQ",
          "deposit_paid",
          true
        ],
        [
          "EQ",
          "insurance_purchased",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:insurance_type_required",
    "desc": "保險代理人、公證人須投保責任保險，保險經紀人須投保責任保險及保證保險",
    "expr": [
      "EQ",
      "insurance_type_required",
      [
        "OR",
        [
          "AND",
          [
            "EQ",
            "agent_or_notary",
            true
          ],
          [
            "EQ",
            "liability_insurance",
            true
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "broker",
            true
          ],
          [
            "EQ",
            "liability_insurance",
            true
          ],
          [
            "EQ",
            "guarantee_insurance",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:business_allowed",
    "desc": "領有執業證照且繳存保證金並投保相關保險後，始得經營或執行業務",
    "expr": [
      "EQ",
      "business_allowed",
      [
        "AND",
        [
          "EQ",
          "license_required",
          true
        ],
        [
          "EQ",
          "deposit_and_insurance_required",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:bank_permitted",
    "desc": "銀行經主管機關許可得擇一兼營保險代理人或保險經紀人業務，並分別準用相關規定",
    "expr": [
      "EQ",
      "bank_permitted",
      [
        "AND",
        [
          "EQ",
          "bank_approved_by_authority",
          true
        ],
        [
          "OR",
          [
            "EQ",
            "bank_as_agent",
            true
          ],
          [
            "EQ",
            "bank_as_broker",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_duty_of_care",
    "desc": "保險經紀人應以善良管理人注意義務及忠實義務為被保險人洽訂保險契約或提供服務",
    "expr": [
      "EQ",
      "broker_duty_of_care",
      [
        "AND",
        [
          "EQ",
          "broker",
          true
        ],
        [
          "EQ",
          "duty_of_care_exercised",
          true
        ],
        [
          "EQ",
          "duty_of_loyalty_exercised",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:broker_report_and_fee_disclosure",
    "desc": "保險經紀人於主管機關指定範圍內洽訂契約前，應主動提供書面分析報告，收取報酬者應明確告知報酬標準",
    "expr": [
      "EQ",
      "broker_report_and_fee_disclosure",
      [
        "IMPLIES",
        [
          "EQ",
          "broker",
          true
        ],
        [
          "AND",
          [
            "EQ",
            "written_report_provided",
            true
          ],
          [
            "IMPLIES",
            [
              "EQ",
              "fee_charged",
              true
            ],
            [
              "EQ",
              "fee_disclosed",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:illegal_operation_penalty",
    "desc": "未依規定代理、經紀或招攬保險業務者違法",
    "expr": [
      "EQ",
      "illegal_operation",
      [
        "NOT",
        [
          "OR",
          [
            "EQ",
            "license_required",
            true
          ],
          [
            "EQ",
            "business_allowed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:unlicensed_operation_penalty",
    "desc": "未領有執業證照而經營或執行保險代理人、經紀人、公證人業務",
    "expr": [
      "EQ",
      "unlicensed_operation",
      [
        "AND",
        [
          "NOT",
          [
            "EQ",
            "license_held",
            true
          ]
        ],
        [
          "OR",
          [
            "EQ",
            "agent",
            true
          ],
          [
            "EQ",
            "broker",
            true
          ],
          [
            "EQ",
            "notary",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反非法經營或未領執業證照經營業務時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "illegal_operation",
          true
        ],
        [
          "EQ",
          "unlicensed_operation",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
]