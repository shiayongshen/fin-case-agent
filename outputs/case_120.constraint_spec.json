[
  {
    "id": "insurance:capital_level",
    "desc": "保險業資本等級分類（1=資本適足, 2=資本不足, 3=資本顯著不足, 4=資本嚴重不足）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "net_worth",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "OR",
          [
            "AND",
            [
              "GE",
              "capital_adequacy_ratio",
              150.0
            ],
            [
              "LT",
              "capital_adequacy_ratio",
              200.0
            ]
          ],
          [
            "AND",
            [
              "LT",
              "net_worth_ratio",
              3.0
            ],
            [
              "GE",
              "net_worth_ratio",
              2.0
            ]
          ]
        ],
        2,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            200.0
          ],
          [
            "OR",
            [
              "GE",
              "net_worth_ratio",
              3.0
            ],
            [
              "GE",
              "net_worth_ratio_prev",
              3.0
            ]
          ]
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violate_148_1_2",
    "desc": "違反保險法第148條之一第一項或第二項規定",
    "expr": [
      "EQ",
      "violate_148_1_2",
      [
        "EQ",
        "violate_148_1_2_flag",
        true
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violate_148_2_1",
    "desc": "違反保險法第148條之二第一項規定（未提供說明文件供查閱、或說明文件未依規定記載或記載不實）",
    "expr": [
      "EQ",
      "violate_148_2_1",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "explanation_document_provided",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "explanation_document_compliant",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "explanation_document_truthful",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violate_148_2_2",
    "desc": "違反保險法第148條之二第二項規定（未依限向主管機關報告或主動公開說明，或報告或公開說明內容不實）",
    "expr": [
      "EQ",
      "violate_148_2_2",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "report_to_authority_on_time",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "public_explanation_made",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "report_content_truthful",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violate_148_3_1",
    "desc": "違反保險法第148條之三第一項規定（未建立或未執行內部控制或稽核制度）",
    "expr": [
      "EQ",
      "violate_148_3_1",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_control_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_control_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:violate_148_3_2",
    "desc": "違反保險法第148條之三第二項規定（未建立或未執行內部處理制度或程序）",
    "expr": [
      "EQ",
      "violate_148_3_2",
      [
        "OR",
        [
          "NOT",
          [
            "EQ",
            "internal_handling_established",
            true
          ]
        ],
        [
          "NOT",
          [
            "EQ",
            "internal_handling_executed",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_insufficient_measures_executed",
    "desc": "資本不足等級2應採取之措施已執行",
    "expr": [
      "EQ",
      "capital_insufficient_measures_executed",
      [
        "AND",
        [
          "EQ",
          "improvement_plan_submitted",
          true
        ],
        [
          "EQ",
          "improvement_plan_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_significantly_insufficient_measures_executed",
    "desc": "資本顯著不足等級3應採取之措施已執行",
    "expr": [
      "EQ",
      "capital_significantly_insufficient_measures_executed",
      [
        "AND",
        [
          "EQ",
          "capital_insufficient_measures_executed",
          true
        ],
        [
          "EQ",
          "responsible_person_removed",
          true
        ],
        [
          "EQ",
          "responsible_person_duty_suspended",
          true
        ],
        [
          "EQ",
          "special_asset_disposal_approved",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_severely_insufficient_measures_executed",
    "desc": "資本嚴重不足等級4應採取之措施已執行",
    "expr": [
      "EQ",
      "capital_severely_insufficient_measures_executed",
      [
        "AND",
        [
          "EQ",
          "capital_significantly_insufficient_measures_executed",
          true
        ],
        [
          "EQ",
          "supervisory_measures_taken",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：違反任一規定或資本不足且未執行對應措施時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "violate_148_1_2",
          true
        ],
        [
          "EQ",
          "violate_148_2_1",
          true
        ],
        [
          "EQ",
          "violate_148_2_2",
          true
        ],
        [
          "EQ",
          "violate_148_3_1",
          true
        ],
        [
          "EQ",
          "violate_148_3_2",
          true
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            4
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_severely_insufficient_measures_executed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            3
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_significantly_insufficient_measures_executed",
              true
            ]
          ]
        ],
        [
          "AND",
          [
            "EQ",
            "capital_level",
            2
          ],
          [
            "NOT",
            [
              "EQ",
              "capital_insufficient_measures_executed",
              true
            ]
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
]