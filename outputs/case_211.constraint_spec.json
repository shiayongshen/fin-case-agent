  {
    "id": "public_company:asset_transaction_reporting_required",
    "desc": "公開發行公司與關係人取得或處分資產達一定金額須提交董事會及監察人承認",
    "expr": [
      "EQ",
      "asset_transaction_reporting_required",
      [
        "OR",
        [
          "GE",
          "transaction_amount",
          [
            "MUL",
            "paid_in_capital",
            0.2
          ]
        ],
        [
          "GE",
          "transaction_amount",
          [
            "MUL",
            "total_assets",
            0.1
          ]
        ],
        [
          "GE",
          "transaction_amount",
          300000000.0
        ]
      ]
    ],
    "weight": 1,
    "domain": "public_company"
  },
  {
    "id": "public_company:asset_transaction_exclusion",
    "desc": "不包括買賣國內公債、附買回賣回條件債券及申購或買回國內證券投資信託事業貨幣市場基金",
    "expr": [
      "EQ",
      "asset_transaction_exclusion",
      [
        "NOT",
        [
          "OR",
          [
            "EQ",
            "transaction_type",
            "domestic_government_bond"
          ],
          [
            "EQ",
            "transaction_type",
            "repo_bond"
          ],
          [
            "EQ",
            "transaction_type",
            "money_market_fund"
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "public_company"
  },
  {
    "id": "public_company:asset_transaction_approval_required",
    "desc": "須提交董事會通過及監察人承認後始得簽訂交易契約及支付款項",
    "expr": [
      "EQ",
      "asset_transaction_approval_required",
      [
        "AND",
        [
          "EQ",
          "asset_transaction_reporting_required",
          true
        ],
        [
          "EQ",
          "asset_transaction_exclusion",
          true
        ],
        [
          "EQ",
          "board_approval",
          true
        ],
        [
          "EQ",
          "supervisor_approval",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "public_company"
  },
  {
    "id": "public_company:asset_transaction_shareholder_approval_required",
    "desc": "交易金額達總資產10%以上須提交股東會同意後始得簽訂交易契約及支付款項",
    "expr": [
      "EQ",
      "asset_transaction_shareholder_approval_required",
      [
        "AND",
        [
          "GE",
          "transaction_amount",
          [
            "MUL",
            "total_assets",
            0.1
          ]
        ],
        [
          "EQ",
          "board_approval",
          true
        ],
        [
          "EQ",
          "supervisor_approval",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "is_transaction_between_parent_subsidiaries",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "public_company"
