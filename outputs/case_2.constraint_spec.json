[
  {
    "id": "fhc:capital_increase_funding",
    "desc": "金融控股公司應於持股比例範圍內為子公司增資籌募資金",
    "expr": [
      "EQ",
      "capital_increase_funding",
      [
        "IMPLIES",
        [
          "EQ",
          "capital_increase_occurred",
          true
        ],
        [
          "EQ",
          "funding_raised_within_share_ratio",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:accumulated_loss_exceeds_limit",
    "desc": "金融控股公司累積虧損逾實收資本額三分之一",
    "expr": [
      "EQ",
      "accumulated_loss_exceeds_limit",
      [
        "GT",
        [
          "DIV",
          "accumulated_loss",
          "paid_in_capital"
        ],
        0.3333333333
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:board_meeting_held_and_reported",
    "desc": "累積虧損逾三分之一時召開董事會並通知監察人列席，並函報主管機關",
    "expr": [
      "EQ",
      "board_meeting_held_and_reported",
      [
        "AND",
        [
          "EQ",
          "accumulated_loss_exceeds_limit",
          true
        ],
        [
          "EQ",
          "board_meeting_held",
          true
        ],
        [
          "EQ",
          "supervisors_notified",
          true
        ],
        [
          "EQ",
          "report_to_authority_submitted",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:authority_orders_capital_replenishment",
    "desc": "主管機關限期令金融控股公司補足資本",
    "expr": [
      "EQ",
      "authority_orders_capital_replenishment",
      [
        "EQ",
        "accumulated_loss_exceeds_limit",
        true
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:capital_replenishment_approved_and_executed",
    "desc": "金融控股公司報經主管機關核准以累積虧損減資並辦理現金增資",
    "expr": [
      "EQ",
      "capital_replenishment_approved_and_executed",
      [
        "AND",
        [
          "EQ",
          "capital_replenishment_approved",
          true
        ],
        [
          "EQ",
          "capital_replenishment_executed",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:violation_occurred",
    "desc": "金融控股公司違反法令、章程或有礙健全經營之虞",
    "expr": [
      "EQ",
      "violation_occurred",
      [
        "EQ",
        "violation_flag",
        true
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:authority_imposes_sanctions",
    "desc": "主管機關依違反情節輕重，對金融控股公司採取處分",
    "expr": [
      "EQ",
      "authority_imposes_sanctions",
      [
        "OR",
        [
          "EQ",
          "sanction_revoke_meeting_resolution",
          true
        ],
        [
          "EQ",
          "sanction_suspend_subsidiary_business",
          true
        ],
        [
          "EQ",
          "sanction_remove_manager_or_staff",
          true
        ],
        [
          "EQ",
          "sanction_remove_director_or_supervisor",
          true
        ],
        [
          "EQ",
          "sanction_dispose_subsidiary_shares",
          true
        ],
        [
          "EQ",
          "sanction_revoke_license",
          true
        ],
        [
          "EQ",
          "sanction_other_measures",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:authority_notifies_economic_ministry",
    "desc": "主管機關通知經濟部廢止董事或監察人登記",
    "expr": [
      "EQ",
      "authority_notifies_economic_ministry",
      [
        "EQ",
        "sanction_remove_director_or_supervisor",
        true
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:license_revoked_disposal_and_dissolution",
    "desc": "廢止許可後未於期限內處分股份者，須解散清算",
    "expr": [
      "EQ",
      "license_revoked_disposal_and_dissolution",
      [
        "AND",
        [
          "EQ",
          "sanction_revoke_license",
          true
        ],
        [
          "NOT",
          [
            "EQ",
            "shares_disposed_within_deadline",
            true
          ]
        ],
        [
          "EQ",
          "dissolution_and_liquidation_ordered",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:subsidiary_capital_adequacy_below_minimum",
    "desc": "銀行、保險或證券子公司資本適足性比率未達主管機關規定最低標準",
    "expr": [
      "EQ",
      "subsidiary_capital_adequacy_below_minimum",
      [
        "LT",
        "subsidiary_capital_adequacy_ratio",
        "authority_minimum_capital_adequacy_ratio"
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:subsidiary_financial_condition_deteriorated",
    "desc": "銀行、保險或證券子公司業務或財務狀況顯著惡化，不能支付債務或有損及存款人利益之虞",
    "expr": [
      "EQ",
      "subsidiary_financial_condition_deteriorated",
      [
        "EQ",
        "subsidiary_financial_condition_bad",
        true
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:fhc_assists_subsidiary_recovery",
    "desc": "金融控股公司協助子公司回復正常營運",
    "expr": [
      "EQ",
      "fhc_assists_subsidiary_recovery",
      [
        "OR",
        [
          "EQ",
          "subsidiary_capital_adequacy_below_minimum",
          true
        ],
        [
          "EQ",
          "subsidiary_financial_condition_deteriorated",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "fhc:authority_orders_fhc_to_assist_or_dispose",
    "desc": "主管機關命金融控股公司履行協助義務或處分其他投資事業股份、營業或資產",
    "expr": [
      "EQ",
      "authority_orders_fhc_to_assist_or_dispose",
      [
        "AND",
        [
          "OR",
          [
            "EQ",
            "subsidiary_capital_adequacy_below_minimum",
            true
          ],
          [
            "EQ",
            "subsidiary_financial_condition_deteriorated",
            true
          ]
        ],
        [
          "EQ",
          "authority_order_issued",
          true
        ]
      ]
    ],
    "weight": 1,
    "domain": "fhc"
  },
  {
    "id": "insurance:capital_adequacy_ratio",
    "desc": "保險業資本適足率計算",
    "expr": [
      "EQ",
      "capital_adequacy_ratio",
      [
        "MUL",
        [
          "DIV",
          "own_capital",
          "risk_capital"
        ],
        100.0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:net_worth_ratio",
    "desc": "保險業淨值比率計算",
    "expr": [
      "EQ",
      "net_worth_ratio",
      [
        "MUL",
        [
          "DIV",
          "owner_equity",
          "total_assets_excluding_investment_type"
        ],
        100.0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level",
    "desc": "保險業資本等級分類（1=資本適足, 2=資本不足, 3=資本顯著不足, 4=資本嚴重不足, 0=未分類）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "owner_equity",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "OR",
            [
              "GE",
              "capital_adequacy_ratio",
              150.0
            ],
            [
              "LT",
              "capital_adequacy_ratio",
              200.0
            ]
          ]
        ],
        2,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            200.0
          ],
          [
            "GE",
            "net_worth_ratio",
            3.0
          ]
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "insurance:capital_level_corrected",
    "desc": "保險業資本等級分類修正（符合二等級以較低等級為準）",
    "expr": [
      "EQ",
      "capital_level",
      [
        "CASE",
        [
          "OR",
          [
            "LT",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "owner_equity",
            0.0
          ]
        ],
        4,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            50.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "GE",
            "net_worth_ratio",
            0.0
          ],
          [
            "LT",
            "net_worth_ratio",
            2.0
          ]
        ],
        3,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            150.0
          ],
          [
            "LT",
            "capital_adequacy_ratio",
            200.0
          ]
        ],
        2,
        [
          "AND",
          [
            "GE",
            "capital_adequacy_ratio",
            200.0
          ],
          [
            "GE",
            "net_worth_ratio",
            3.0
          ]
        ],
        1,
        0
      ]
    ],
    "weight": 1,
    "domain": "insurance"
  },
  {
    "id": "meta:penalty_default_false",
    "desc": "預設不處罰",
    "expr": [
      "EQ",
      "penalty",
      false
    ],
    "weight": 1,
    "domain": "meta"
  },
  {
    "id": "meta:penalty_conditions",
    "desc": "處罰條件：金融控股公司違反法令、章程或有礙健全經營之虞時處罰",
    "expr": [
      "EQ",
      "penalty",
      [
        "OR",
        [
          "EQ",
          "violation_occurred",
          true
        ],
        [
          "AND",
          [
            "EQ",
            "license_revoked_disposal_and_dissolution",
            true
          ]
        ]
      ]
    ],
    "weight": 1,
    "domain": "meta"
  }
]